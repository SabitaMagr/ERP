@{
    Layout = null;
}

<link href="@Styles.Url("~/Areas/NeoERP.QuotationManagement/Content/quotationSetup.css")" rel="stylesheet" />
<div class="col-md-12 bodyController" ng-controller="tenderSetup">
    <div class="portlet light form-fit bordered bottomspance">
        <div class="portlet box green-box main">
            <div class="portlet-title">
                <div class="caption">
                    <a class="btn-back pull-left" data-toggle="tooltip" data-placement="top" title="Back To Dashboard" href="/QuotationManagement/Home/Dashboard">
                        <i class="fa fa-arrow-circle-left"></i>
                    </a>
                    <i class="fa fa-gift font-white-haze"></i>
                    <span class="caption-subject font-white-haze bold uppercase">Tender Number Setup</span>
                </div>
            </div>

            <div class="portlet-body light bg-inverse">
                <div class="row" style="margin-top: 2rem; margin-bottom: 0.3rem;">
                    <div class="col-md-3">
                        <div class="topsearch" style="display: block;">
                            <input class="k-textbox txtSearchString" type="text" id="itemtxtSearchString" ng-model="txtSearchString" name="search" placeholder="Search...." />
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="actions text-right">
                            <a class="btn dark-green btn-sm addcolor" id="createbtn" ng-disabled="treenodeselected" ng-click="AddTender()" data-loading-text="<i class='fa fa-spinner fa-spin'></i> Processing..." href="javascript:;" style="margin-left: 81rem;">
                                <i class="fa fa-plus"></i> NEW
                            </a>
                        </div>
                    </div>
                </div>
                <div id="kGrid"></div>
            </div>
            <div class="modal fade-out" id="tenderModal" data-backdrop="static" tabindex="-1" data-width="760">
                <div class="modal-dialog modal-dialog-centered">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-hidden="true" next-on-tab>&times;</button>
                            <h4 class="modal-title">
                                <span class="fa fa-file"></span>
                                Tender Number Setup
                            </h4>

                        </div>

                        <div class="modal-body">
                            <form name="projectForm" class="form" method="post" ng-submit="submitTender()" enctype="multipart/form-data" id="projectForm" novalidate>
                                <input type="hidden" name="tenderId" id="tenderId" ng-model="ID">
                                <div class="form-group row">
                                    <label for="projectName" class="col-sm-3 col-form-label">Prefix Text</label>
                                    <div class="col-sm-7">
                                        <input type="text" class="form-control" ng-model="PREFIX" ng-readonly="panelMode === 'view'" required>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="startDate" class="col-sm-3 col-form-label">Suffix Text</label>
                                    <div class="col-sm-7">
                                        <input type="text" class="form-control" ng-model="SUFFIX" ng-readonly="panelMode === 'view'" required>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="endDate" class="col-sm-3 col-form-label">Body Length</label>
                                    <div class="col-sm-7">
                                        <input type="number" class="form-control" ng-readonly="panelMode === 'view'" ng-model="BODY_LENGTH">
                                    </div>
                                </div>
                                <input type="submit" class="hidden" id="btnProject" value="submit">
                            </form>
                        </div>

                        <div class="modal-footer">
                            <button type="button" class="btn btn-sm btn-green"  ng-hide="panelMode === 'view'"  id="savedocumentformdata" ng-click="saveTender()" data-loading-text="<i class='fa fa-spinner fa-spin '></i> Processing..." href="javascript:;">
                                <i class="fa fa-floppy-o"></i> Save
                            </button>
                            <button type="button" class="btn btn-sm btn-danger" ng-click="ItemCancel()" data-dismiss="modal">
                                <i class="fa-solid fa-xmark"></i> Cancel
                            </button>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

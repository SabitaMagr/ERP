@using NeoErp.Core;
@using NeoErp.Core.Infrastructure;
@{
    var workingContent = EngineContext.Current.Resolve<IWorkContext>
    ();
    Layout = null;
}
<link href="@Styles.Url(" ~/Areas/NeoERP.QuotationManagement/Content/salesinvoice.css")" rel="stylesheet" media="print" />
<link href="@Styles.Url(" ~/Areas/NeoERP.QuotationManagement/Content/salesinvoice.css")" rel="stylesheet" />


<style>
    .header, .header-space,
    .footers, .footer-spaces {
        height: 192px;
    }

    .header {
        position: fixed;
        top: 0;
    }

    .footer {
        /*position: fixed;*/
        position: relative;
        bottom: 0;
    }

    .page {
        page-break-after: always;
    }

    #background {
        position: fixed;
        top: 30%;
        z-index: 0;
        display: block;
        min-height: 50%;
        min-width: 50%;
    }

    #content {
        position: absolute;
        left: 75%;
        z-index: 1;
    }

    #bg-text {
        color: lightgrey;
        font-size: 60px;
        opacity: .4;
        transform: rotate(300deg);
        -webkit-transform: rotate(300deg);
    }
</style>


<div class="printable-modal">
    <table>
        <thead>
            <tr>
                <td>
                    <div class="header-space">
                        <div class="header">
                            <header class="p_header">
                                <div class="companylogo">
                                    <img alt="" src="~/Images/logo.png">
                                </div>

                                <div class="right-side">

                                    <table class="print_table consignee" style="margin-bottom:10px;">



                                        <tr>
                                            <td style=" text-align:left;">
                                                PAN No
                                            </td>
                                            <td style="text-align:left;">
                                                : {{PAN_NO}}
                                            </td>
                                        </tr>
                                        <tr>
                                            <td style=" text-align:left;">
                                                Party Name
                                            </td>
                                            <td style="text-align:left;">
                                                : {{PARTY_NAME}}
                                            </td>
                                          <tr>
                                            <td style=" text-align:left;">
                                                Address
                                            </td>
                                            <td style="text-align:left;">
                                                : {{ADDRESS}}
                                            </td>

                                        </tr>
                                        <tr>
                                            <td style=" text-align:left;">
                                                Contact No
                                            </td>
                                            <td style="text-align:left;">
                                                : {{CONTACT_NO}}
                                            </td>

                                        </tr>



                                        <tr>
                                            <td style="text-align:left">
                                                Email
                                            </td>
                                            <td style="text-align:left;">
                                                : {{EMAIL}}
                                            </td>
                                        </tr>
                                        <tr>
                                            <td style=" text-align:left;">
                                               Delivery Date
                                            </td>
                                            <td style="text-align:left;">
                                                : {{DELIVERY_DATE}}
                                            </td>

                                        </tr>

                                    </table>

                                </div>

                                <div class="left-side">
                                    <table class="print_table meta">

                                        <tr>
                                            <td style="width:35%;text-align:right;">
                                                Tender No:
                                            </td>
                                            <td style="width:20%;text-align:left;">
                                                QUOTATION_NO
                                            </td>
                                        </tr>
                                        <tr>
                                            <td style="width:35%;text-align:right;">
                                               To be Delivered Date:
                                            </td>
                                            <td style="width:20%;text-align:left;">
                                               {{VALID_DATE}}
                                            </td>
                                        </tr>
                                        <tr>
                                            <td style="width:35%;text-align:right;">
                                                Created date:
                                            </td>
                                            <td style="width:20%;text-align:left;">
                                                {{ISSUE_DATE}}
                                            </td>
                                        </tr>
                                        <tr>
                                            <td style="width:35%;text-align:right;">
                                               Currency:
                                            </td>
                                            <td style="width:20%;text-align:left;">
                                               NPR
                                            </td>
                                        </tr>



                                    </table>
                                </div>
                            </header>


                        </div>
                    </div>
                </td>
            </tr>
            <tr>
                <td>
                    <div id="background">
                        <p id="bg-text">{{printcounttext}}</p>
                    </div>
                </td>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td class="page" style="width:1000px !important;">
                    @*<div class="table-responsive">
                    *@

                    <table class="table print_table fnce">
                        <thead>
                            <tr>
                                @**@
                                <th style="width:48.5%;">Description of Goods</th>
                                @**@
                                <th style="width:7%;">Per</th>
                                @**@
                                <th style="width:10%;">Quantity</th>
                                @**@
                                <th style="width:10%;">Rate</th>
                                @**@
                                <th style="width:15%;">Amount</th>
                            </tr>
                        </thead>
                        <tbody>

                            @*<tr class="border-top-bottom" ng-repeat="(key,row) in print_body_col | orderBy: 'SERIAL_NO'" style="height:auto;">*@
                            <tr class="border-top-bottom" ng-repeat="product in productList">
                                <td>
                                    <span>{{product.ItemDescription}}</span>
                                </td>
                                <td style="width:7%;text-align:center;">
                                    <span>{{product.UNIT}}</span>
                                </td>
                                <td style="width: 10%; text-align: center;">
                                    <span>{{product.QUANTITY}}</span>
                                </td>
                                <td style="width: 10%; text-align: center; ">
                                    <span>{{product.RATE}}</span>
                                </td>
                                <td style="width: 15%; text-align: center; ">
                                    <span>{{product.AMOUNT}}</span>
                                </td>
                            </tr>
                            <tr style="height:auto;"></tr>
                            <tr>
                                <td style="text-align:right;border-right:0px;" colspan="3"></td>
                                <td style="border-right:0px;width:150px;white-space:nowrap;">Total</td>
                                <td style="width:100px; text-align:right;border-right:0px;">{{TOTAL_AMOUNT}}</td>
                            </tr>
                            <tr>
                                <td style="text-align:right;border-right:0px;" colspan="3"></td>
                                <td style="border-right:0px;width:150px;white-space:nowrap;">Discount</td>
                                <td style="width:100px; text-align:right;border-right:0px;">{{TOTAL_DISCOUNT}}</td>
                            </tr>
                            <tr>
                                <td style="text-align:right;border-right:0px;" colspan="3"></td>
                                <td style="border-right:0px;width:150px;white-space:nowrap;">Excise</td>
                                <td style="width:100px; text-align:right;border-right:0px;">{{TOTAL_EXCISE}}</td>
                            </tr>
                            <tr>
                                <td style="text-align:right;border-right:0px;" colspan="3"></td>
                                <td style="border-right:0px;width:150px;white-space:nowrap;">Taxable Amount</td>
                                <td style="width:100px; text-align:right;border-right:0px;">{{TOTAL_TAXABLE_AMOUNT}}</td>
                            </tr>
                            <tr>
                                <td style="text-align:right;border-right:0px;" colspan="3"></td>
                                <td style="border-right:0px;width:150px;white-space:nowrap;">VAT(13%)</td>
                                <td style="width:100px; text-align:right;border-right:0px;">{{TOTAL_VAT}}</td>
                            </tr>
                            <tr>
                                <td style="text-align:right;border-right:0px;" colspan="3"></td>
                                <td style="border-right:0px;width:150px;white-space:nowrap;">Grand Total</td>
                                <td style="width:100px; text-align:right;border-right:0px;">{{TOTAL_NET_AMOUNT}}</td>
                            </tr>
                            <tr>
                                <td style="text-align:right;border-right:0px;" colspan="2"></td>
                            </tr>


                        </tbody>
                    </table>

                    @*
                        </div>*@
                </td>
            </tr>
            <tr>
                <td>
                    <div><p style="font-weight:700">Grand Total(in words) : Rs. {{amountinword}} Only.</p></div>
                </td>
            </tr>
        </tbody>
        <tfoot>
            <tr>
                <td>
                    <div class="footer-space">
                        @*&nbsp;*@

                        <div class="footer">
                            <div class="invoice_footer">
                                @*<div class="narration">

                                    <p></p>
                                </div>*@

                                <div class="invoice_footer_details">
                                    <div style="text-align:right;margin-right:40px;">

                                        <div class="signature">
                                            <span>------------------------------</span>
                                            <p>Authorized Signature</p>

                                        </div>

                                    </div>

                                </div>
                                <div>
                                    @*<p style="font-size:10px;font-weight:600;" class="ff">I agree that I am personally liable for the above mentioned payment and if the person, company or association indicated by means being responsible for the payment. I understand that my liability shall be joint with such person, company or association if the amount is not received within 30 days. </p>*@
                                </div>

                                <div class="bottom-footer">
                                    <div class="printed_date">


                                        <div class="info" style="margin-top:20px; font-weight:700;">
                                            <h5 style="font-weight:700;">IMS Private Limited</h5>
                                            <P>(A Unit of Everest Hospitality & Hotel PVT. LTD.) </P>
                                            <P>Manakamana Marg, Naxal, Kathmandu, Nepal 44600 </P>
                                            <P>Tel +977 1444 3040 Fax:  +977 1444 2040 Web- www.marriott.com/KTMMC </P>

                                        </div>
   
                                        <div class="f1">
                                                <p style="float:left; display:inline-block;">User Name: @workingContent.CurrentUserinformation.login_code</p> 
                                                <p style="float:right;display:inline-block;"> Print Date and Time: {{printTodayDateTime | date:'yyyy-MM-dd hh:mm:ss a'}}</p>
                                        </div>
                                    </div>

                                </div>

                            </div>
                        </div>

                    </div>
                </td>
            </tr>
        </tfoot>
    </table>
</div>




<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Opera</title>
</head>


<body ng-controller="ThirdPartyApiCtrl">

    <div class="container" style="margin-top:50px;" >
        <div class="col-md-8 col-md-offset-2">

            @using (Html.BeginForm("UploadFile", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                <div class="form-group">
                    <div class="input-group input-file" name="file">
                        <span class="input-group-btn">
                            <button class="btn btn-default btn-choose" type="button">Choose</button>
                        </span>
                        <input type="text" class="form-control" placeholder='Choose a file...' />
                    </div>
                </div>

                <div class="form-group">
                    <input type="button" name="Submit" id="Submit" ng-click="OperaModalOpen()" class="btn btn-primary pull-right" value="Upload Opera File" />
                    <button type="reset" class="btn btn-danger">Reset</button>
                </div>
            }

        </div>
    </div>

    <div>
        <div class="btn-group">
            <a href="javascript:;" class="btn blue-soft btn-sm" id="btnrefrence" ng-click="CallShymphonyApi()">
                 Call Shymphony data
            </a>
        </div>
    
        <div class="modal fade-out" id="saveAndPrintModal" data-backdrop="static" tabindex="-1" data-width="760">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        @*<button type="button" class="close" data-dismiss="modal" aria-hidden="true" next-on-tab>&times;</button>*@
                        <h4 class="modal-title">
                            <span class="fa fa-print"></span>

                        </h4>
                    </div>

                    <div id="saveAndPrintModalFor" class="modal-body saveAndPrintModal main">
                        <form name="saveAndPrint" class="form-horizontal">
                            @Html.Partial("~/Areas/NeoERP.DocumentTemplate/Views/Shared/PrintTemplate/Sales/_salesInvoicePrintTemplate.cshtml")
                            @*@Html.Partial("~/Areas/NeoERP.DocumentTemplate/Views/Shared/SaveAndPrint/_SalesModulePrint.cshtml")*@

                        </form>
                    </div>

                    <div class="modal-footer">
                        <a ng-click="printDiv('saveAndPrintModalFor')" class="btn btn-sm btn-green" id="savedocumentformdata" data-loading-text="<i class='fa fa-spinner fa-spin '></i> Processing..." href="javascript:;">
                            <i class="fa fa-floppy-o"></i> Print
                        </a>
                        <a class="btn btn-sm btn-default" id="cancelPrint" @*ng-click="cancelPrint(event)*@ ng-click="refresh()" data-dismiss="modal">Cancel Print</a>
                    </div>
                </div>
            </div>
        </div>


    </div>

  
</body>
</html>

<script src="~/js/FileUpload.js"></script>

@{
    Layout = null;
    //Title = "Column Settings";
}
<style>
    .k-grid tbody tr {
        cursor: move;
    }

    .placeholder {
        outline-style: dashed;
        outline-width: 1px;
        outline-color: red;
    }
</style>

    <div class="row" id="columnSettingsCtrl">

        <div class="col-md-12">
            <div class="portlet light form-fit bordered bottomspance">
                <div class="portlet mingap">

                    <div class="portlet-title">

                        <div class="caption caption-title ng-binding">
                            <a class="btn-back pull-left" data-toggle="tooltip" data-placement="top" title="Back To Dashboard" href="/DocumentTemplate/Home/Dashboard">
                                <i class="fa fa-arrow-circle-left"></i>
                            </a>
                            <i class="fa fa-gift font-green-haze"></i>
                            <span class="caption-subject font-green-haze bold uppercase">{{FormName}}</span>
                        </div>

                        <div class="actions">

                            <a class="btn btn-success" data-toggle="tooltip" data-placement="top" ng-click="createNewPDCForm()" href="javascript:;">
                                <i class="fa fa-plus-circle"></i> New
                            </a>
                            <a class="btn btn-success" data-toggle="tooltip" data-placement="top" ng-click="saveNewPDCForm()" href="javascript:;">
                                <i class="fa fa-check-circle"></i> Ok
                            </a>

                        </div>

                    </div>


                    <div class="portlet-body">

                        <div class="row">

                            <div class="col-md-12 col-sm-12 form-group">
                                <div class="col-md-5 col-sm-5">
                                    <label for="element">Form Name:</label>
                                    <div class="btn-group">
                                        <div class="btn-group">
                                            <select class="form-control input-medium" ng-model="columnSettingsObj.FORM_NAME" name="ddlFormName" id="ddlFormName"
                                                    ng-options="id.FORM_EDESC for id in AllFormDetail">  @*ng-change="formDDLChange()"*@
                                                <option value="">Select Form</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-md-5 col-sm-5">
                                    <label for="element">Table Name:</label>
                                    <div class="btn-group">
                                        <div class="btn-group">
                                            <select class="form-control input-medium" ng-model="columnSettingsObj.TABLE_NAME" name="ddlTableName" id="ddlTableName"
                                                    ng-options="id.TABLE_NAME for id in AllTableDetail">
                                                <option value="">Select Table</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-md-2 col-sm-2">
                                    <div class="btn-group">
                                        <div class="btn-group">
                                            <button class="btn btn-green-light" ng-click="searchDataToEdit()">Search</button>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </div>

                        <div class="divider"></div>
                        <hr />
                        <div class="row">
                            <br />
                            <div class="col-md-12">
                                <kendo-grid id="columnSettingsGrid" options="columnSettingsGridOptions" k-rebind="columnSettingsGridOptions" class="kendo_gride_table">
                                </kendo-grid>
                            </div>
                        </div>

                    </div>


                </div>

             </div>
       </div>
    </div>

<script>
    $(function () {
        $('tbody').sortable();
    });
    
</script>

    <script type="text/x-kendo-template" id="template">
        <div class="refreshBtnContainer">
            <a href="\\#" class="k-pager-refresh k-link k-button k-button-icon" title="Refresh"><span class="k-icon k-i-reload"></span></a>
        </div>
        <div class="toolbar">
            <label class="category-label" for="category">Show products by category:</label>
            <input type="search" id="category" style="width: 150px" />
        </div>
    </script>


<style>

    .table-buttons
    {
        float:right;
        margin-top:5px;
    }
</style>

<div class="col-md-7">
   
        <div class="row">
            <div class="col-md-7">
                <div class="form-group clearfix">
                    <label class="col-md-5">Select the option:</label>
                    <div class="col-md-7">

                        <select id="options" k-value-primitive="true" name="options" k-ng-model="options" kendo-drop-down-list style="width: 100%"
                                k-options="optionsList" required></select>
                    </div>
                </div>
            </div>
            <div class="col-md-5">
                <div class="form-group clearfix">
                    <label class="col-md-5">Adjust Amt:</label>
                    <div class="col-md-7">
                        <input type="number" class="form-control" ng-model="it.REMAINING_AMOUNT" />
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12">
                <table class="table-bordered table-striped modal-table">
                    <thead>
                        <tr>
                            <th><label for="element">Reference No</label></th>
                            <th><label for="element">Manual No</label></th>
                            <th><label for="element">Date</label></th>
                            <th><label for="element">Bill Amt</label></th>
                            <th><label for="element">Due Amt</label></th>
                            <th><label for="element">Rec. Amt</label></th>

                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            @*<td>{{key}}|| {{$index}}</td>*@
                            <td> <input tye="text" class="form-control"  readonly /></td>
                            <td> <input tye="text" class="form-control"  readonly /></td>
                            <td> <input tye="text" class="form-control" readonly /></td>
                            <td><input type="text" class="form-control"  readonly /></td>
                            <td><input type="text" class="form-control" /></td>
                            <td> <input tye="text" class="form-control" /></td>

                        </tr>
                    </tbody>
                </table>
            </div>
            <div class="row">
                <div class="table-buttons">
                    <div class="col-md-8">
                        <div class="form-group">
                            <label class="col-md-5">Total Due Amt:</label>
                            <div class="col-md-7">
                                <input type="number" class="form-control" ng-model="it.REMAINING_AMOUNT" />
                            </div>
                        </div>

                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <div class="modal-buttons">
                                <button type="button" class="btn btn-primary btn-xs" data-dismiss="modal">Ok</button>
                                <button type="button" class="btn btn-default btn-xs" ng-click="CancelReference();">Cancel</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
                
        </div>

</div>

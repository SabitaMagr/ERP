<form id="TransporterForm" name="TransportersForm" novalidate>
 
       @* <div class="portlet box green-box">
    <div class="portlet-title">
          <div class="caption">
              <i class="fa fa-plus-square"></i>{{TransporterHeader}}
          </div>
      </div> 
            
        </div>*@
        <div class="portlet box green-box main">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-list-alt"></i>
                    <span class="caption-subject  bold uppercase">
                        Transporter
                    </span>
                </div>
                <div class="actions pull-right">

                    <button type="button" id="deleteTransporter" name="deleteTransporter" ng-model="btnDelete" ng-disabled="!btnDelete" ng-click="deleteTransporter(TransportersForm.$valid)"  class="btn btn-danger btn-sm">Delete</button>
                    <button type="button" id="saveTransporter" name="saveTransporter" ng-click="SaveTransporter(TransportersForm.$valid)" class="btn dark-green btn-sm">{{saveAction}}</button>
                    <button type="button" id="cancelTransporter" name="cancelTransporter" ng-click="Cancel()" class="btn btn-default btn-sm">New</button>

                </div>
            </div>

            <div class="portlet-body form-horizontal">

                <div class="row">
                    <div class="col-sm-12 col-md-6 col-lg-6">
                        <div class="form-group">
                            <label class="control-label col-sm-3 col-md-4 col-lg-4">
                                <input type="hidden" ng-model="Transporter.TRANSPORTERID" id="TransporterId" name="TransporterId">
                                Code<span style="color:red" ng-show="TransportersForm.TransporterCode.$invalid">
                                    <span ng-show="TransportersForm.TransporterCode.$error.required">*</span>
                                </span>
                            </label>
                            <div class="col-sm-9 col-md-8 col-lg-8">
                                <input class="form-control" type="text" name="TransporterCode" ng-model="Transporter.TRANSPORTER_CODE" id="TransporterCode" placeholder="Transporter Code"readonly>
                            </div>
                        </div>

                    </div>
                    <div class="col-sm-12 col-md-6 col-lg-6">
                        <div class="form-group">
                            <label class="control-label col-sm-3 col-md-4 col-lg-4">
                                Priority Index<span style="color:red" ng-show="TransportersForm.priorityindex.$invalid">
                                    <span ng-show="TransportersForm.priorityindex.$error.required">*</span>
                                </span>
                            </label>
                            <div class="col-sm-9 col-md-8 col-lg-8">
                                <input class="form-control" type="number" min="1" name="priorityindex" ng-model="Transporter.PRIORITY" id="priorityindex" placeholder="It should be less than 11 digit">
                            </div>
                        </div>

                    </div>
                    <div class="col-sm-12 col-md-6 col-lg-6">
                        <div class="form-group">
                            <label class="control-label col-sm-3 col-md-4 col-lg-4">
                                In English<span style="color:red" ng-show="TransportersForm.TransporterName.$invalid">
                                    <span ng-show="TransportersForm.TransporterName.$error.required">*</span>
                                </span>
                            </label>
                            <div class="col-sm-9 col-md-8 col-lg-8">
                                <input class="form-control" type="text" name="TransporterName" ng-model="Transporter.TRANSPORTER_EDESC" id="TransporterName" placeholder="Transporter english name"required >
                            </div>
                        </div>

                    </div>
                    <div class="col-sm-12 col-md-6 col-lg-6">
                        <div class="form-group">
                            <label class="control-label col-sm-3 col-md-4 col-lg-4">
                                Deposit Amount<span style="color:red" ng-show="TransportersForm.depositamount.$invalid">
                                       <span ng-show="TransportersForm.depositamount.$error.required">*</span>
                                            </span>
                            </label>
                            <div class="col-sm-9 col-md-8 col-lg-8">
                                <input class="form-control" type="number" name="depositamount" ng-model="Transporter.DEPOSIT_AMOUNT" id="depositamount" min="0" placeholder="Credit Limit"required>
                            </div>
                        </div>

                    </div>
                    <div class="col-sm-12 col-md-6 col-lg-6">
                        <div class="form-group">
                            <label class="control-label col-sm-3 col-md-4 col-lg-4">
                                In Nepali<span style="color:red" ng-show="TransportersForm.TransporterNName.$invalid">
                                    <span ng-show="TransportersForm.TransporterNName.$error.required">*</span>
                                </span>
                            </label>
                            <div class="col-sm-9 col-md-8 col-lg-8">
                                <input class="form-control" type="text" name="TransporterNName" ng-model="Transporter.TRANSPORTER_NDESC" id="TransporterNName" placeholder="Transporter nepali name">
                            </div>
                        </div>

                    </div>
                   
                    <div class="col-sm-12 col-md-6 col-lg-6">
                        <div class="form-group">
                            <label class="control-label col-sm-3 col-md-4 col-lg-4">
                                Phone No<span style="color:red" ng-show="TransportersForm.phoneno.$invalid || TransportersForm.phoneno.$error.pattern">
                                        <span ng-show="TransportersForm.phoneno.$error.required || TransportersForm.phoneno.$error.pattern">*</span>
                                          </span>

                            </label>
                            <div class="col-sm-9 col-md-8 col-lg-8">
                                <input class="form-control" type="text" name="phoneno" maxlength="10" ng-model="Transporter.PHONE_NO" id="phoneno" ng-pattern="phoneNumbr" placeholder="Phone No."required >
                            </div>
                        </div>

                    </div>
                    <div class="col-sm-12 col-md-6 col-lg-6">
                        <div class="form-group">
                            <label class="control-label col-sm-3 col-md-4 col-lg-4">
                                Propriter Name<span style="color:red" ng-show="TransportersForm.propritername.$invalid">
                                    <span ng-show="TransportersForm.propritername.$error.required">*</span>
                                </span>
                            </label>
                            <div class="col-sm-9 col-md-8 col-lg-8">
                                <input class="form-control" type="text" name="propritername" ng-model="Transporter.PROPRITER_NAME" id="propritername">
                            </div>
                        </div>

                    </div>
                   
                    <div class="col-sm-12 col-md-6 col-lg-6">
                        <div class="form-group">
                            <label class="control-label col-sm-3 col-md-4 col-lg-4">
                                Pan No<span style="color:red" ng-show="TransportersForm.panno.$invalid">
                                    <span ng-show="TransportersForm.panno.$error.required">*</span>
                                </span>
                            </label>
                            <div class="col-sm-9 col-md-8 col-lg-8">
                                <input class="form-control" type="text" name="panno" @*ng-pattern="pan1"*@ ng-model="Transporter.PAN_NO" id="panno" placeholder="Pan No"required  maxlength="9">@*<span class="error" ng-show="TransportersForm.panno.$error.pattern">valid pan card number</span>*@
                            </div>
                        </div>

                    </div>
             
                   
                    
                    <div class="col-sm-6 col-md-6 col-lg-6">
                        <div class="form-group">
                            <label class="control-label col-sm-4 col-md-4 col-lg-4">
                                Remarks
                            </label>
                            <div class="col-sm-9 col-md-8 col-lg-8">
                                <textarea class="form-control" type="text" rows="4" name="TransporterRemarks" ng-model="Transporter.REMARKS" id="TransporterRemarks" placeholder="some text"></textarea>
                            </div>
                        </div>
                    </div>
                  
                </div>

            </div>
        </div>
   

</form>

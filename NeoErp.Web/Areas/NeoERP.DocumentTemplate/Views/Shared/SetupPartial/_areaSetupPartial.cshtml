<form id="AreaForm" name="AreasForm" novalidate>
    @*<div class="panel-body custom-panel-body clearfix">*@
        @*<div class="portlet box green-box">
            <div class="portlet-title">
                <div class="caption adduser">
                    <i class="fa fa-plus-square"></i>{{AreaHeader}}
                </div>
            </div>
            
        </div>*@



        <div class="portlet box green-box main">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-plus-square"></i>
                    <span class="caption-subject bold uppercase">{{AreaHeader}}</span>
                </div>
                <div class="actions pull-right">

                    <button type="button" id="deleteArea" name="deleteArea" ng-model="btnDelete" ng-disabled="!btnDelete" ng-click="deleteArea(AreasForm.$valid)"  class="btn btn-danger btn-sm">Delete</button>
                    <button type="button" id="saveArea" name="saveArea" ng-click="SaveArea(AreasForm.$valid)" class="btn dark-green btn-sm">{{saveAction}}</button>
                    <button type="button" id="cancelArea" name="cancelArea" ng-click="Cancel()" class="btn btn-default btn-sm">New</button>

                </div>
            </div>

            <div class="portlet-body form-horizontal">

                <div class="row">
                    <div class="col-sm-6 col-md-6 col-lg-6">
                        <div class="form-group">
                            <label class="control-label col-sm-3 col-md-3 col-lg-3">
                                <input type="hidden" ng-model="Area.AREAID" id="AreaId" name="AreaId">
                                Area Code<span style="color:red" ng-show="AreasForm.AreaCode.$invalid">
                                    <span ng-show="AreasForm.AreaCode.$error.required">*</span>
                                </span>
                            </label>
                            <div class="col-sm-9 col-md-9 col-lg-9">
                                <input class="form-control" type="text" name="AreaCode" ng-model="Area.AREA_CODE" id="AreaCode" placeholder="Area Code" required readonly>
                            </div>
                        </div>

                    </div>
                    <div class="col-sm-6 col-md-6 col-lg-6">
                        <div class="form-group">
                            <label class="control-label col-sm-4 col-md-4 col-lg-4">
                                Area Name<span style="color:red" ng-show="AreasForm.AreaName.$invalid">
                                    <span ng-show="AreasForm.AreaName.$error.required">*</span>
                                </span>
                            </label>
                            <div class="col-sm-8 col-md-8 col-lg-8">
                                <input class="form-control" type="text" name="AreaName" ng-model="Area.AREA_EDESC" id="AreaName" placeholder="Area name" required>
                            </div>
                        </div>

                    </div>
                    <div class="col-sm-6 col-md-6 col-lg-6">
                        <div class="form-group">
                            <label class="control-label col-sm-3 col-md-3 col-lg-3">
                                Remarks<span style="color:red" ng-show="AreasForm.AreaRemarks.$invalid">
                                    <span ng-show="AreasForm.AreaRemarks.$error.required">*</span>
                                </span>
                            </label>
                            <div class="col-sm-9 col-md-9 col-lg-9">
                                <textarea class="form-control" type="text" rows="4" name="AreaRemarks" ng-model="Area.REMARKS" id="AreaRemarks" placeholder="some text"></textarea>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    @*</div>*@

</form>

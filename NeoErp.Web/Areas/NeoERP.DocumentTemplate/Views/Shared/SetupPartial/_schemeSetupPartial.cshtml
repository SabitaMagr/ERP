                                       k-options="monthSelectorOptionscalcdays" @*ng-change="OnOpeningDateChange()"*@ />
                            </div>
                        </div>

                    </div>
                    <div class="col-sm-6 col-md-6 col-lg-6">
                        <div class="form-group">
                            <label class="control-label col-sm-4 col-md-4  col-lg-4">
                                Document<span style="color:red" ng-show="SchemeForm.document.$invalid">
                                    <span ng-show="SchemeForm.document.$error.required">*</span>
                                </span>
                            </label>
                            <div class="col-sm-8 col-md-8 col-lg-8">

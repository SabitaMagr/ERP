                                </div>
                            </div>
                        </div>*@
                </fieldset>
            </div>
            <div class="row">
                <fieldset class="fieldset-box">
                    <legend>Type</legend>
                    <div class="col-sm-6 col-md-6 col-lg-6">
                        <div class="form-group">
                            <label class="control-label col-sm-4 col-md-4  col-lg-4">
                                Scheme Type<span style="color:red" ng-show="SchemeForm.SchemeType.$invalid">
                                    <span ng-show="SchemeForm.SchemeType.$error.required">*</span>
                                </span>
                            </label>
                            <div class="col-sm-8 col-md-8 col-lg-8">
                                <select ng-model="Scheme.SCHEME_TYPE" id="SchemeType" class="form-control" name="SchemeType" style="width:100%">
                                    <option value="">-- Select Scheme Type--</option>
                                    <option value="CD">Cash On Discount</option>
                                    <option value="BS">Bonous</option>
                                    <option value="SC">Scheme</option>
                                </select>
                            </div>
                        </div>

                    </div>
                    <div class="col-sm-6 col-md-6 col-lg-6">
                        <div class="form-group">
                            <label class="control-label col-sm-4 col-md-4  col-lg-4">
                                Type<span style="color:red" ng-show="SchemeForm.Type.$invalid">
                                    <span ng-show="SchemeForm.Type.$error.required">*</span>
                                </span>
                            </label>
                            <div class="col-sm-8 col-md-8 col-lg-8">
                                <select ng-model="Scheme.TYPE" id="Type" class="form-control" name="Type" style="width:100%">
                                    <option value="">-- Select Type--</option>
                                    <option value="V">Value</option>
                                    <option value="I">Item</option>
                                    @*<option value="SC">Scheme</option>*@
                                </select>
                            </div>
                        </div>

                    </div>
                </fieldset>
            </div>

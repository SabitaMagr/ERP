                                </div>
                            </div>

                        </div>*@
                    <div class="col-sm-6 col-md-6 col-lg-6">
                        <div class="form-group">
                            <label class="control-label col-sm-4 col-md-4  col-lg-4">
                                Dealer<span style="color:red" ng-show="SchemeForm.dealer.$invalid">
                                    <span ng-show="SchemeForm.dealer.$error.required">*</span>
                                </span>
                            </label>

                        <div class="form-group">
                            <label class="control-label col-sm-4 col-md-4 col-lg-4">
                                Charge Rate
                            </label>
                            <div class="col-sm-8 col-md-8 col-lg-8">
                                <input class="form-control" type="number" name="chargeRate" ng-model="Scheme.CHARGE_RATE" id="chargeRate" placeholder="Charge Rate">
                            </div>
                        </div>

                    </div>
                    <div class="col-sm-6 col-md-6 col-lg-6">
                        <div class="form-group">
                            <label class="control-label col-sm-4 col-md-4  col-lg-4">
                                Calculation Days:@*<span style="color:red" ng-show="SchemeForm.Status.$invalid">
                                        <span ng-show="SchemeForm.Status.$error.required">*</span>

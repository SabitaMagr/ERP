<form id="SchemeForm" name="SchemeForm" novalidate>


    <div class="portlet box green-box main">
        <div class="portlet-title">
            <div class="caption">
                <i class="fa fa-plus-square"></i>
                <span class="caption-subject bold uppercase">
                    {{SchemeHeader}}
                </span>
            </div>
            <div class="actions pull-right">

                <button type="button" id="deleteScheme" name="deleteScheme" ng-model="btnDelete" ng-disabled="!btnDelete" ng-click="deleteScheme(SchemeForm.$valid)" class="btn btn-danger btn-sm">Delete</button>
                <button type="button" id="saveScheme" name="saveScheme" ng-click="SaveScheme(SchemeForm.$valid)" class="btn dark-green btn-sm">{{saveAction}}</button>
                <button type="button" id="cancelScheme" name="cancelScheme" ng-click="Cancel()" class="btn btn-default btn-sm">New</button>

            </div>
        </div>

        <div class="portlet-body form-horizontal">

            <div class="row">

                <div class="col-md-6 col-sm-6 col-lg-6">
                    <div class="form-group">
                        <label class="control-label col-sm-4 col-md-4 col-lg-4">
                            Scheme Name<span style="color:red" ng-show="SchemeForm.SchemeName.$invalid">
                                <span ng-show="SchemeForm.SchemeName.$error.required">*</span>
                            </span>
                        </label>
                        <div class="col-sm-8 col-md-8 col-lg-8">
                            <input class="form-control" type="text" name="SchemeName" ng-model="Scheme.SCHEME_EDESC" id="SchemeName" placeholder="Scheme name" required>
                        </div>
                    </div>

                </div>
                <div class="col-sm-6 col-md-6 col-lg-6">
                    <div class="form-group">
                        <label class="control-label col-sm-4 col-md-4  col-lg-4">
                            Status:@*<span style="color:red" ng-show="SchemeForm.Status.$invalid">
                                    <span ng-show="SchemeForm.Status.$error.required">*</span>
                                </span>*@
                        </label>
                        <div class="col-sm-8 col-md-8 col-lg-8">

                            <input type="radio" id="auto" name="schemestatus" ng-model="Scheme.STATUS" value="A"> Auto

                            <input type="radio" id="manual" name="schemestatus" ng-model="Scheme.STATUS" value="M"> Manual
                        </div>
                    </div>

                </div>
            </div>
            <div class="row">
                <fieldset class="fieldset-box">
                    <legend>Effective</legend>
                    <div class="col-sm-6 col-md-6 col-lg-6">
                        <div class="form-group">
                            <label class="control-label col-sm-4 col-md-4  col-lg-4">
                                From:
                            </label>
                            <div class="col-sm-8 col-md-8 col-lg-8">
                                <input id="englishdatedocument5" class="englishdate" kendo-date-picker
                                       ng-model="Scheme.EFFECTIVE_FROM"
                                       k-options="monthSelectorOptions" />
                            </div>
                        </div>

                    </div>
                    <div class="col-sm-6 col-md-6 col-lg-6">
                        <div class="form-group">
                            <label class="control-label col-sm-4 col-md-4  col-lg-4">
                                To:
                            </label>
                            <div class="col-sm-8 col-md-8 col-lg-8">
                                <input id="englishdatedocument5" class="englishdate" kendo-date-picker
                                       ng-model="Scheme.EFFECTIVE_TO"
                                       k-options="monthSelectorOptions" />
                            </div>
                        </div>

                    </div>
                </fieldset>
            </div>
            <div class="row">
                <fieldset class="fieldset-box">
                    <legend>Include</legend>

                    <div class="col-sm-6 col-md-6 col-lg-6">
                        <div class="form-group">
                            <label class="control-label col-sm-4 col-md-4  col-lg-4">
                                Item<span style="color:red" ng-show="SchemeForm.item.$invalid">
                                    <span ng-show="SchemeForm.item.$error.required">*</span>
                                </span>
                            </label>

                            <div class="col-sm-8 col-md-8 col-lg-8">

                                <select id="item" name="item" kendo-multi-select k-options="itemOptions" k-ng-model="bulkItemModel" class="acccode accmaster macccode c w-100" required></select>
                            </div>
                        </div>

                    </div>

                                    <span ng-show="SchemeForm.area.$error.required">*</span>
                                </span>
                            </label>
                            <div class="col-sm-8 col-md-8 col-lg-8">
                                <select id="areasetup" name="areasetup" kendo-multi-select k-options="AreaSetupOption" k-ng-model="bulkAreaTypeModel" class="acccode accmaster macccode c w-100"></select>
                            </div>
                        </div>

                    </div>
                    <div class="col-sm-6 col-md-6 col-lg-6">
                        <div class="form-group">
                            <label class="control-label col-sm-4 col-md-4  col-lg-4">
                                Branch<span style="color:red" ng-show="SchemeForm.branch.$invalid">
                                    <span ng-show="SchemeForm.branch.$error.required">*</span>
                                </span>
                            </label>
                            <div class="col-sm-8 col-md-8 col-lg-8">
                                <select id="branch" name="branch" kendo-multi-select k-options="branchOptions" k-ng-model="bulkBranchTypeModel" class="acccode accmaster macccode c w-100"></select>
                            </div>
                        </div>

                    </div>
                    @*<div class="col-sm-6 col-md-6 col-lg-6">

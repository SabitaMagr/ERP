                            <textarea style="height: 100px;" class="form-control" type="text" name="rulequery" ng-model="Scheme.QUERY_STRING" id="rulequery" placeholder="Enter Query" required></textarea>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row" style="margin-top:15px">




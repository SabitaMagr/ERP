                        if (location.hash.indexOf('?') != -1 && Arg("fav") != undefined && isFirstLoad.fav) {
                            if (isFirstLoad.favCount == 1) {
                                isFirstLoad.fav = false;
                                favouriteReportSetting.init(result);
                            } else

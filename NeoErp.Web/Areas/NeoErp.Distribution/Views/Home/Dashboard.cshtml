                            //var html = "<a class='btn btn-circle btn-icon-only btn-default' id='Savefavriote' onclick='loadFavouriteMenu()' href='javascript:;'><i class='fa fa-star' " + favColor + "></i></a>";
                            var html = "";
                            node.prepend(html);

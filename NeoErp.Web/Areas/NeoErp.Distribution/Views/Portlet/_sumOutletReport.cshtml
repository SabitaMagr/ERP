@using NeoErp.Core.Helpers
@using NeoErp.Core.Models.CustomModels
@using NeoErp.Core.Models;
@{
    var actionPageId = "sumOutletReport";

}
<div ng-controller="sumOutletCtrl">
    <div class="col-md-6">
        <div class="portlet portlet-sortable light bordered">
            <div class="portlet-title">
                <div class="caption">
                    <span class="caption-subject bold uppercase font-green-haze custom-modal">Added Outlet Report In ({{outLetSelectedMonths}})</span>
                </div>
                <div class="tools">
                    <a href="javascript:;" class="collapse"></a>
                    <a data-toggle="modal" data-target="#outletModal" class="config"></a>
                    <a href="javascript:;" class="reload"></a>
                    <a href="javascript:;" class="fullscreen on" data-original-title="" title=""></a>
                    <a href="javascript:;" class="remove"></a>
                </div>
            </div>
            <div class="portlet-body">
                <table class="table table-hover table-bordered datatable">
                    <thead>
                        <tr ng-click="changeSorting()">
                            <th>Area</th>
                            <th>Sum of Total</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr style="font-size:10px;" ng-if="sumOutletData.length==0">
                            <td colspan="8">No Items To Display..</td>
                        </tr>
                        <tr ng-repeat="data in sumOutletData">

                            <td>
                                {{data.GROUP_EDESC}}
                            </td>
                            <td>
                              {{data.TOTAL}}
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <div class="modal fade performanceModal" id="outletModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Filter Date &Time</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <label class="col-md-12">As on Date</label>
                    <div>
                        @Html.Partial("~/Views/Shared/Controls/DashboardChartFilter/DatePicker.cshtml", new DatePickerModel()
                   {
                       ActionPageId = actionPageId
                   })
                    </div>

                </div>
                <div class="modal-footer">
                    <button type="button" ng-click="outLetMaxOrderFilters()" class="btn blue outletModal">Apply</button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                   
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    DatePicker.init('@actionPageId', "", "");

    $('.outletModal').click(function () {
        $('#outletModal').modal('hide');
    })


</script>


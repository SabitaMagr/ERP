                        <a href="#" class="list-group-item">Porta ac consectetur ac</a>
                        <a href="#" class="list-group-item">Vestibulum at eros</a>*@
                </div>
            </div>

            <!--<div class="list-group">
            <a class="list-group-item " ng-repeat="scheme in allSchemes" ng-click="showDetails(scheme.SchemeID)" id="scheme{{scheme.SchemeID}}">
                {{scheme.SchemeName}}
            </a>-->
            @*<a href="#" class="list-group-item">Dapibus ac facilisis in</a>
                <a href="#" class="list-group-item">Morbi leo risus</a>
                <a href="#" class="list-group-item">Porta ac consectetur ac</a>
                <a href="#" class="list-group-item">Vestibulum at eros</a>*@
            <!--</div>-->
        </div>
        <div class="col-md-8" ng-hide="showDetail" style="overflow: scroll; height: 500px;">
            <div class="panel panel-default">
                <div class="panel-heading">Details</div>
                <div class="panel-body">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>Order No</th>
                                <th>Miti</th>
                                <th>Cutsomer</th>
                                <th>Reseller</th>
                                <th>Items</th>
                                <th>Rate</th>
                                <th>Request Quantity</th>
                                <th>Total Amount</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr ng-repeat="detail in details">
                                <td>{{detail.ORDER_NO}}</td>
                                <td>{{detail.MITI}}</td>
                                <td>{{detail.CUSTOMER_EDESC}}</td>
                                <td>{{detail.RESELLER_NAME}}</td>
                                <td>{{detail.ITEM_EDESC}}</td>
                                <td>{{detail.UNIT_PRICE}}</td>
                                <td>{{detail.QUANTITY}}</td>
                                <td>{{detail.NET_TOTAL}}</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>


    </div>
</div>


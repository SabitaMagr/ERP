<div ng-controller="SchemeWiseReportCtrl">
    <div class="page-bar">
        <ul class="page-breadcrumb">
            <li>
                <i class="fa fa-home"></i>
                <a href="/sales/SalesHome/Dashboard">Home</a>
                <i class="fa fa-angle-right"></i>
            </li>
            <li>
                <a href="#">Scheme Wise Report</a>
                <i class="fa fa-angle-right"></i>
            </li>
        </ul>


    </div>
    <ul class="nav nav-tabs" style="width: 100%;">
        <li ng-repeat="scheme in allSchemes" ng-click="showRule(scheme.SchemeID, event)" id="scheme{{scheme.SchemeID}}"><a>{{scheme.SchemeName}}</a></li>
        @*<li class="active"><a href="#">Menu 1</a></li>*@

    </ul>
    <div class="row" ng-hide="showRow" style="margin-top: 30px;">
        <div class="col-md-4">
            <div class="panel panel-default">
                <!-- Default panel contents -->
                <div class="panel-heading">{{schemeRule.SchemeName}}</div>

                <!-- List group -->
                <div class="list-group">
                    <a class="list-group-item" ng-repeat="rule in schemeRule.SchemeDetails" ng-click="showDetails(schemeRule.SchemeID, rule.Min_Value, rule.Max_Value,schemeRule.StartDate, schemeRule.EndDate )">Minimum Quantity:{{rule.Min_Value}}<span style="float: right;">Discount:{{rule.Discount}} ({{rule.DiscountType}})</span></br> Maximum Quantity: {{rule.Max_Value}} </a>

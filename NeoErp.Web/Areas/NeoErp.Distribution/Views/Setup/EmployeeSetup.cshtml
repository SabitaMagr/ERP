<div class="content">
    <div ng-controller="EmployeeSetupCtrl">
        <div class="page-bar">
            <ul class="page-breadcrumb">
                @*<li>
                        <i class="fa fa-home"></i>
                        <a href="/sales/SalesHome/Dashboard">Home</a>
                        <i class="fa fa-angle-right"></i>
                    </li>
                    <li>
                        <a href="#">Area Setup</a>
                        <i class="fa fa-angle-right"></i>
                    </li>*@
            </ul>
            <div class="actions pull-right actionbutton" ng-hide="createPanel">
               
                <div class="btn-group">
                    <a class="btn btn-circle btn-icon-only btn-default " ng-click="AddButtonClickEvent()">
                        <i class="fa fa-plus"></i>
                    </a>
                </div>
                <div class="btn-group">
                    @Html.Partial("~/Views/Shared/Controls/_SetupConfig.cshtml", "EmployeeSetup")
                </div>
            </div>
        </div>


        <div class="portlet light bordered main createPanel" ng-show="createPanel">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-list-alt font-green-haze"></i>
                    <span class="caption-subject font-green-haze bold uppercase pull-left">
                       Employee Setup
                    </span>
                </div>
                <div class="actions">
                    <span class="pull-right">
                        <button type="button" id="cancelTarget" name="cancelTarget" class="btn btn-default btn-sm" ng-click="Cancel();">Cancel</button>

                        <button type="submit" id="SaveEmployee" name="SaveEmployee" ng-click="SaveEmployee(EployeeForm.$valid)" class="btn btn-green btn-sm">{{saveAction}}</button>
                    </span>
                </div>
            </div><!-- /portlet-title-->
            <div class="portlet-body">
                <div class="row">
                    <div class="col-md-12 col-sm-12">
                        <form id="EployeeForm" name="EployeeForm" novalidate>
                            <div class="row">
                                <div class="col-md-3 col-sm-3">
                                    <input id="Reseller_CODE" type="hidden" ng-model="EMPLOYEE_CODE" />
                                    <input type="hidden" id="ItemHidden" ng-model="ItemHidden" name="ItemHidden" class="form-control input-sm" />
                                    <div class="form-group">
                                        <label class="control-label">
                                            Employee Name <span style="color:red" ng-show="EployeeForm.EmployeeName.$invalid">
                                                <span ng-show="EployeeForm.EmployeeName.$error.required">*</span>
                                            </span>
                                        </label>
                                        <input id="EmployeeName" ng-model="EmployeeSetup.EMPLOYEE_EDESC" name="EmployeeName" class="form-control input-sm" placeholder="Employee Name" required />
                                    </div>
                                </div>
                                <div class="col-md-3 col-sm-3">
                                    <label class="control-label">
                                        Address <span style="color:red" ng-show="EployeeForm.Address.$invalid">
                                            <span ng-show="EployeeForm.Address.$error.required">*</span>
                                        </span>
                                    </label>
                                    <input id="Address" ng-model="EmployeeSetup.EPERMANENT_ADDRESS1" name="Address" class="form-control input-sm" placeholder="Address"required/>
                                </div>
                                <div class="col-md-3 col-sm-3">
                                    <div class="form-group">
                                        <label class="control-label">
                                            Company <span style="color:red" ng-show="EployeeForm.distCompanySelect.$invalid">
                                                <span ng-show="EployeeForm.distCompanySelect.$error.required">*</span>
                                            </span>
                                        </label>
                                        <select id="distCompanySelect" name="distCompanySelect" kendo-multi-select k-options="distCompanySelectOptions"  slim-scroll ng-model="EmployeeSetup.COMPANY_CODE"required></select>
                                    </div>
                                </div>

                                <div class="col-md-3 col-sm-3">
                                    <div class="form-group">
                                        <label class="control-label">
                                            Branch <span style="color:red" ng-show="EployeeForm.distBranchSelect.$invalid">
                                                <span ng-show="EployeeForm.distBranchSelect.$error.required">*</span>
                                            </span>
                                        </label>
                                        <select id="distBranchSelect" name="distBranchSelect" kendo-multi-select k-options="distBranchSelectOptions" slim-scroll ng-model="EmployeeSetup.BRANCH_CODE"required></select>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>


        <div class="row collapse in" id="demo">
            <div class="col-md-12">

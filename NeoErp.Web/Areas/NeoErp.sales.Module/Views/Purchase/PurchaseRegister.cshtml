            else if (typeof (footerTemp[i].value) != "undefined" && footerTemp[i].value != "Total")
                footer.push({ value: $(footerTemp[i].value).text(), textAlign: "right", bold: true });
        }

        var SheetRow = [];

        //Pushing the head row
        SheetRow.push({
            cells: [
                   
                   { value: "Miti", background: "#A9A7A6", },

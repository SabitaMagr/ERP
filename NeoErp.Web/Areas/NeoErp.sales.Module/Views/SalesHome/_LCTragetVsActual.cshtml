            <a href="javascript:;" class="collapse"></a>
            @*<a class="btnDatagrid" href="javascript:;" onclick="CreateGrid_LCTragetVsActual();" data-grid="Chart" title="Data grid">*@
            <a class="btnGrid btnGrid_LCTragetVsActual" data-type="Chart" data-title="Grid">

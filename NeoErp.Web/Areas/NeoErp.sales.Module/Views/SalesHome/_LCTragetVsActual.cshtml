    <div class="portlet-body">
        <script type="text/x-kendo-template" id="toolbar-template">
            <div class="k-header k-grid-toolbar pull-right">

                <a class="k-button k-button-icontext k-grid-excel" href="javascript:">
                    <i class="fa fa-file-excel-o"></i>
                </a>
        </script>
        <div class="k-content wide">
            <div id="LCTragetVsActualChart"></div>
            <div class="overlay"><div>No data available</div></div>
            <div class="AmountFigureType"></div>
            <div class="DisplayFilterContent"><a href="javascript:;" data-toggle="tooltip" title=""></a></div>
        </div>
    </div>

    <script>
        //initialize variables
        var config_LCTragetVsActual = {
            url: window.location.protocol + "//" + window.location.host + "/api/SalesDashboard/GetLCOutStanding",
            dateFormat: $("input[name=DateFormat_LCTragetVsActual]:checked").val(),
            fieldValue: $("input[name=fieldType_LCTragetVsActual]:checked").val(),
            series: [{
                type: "pie",
                field: "Amount",
                categoryField: "Type"
            }],
            tooltip: {
                visible: true,
                format: "{0}",
                template: "#= category # : #= FormatLabels(value)#"
            },
            isStack: false,
            showLabel: $("#showLabel_LCTragetVsActual").prop("checked"),
            color: ["#8A2BE2", "#ADFF2F", "#5bc0de", "#5cb85c", "#f2b661"],
            seriesType: "pie",//$("input[name=seriesType_LCTragetVsActual]:checked").val(),
            categoryField: "Type",
            categoryTitle: '',
            //group: { field: "FiscalYear" },
            //sortField: "MonthInt",

            _oldData: {
                dateFormat: $("input[name=DateFormat_LCTragetVsActual]:checked").val(),
                fieldValue: $("input[name=fieldType_LCTragetVsActual]:checked").val()
            },

        };
        var _oldConfig_LCTragetVsActual = JSON.stringify(config_LCTragetVsActual);



        function loadDataSource_LCTragetVsActual() {

            reportFilter = reportFilter == undefined ? ReportFilter.filterAdditionalData() : reportFilter;
            var dateformat = $("input[name=DateFormat_LCTragetVsActual]:checked").val();

            var dataSource = new kendo.data.DataSource({
                transport: {
                    read: {
                        url: config_LCTragetVsActual.url,
                        dataType: "json", // <-- The default was "jsonp".
                        type: "POST",
                        contentType: "application/json; charset=utf-8"
                    },
                    parameterMap: function (options, type) {
                        var paramMap = JSON.stringify($.extend(options, reportFilter));
                        delete paramMap.$inlinecount; // <-- remove inlinecount parameter.
                        delete paramMap.$format; // <-- remove format parameter.
                        return paramMap;
                    }
                },
                requestStart: function () {
                    if (IsDataGrid != "Grid") {
                        kendo.ui.progress($("#LCTragetVsActualChart"), true);
                    }
                },
                requestEnd: function () {
                    kendo.ui.progress($("#LCTragetVsActualChart"), false);
                },
                schema: {
                    parse: function (items) {
                        var item,
                            result = [];
                        var showzerovalue = $("#showzerovalue_LCTragetVsActual").prop("checked");

                        if (showzerovalue) {
                            for (var i = 0; i < items.length; i++) {
                                item = items[i];
                                result.push(item);
                            }
                        }
                        else {
                            for (var i = 0; i < items.length; i++) {
                                item = items[i];
                                if (item.Amount !== 0 && item.Quantity !== 0) {
                                    result.push(item);
                                }
                            }
                        }


                        return result;
                    }
                },
                group: config_LCTragetVsActual.group,
                sort: {
                    field: config_LCTragetVsActual.sortField,
                    dir: "asc"
                }

            });

            $("#LCTragetVsActual .DisplayFilterContent a").text("");
            var IsDataGrid = $('.btnGrid_LCTragetVsActual').data("type");
            if (IsDataGrid == "Grid") {
                CreateGrid_LCTragetVsActual(dataSource);
                return;
            }

            $('.btnGrid_LCTragetVsActual').data("type", "Chart");
            CreateChart_LCTragetVsActual(dataSource);
            //CreateGrid_LCTragetVsActual(dataSource);
        }
        function CreateChart_LCTragetVsActual(dataSource) {
            
            $('.btnGrid_LCTragetVsActual').data("type", "Chart");
            $("#LCTragetVsActualChart").html('');
            $("#LCTragetVsActualChart").removeAttr("style");
            $("#LCTragetVsActualChart").removeAttr("class");
            $("#LCTragetVsActualChart").kendoChart({
                chartArea: {
                    height: ($("#LCTragetVsActualChart").hasClass("portlet-fullscreen")) ? 550 : 350,
                },
                onDrag: function (e) {
                    var chart = e.sender;
                    var ds = chart.dataSource;
                    var options = chart.options;

                    var categoryRange = e.axisRanges.CategoryAxis;

                    if (categoryRange) {
                        var xMin = categoryRange.min;
                        var xMax = categoryRange.max;

                        options.categoryAxis.min = xMin;
                        options.categoryAxis.max = xMax;

                        ds.filter(viewModel.getFilter(xMin, xMax));
                    }
                },
                pannable: {
                    lock: "y"
                },
                zoomable: {
                    mousewheel: {
                        lock: "y"
                    },
                    selection: {
                        lock: "y"
                    }
                },
                dataSource: dataSource,
                legend: {
                    position: "bottom"
                },
                seriesColors: config_LCTragetVsActual.color,
                seriesDefaults: {
                    type: config_LCTragetVsActual.seriesType,
                    labels: {
                        visible: config_LCTragetVsActual.showLabel,
                        template: "#= category # : #= FormatLabels(value)#",
                        //rotation: '270',
                        padding: {
                            left: -5
                        },
                    },
                    stack: config_LCTragetVsActual.isStack,
                    style: "smooth",
                },
                series: config_LCTragetVsActual.series,
                categoryAxis: {
                    field: config_LCTragetVsActual.categoryField,
                    labels: {
                        rotation: -45,
                    },
                    title: { text: config_LCTragetVsActual.categoryTitle }
                },
                valueAxis: {
                    line: {
                        visible: true
                    },
                    labels: {
                        rotation: 'auto',
                        template: "#= FormatLabels(value)#"
                    },
                    title: { text: amountFigureType },
                    min: 0,
                },
                tooltip: config_LCTragetVsActual.tooltip,
                dataBound: function (e) {
                    
                    var maxValue = getMaxValueFromDataSource(e);
                    
                    var majorunit = Math.max(6, maxValue / 6);
                    e.sender.options.valueAxis.majorUnit = majorunit;
                    e.sender.options.valueAxis.max = maxValue + majorunit;
                    $("#LCTragetVsActualChart").next(".overlay").toggle(maxValue <= 0);
                },
                seriesClick: function (e) {
                    if (e.dataItem.Type != null) {
                        var url = window.location.protocol + "//" + window.location.host + "/api/SalesDashboard/GetLCOutStandingDetails";

                        
                        config_LCTragetVsActual = {
                            url: window.location.protocol + "//" + window.location.host + "/api/SalesDashboard/GetLCOutStandingDetails",
                            dateFormat: $("input[name=DateFormat_LCTragetVsActual]:checked").val(),
                            fieldValue: $("input[name=fieldType_LCTragetVsActual]:checked").val(),
                            series: [{
                                field: "UsedBalance",
                                name: "Used Balance",
                                //categoryField: "Acc_Edesc"
                            }, {
                                field: "Balance",
                                name: "Balance",
                                //categoryField: "Acc_Edesc"
                            }],
                            tooltip: {
                                visible: true,
                                //format: "{0}",
                                template: "#: FormatLabels(value) #"
                            },
                            isStack: true,
                            showLabel: $("#showLabel_LCTragetVsActual").prop("checked"),
                            color: ["#8A2BE2", "#ADFF2F", "#5bc0de", "#5cb85c", "#f2b661"],
                            seriesType: "column",//$("input[name=seriesType_LCTragetVsActual]:checked").val(),
                            categoryField: "Acc_Edesc",
                            categoryTitle: '',
                            //group: { field: "FiscalYear" },
                            //sortField: "MonthInt",

                            _oldData: {
                                dateFormat: $("input[name=DateFormat_LCTragetVsActual]:checked").val(),
                                fieldValue: $("input[name=fieldType_LCTragetVsActual]:checked").val()
                            }
                        };
                        loadDataSource_LCTragetVsActual();
                    }
                },
            });
        }
        function CreateGrid_LCTragetVsActual(dataSource) {
            
            $("#LCTragetVsActualChart").html('');
            $("#LCTragetVsActualChart").removeAttr("style");
            $("#LCTragetVsActualChart").removeAttr("class");
            $('.btnGrid_LCTragetVsActual').data("type", "Grid");
            var format = $("input[name=DateFormat_LCTragetVsActual]:checked").val();
            var monthTitle = "Month";
            var columns;
            dataSource = dataSource == undefined ? $("#LCTragetVsActualChart").data("kendoChart").dataSource : dataSource;
            
            if (dataSource.data().length > 0 && dataSource.data()[0].Type != null) {
                columns = [{
                    field: "Type",
                    title: "Type",
                    width: 240
                }, {
                    field: "Amount",
                    title: "Amount",
                    format: "{0:n}"
                }]
            }
            else {
                columns = [{
                    field: config_LCTragetVsActual.categoryField,
                    title: "Account",
                    width: 240
                },
                {
                    field: "UsedBalance",
                    title: "Used Balance",
                    format: "{0:n}"
                },
                {
                    field: "Balance",
                    title: "Balance",
                    format: "{0:n}"
                }]
            }
            $("#LCTragetVsActualChart").kendoGrid({
                dataSource: dataSource,
                height: $("#LCTragetVsActualChart").hasClass("portlet-fullscreen") ? 550 : 350,
                groupable: false,
                sortable: true,
                //selectable: "multiple",
                toolbar: [{ template: kendo.template($("#toolbar-template").html()) }],
                excel: {
                    fileName: "LC Traget Vs Actual Report",
                    allPages: true
                },
                columns: columns,
                dataBound: function (e) {
                    var gird = e.sender;
                    gird.table.find(".k-grouping-row:not(:first-child)").each(function () {
                        gird.collapseGroup(this);
                    });
                }
            });
        }



        function refreshLCTragetVsActual() {
            if ($(".btnGrid_LCTragetVsActual").data("type") == "Grid")// data-grid toogle chart option in data-grid attribute in div
            {
                $(".btnGrid_LCTragetVsActual").data("type", "Chart");
                loadDataSource_LCTragetVsActual();
                return;
            }
            
            var chart = $("#LCTragetVsActualChart").data("kendoChart"),
                type = $("input[name=seriesType_LCTragetVsActual]:checked").val(),
                stack = $("#Stack_LCTragetVsActual").prop("checked"),
                IsLebelShow = $("#showLabel_LCTragetVsActual").prop("checked"),
                fieldValue = $("input[name=fieldType_LCTragetVsActual]:checked").val();

            for (var i = 0, length = config_LCTragetVsActual.series.length; i < length; i++) {
                config_LCTragetVsActual.series[i].stack = stack;
                config_LCTragetVsActual.series[i].type = type;
                if (fieldValue == "Amount")
                    config_LCTragetVsActual.series[i].field = "Amount";
                else
                    config_LCTragetVsActual.series[i].field = "Quantity";

            };
            
            chart.setOptions({
                series: config_LCTragetVsActual.series,
                seriesDefaults: {
                    labels: {
                        visible: config_LCTragetVsActual.showLabel,
                    }
                }
            });

            for (var i = 0; i < chart.options.series.length; i++) {
                chart.options.series[i].labels.visible = IsLebelShow;
                if (type == "column") {
                    chart.options.series[i].labels.rotation = -90;
                }
                if (type == "bar") {
                    chart.options.series[i].labels.rotation = 0;
                }
            }

            chart.refresh();
        }
        $('#apply_LCTragetVsActual').click(function () {
            var checkedDateFormat = $("input[name=DateFormat_LCTragetVsActual]:checked").val();
            var checkedFieldValue = $("input[name=fieldType_LCTragetVsActual]:checked").val();
            var IsChanged = false;
            if (config_LCTragetVsActual._oldData.dateFormat != checkedDateFormat) {
                IsChanged = true;
                config_LCTragetVsActual = JSON.parse(_oldConfig_LCTragetVsActual);
                config_LCTragetVsActual.url = window.location.protocol + "//" + window.location.host + "/api/SalesDashboard/GetLCOutStanding";
                config_LCTragetVsActual._oldData.dateFormat = checkedDateFormat;

            }
            if (config_LCTragetVsActual._oldData.fieldValue != checkedFieldValue) {
                refreshLCTragetVsActual();
                config_LCTragetVsActual._oldData.fieldValue = checkedFieldValue;
            }
            $('.btnGrid_LCTragetVsActual').data("type", "Chart");
            ChartFilter('LCTragetVsActual', "loadDataSource_LCTragetVsActual", IsChanged);
        });
        $(document).ready(function () {
            loadDataSource_LCTragetVsActual();

            //start Binding
            $(document).bind("kendo:skinChange", loadDataSource_LCTragetVsActual);

            $('#LCTragetVsActualChart').closest('.portlet').find('.reload').click(function () {
                RefreshChartFilterControl('LCTragetVsActual');
                $('.btnGrid_LCTragetVsActual').data("type", "Chart");
                config_LCTragetVsActual = JSON.parse(_oldConfig_LCTragetVsActual);
                config_LCTragetVsActual.url = window.location.protocol + "//" + window.location.host + "/api/SalesDashboard/GetLCOutStanding";
                loadDataSource_LCTragetVsActual();
            });



            $(".btnGrid_LCTragetVsActual").click(function () {
                var datasource = $("#LCTragetVsActualChart").data("kendoChart").dataSource;
                $('.btnGrid_LCTragetVsActual').data("type") == "Chart" ? CreateGrid_LCTragetVsActual(datasource) : CreateChart_LCTragetVsActual(datasource);
                $("i", this).toggleClass("icon-bar-chart");
            });
            $(".options_LCTragetVsActual").bind("change", function () {  // data-grid toogle chart option in data-grid attribute in button
                if ($('.btnGrid_LCTragetVsActual').data("type") == "Chart")
                    refreshLCTragetVsActual();
                else
                    chart_grid_option_change("btnGrid_LCTragetVsActual", "loadDataSource_LCTragetVsActual");
            });
            $("#showLabel_LCTragetVsActual").bind("change", function () {// data-grid toogle chart option in data-grid attribute in button
                var temp = $('.btnGrid_LCTragetVsActual').data("type");
                $('.btnGrid_LCTragetVsActual').data("type", "temp");
                refreshLCTragetVsActual()
                $('.btnGrid_LCTragetVsActual').data("type", temp);
            });
            $('#Stack_LCTragetVsActual').on('click', function () {// data-grid toogle chart option in data-grid attribute in button
                var temp = $('.btnGrid_LCTragetVsActual').data("type");
                $('.btnGrid_LCTragetVsActual').data("type", "temp");
                refreshLCTragetVsActual()
                $('.btnGrid_LCTragetVsActual').data("type", temp);
            });

        });

    </script>
</div>

<script>   
    var url = window.location.protocol + "//" + window.location.host + "/Sales/SalesSummaryReport/topSalesEmployee";
    $.ajax({
        url: url,
         success: function (data) {            
             data = data.replace("fileMailSender.init();", "");
             data = data.replace("id=\"grid\"", "id=\"topSalesEmployeeChartgrid\"");
             data = data.replace(/#grid/gi, "#topSalesEmployeeChartgrid");
             //temporarily update height
             //data = data.replace(" //height: window.innerHeight - 150,", "height:'auto',");            
             var node = $(data);
             var html = node.find(".portlet > .portlet-body");      
             html.find(".row").removeClass("row");
             var script = node[4];
             script.getElementsByTagName('script')[0].remove();
             script.getElementsByTagName('script')[0].remove();
             script = $(script);
             $('#topSalesEmployeeChart').append(html);
             $('#topSalesEmployeeChart').append(script);
            
             $("#topSalesEmployeeChart").find(".k-header.k-grid-toolbar").remove()
             $("#topSalesEmployeeChart").find(".k-grouping-header").remove();
         }
    });


  

</script>


    <script>
         

        var dataProvider = [];
        var toggleFlag_CategoryStockLevel = true;
        var IsStack = true;
        var Category_series = [{
            field: "Total",
            name: "Total"
        }];
        var categoryUrlData = null;
        function createCategoryStockLevel(urlData) {
            urlData = (urlData == undefined) ? "?customerCode=&itemCode=&categoryCode=&companyCode=&branchCode=" + branchCodes + "&partyTypeCode=&formCode=" : urlData;
            categoryUrlData = urlData;
            var mainUrl = window.location.protocol + "//" + window.location.host + "/api/SalesDashboard/GetCategoryStockLevel";
            var childUrl = window.location.protocol + "//" + window.location.host + "/api/SalesDashboard/GetStocklevelByCategory";
            var IsDataGrid = $('.btnCategoryDatagrid').data("type");
            reportFilter = reportFilter == undefined ? ReportFilter.filterAdditionalData() : reportFilter;
            var dataSource = new kendo.data.DataSource({
                transport: {
                    read: {
                        url: mainUrl + urlData, // <-- Get data from here.
                        dataType: "json", // <-- The default was "jsonp".
                        type: "POST",
                        contentType: "application/json; charset=utf-8"
                    },
                    parameterMap: function (options, type) {
                        var paramMap = JSON.stringify($.extend(options, reportFilter));
                        delete paramMap.$inlinecount; // <-- remove inlinecount parameter.
                        delete paramMap.$format; // <-- remove format parameter.
                        return paramMap;
                    }
                },
                requestStart: function () {
                    if (IsDataGrid != "Grid") {
                        kendo.ui.progress($("#CategoryStockLevel"), true);
                    }
                },
                requestEnd: function () {
                    kendo.ui.progress($("#CategoryStockLevel"), false);
                },
                 sort: {
                    field: "Description",
                    dir: "asc"
                },
                serverSorting: false,
                serverPaging: true,
                serverFiltering: false,
                pageSize: 20,
            });
            dataProvider = dataSource;
            $("#CategoryStockLevel .DisplayFilterContent a").text("");
            // data-grid set option on ceate funciton
            
            if (IsDataGrid == "Grid") {
                GenerateDataGrid_Category(dataSource);
                return;
            }

            LoadCategoryStockLevel(dataSource,urlData);
            

        }
        function LoadCategoryStockLevel(dataSource, urlData) {
            
             urlData = (urlData == undefined) ? "?customerCode=&itemCode=&categoryCode=&companyCode=&branchCode=" + branchCodes + "&partyTypeCode=&formCode=" : urlData;
             var childUrl = window.location.protocol + "//" + window.location.host + "/api/SalesDashboard/GetStocklevelByCategory";
            $("#CategoryStockLevel").kendoChart({
                chartArea: {
                    height: ($("#CategoryStockLevel").hasClass("portlet-fullscreen")) ? 550 : 350,
                },
                onDrag: function (e) {
                    var chart = e.sender;
                    var ds = chart.dataSource;
                    var options = chart.options;

                    var categoryRange = e.axisRanges.CategoryAxis;

                    if (categoryRange) {
                        var xMin = categoryRange.min;
                        var xMax = categoryRange.max;

                        options.categoryAxis.min = xMin;
                        options.categoryAxis.max = xMax;

                        ds.filter(viewModel.getFilter(xMin, xMax));
                    }
                },
                pannable: {
                    lock: "y"
                },
                zoomable: {
                    mousewheel: {
                        lock: "y"
                    },
                    selection: {
                        lock: "y"
                    }
                },
                dataSource: dataSource,

                title: {
                    //text: "Category Chart"
                },
                legend: {
                    position: "bottom"
                },
                seriesColors: ["#428bca", "#da3b36", "#5bc0de", "#f2b661", "#5cb85c", "#e67d4a"],
                seriesDefaults: {
                    //type: "line",
                    type: $("input[name=seriesType_CategoryType]:checked").val(), // data-grid change chart type on changing chart <-> grid
                    style: "smooth",
                    labels: {
                        visible: $("#showlables_CategoryStockLevel").prop("checked"),
                        template: "#= FormatLabels(value)#",
                        rotation: '270',
                        padding: {
                            left: -5
                        },

                    }
                },
                valueAxis: {
                    line: {
                        visible: false
                    },
                    labels: {
                        rotation: 'auto',
                        template: "#= FormatLabels(value)#"
                    },
                    title: { text: amountFigureType }
                },
                series: Category_series,

                categoryAxis: {
                    field: "Description",
                    labels: {
                        rotation: -45,
                    },
                     title: { text: $("#CategoryStockLevel").data("kendoChart") == undefined ? "" : $("#CategoryStockLevel").data("kendoChart").options.categoryAxis.title.text }
                },
                tooltip: {
                    visible: true,
                    format: "{0}",
                    template: "#= category #: \n #= FormatLabels(value)#"
                },
                dataBound: function (e) {
                    var data = e.sender.dataSource.view();
                   
                    var maxValue = getMaxValueFromDataSource(e);
                    var majorunit = Math.max(6, maxValue / 6);
                    e.sender.options.valueAxis.majorUnit = majorunit;
                    e.sender.options.valueAxis.max = maxValue + majorunit; 
                    $("#CategoryStockLevel").next(".overlay").toggle(maxValue <= 0);

                },
                seriesClick: function (e) {
                    kendo.ui.progress($("#CategoryStockLevel"), true);
                    var value = e.dataItem.Code;
                    if (value == null) {
                        kendo.ui.progress($("#CategoryStockLevel"), false);
                        return false;
                    }
                    if (value == "NaN" || "" ) {
                        kendo.ui.progress($("#CategoryStockLevel"), false);
                        return;
                    }
                 
                    if (isNumeric(value))
                    {
                        kendo.ui.progress($("#CategoryStockLevel"), false);
                        return;
                    }
                   
                    var temp = childUrl + "?categoryCode=" + value + urlData.replace('?', '&').replace('categoryCode', 'categoryCode2');
                    reportFilter = reportFilter == undefined ? ReportFilter.filterAdditionalData() : reportFilter;
                    var dataSourcetest = new kendo.data.DataSource({
                        transport: {
                            read: {
                                url: childUrl + "?categoryCode=" + value + urlData.replace('?', '&').replace('categoryCode', 'categoryCode2'),
                                dataType: "json", // <-- The default was "jsonp".
                                type: "POST",
                                contentType: "application/json; charset=utf-8"
                            },

                            parameterMap: function (options, type) {
                                var paramMap = JSON.stringify($.extend(options, reportFilter));
                                delete paramMap.$inlinecount; // <-- remove inlinecount parameter.
                                delete paramMap.$format; // <-- remove format parameter.
                                return paramMap;
                            },
                        }
                    });
                    var chart = $("#CategoryStockLevel").data("kendoChart");

                    //  chart.dataSource = dataSourcetest;


                    type = $("input[name=seriesType_CategoryType]:checked").val(),
                    fieldType = $("input[name=fieldType_CategoryStockLevel]:checked").val();
                    //chart.options.series[0].field = "Quantity";
                    //chart.options.categoryAxis.field = "day";
                    chart.setOptions({
                        categoryAxis: {
                            title: { text: e.category }
                        },
                    });



                    if (fieldType == "Quantity") {
                        chart.options.series[0].field = "Quantity";
                        chart.options.series[0].name = "Quantity";
                    }
                    else {
                        chart.options.series[0].field = "Total";
                        chart.options.series[0].name = "Total";
                    }
                    chart.setDataSource(dataSourcetest);
                    chart.refresh();
                    kendo.ui.progress($("#CategoryStockLevel"), false);

                    //kendoConsole.log(kendo.format("Series click :: {0} ({1}): {2}",
                    //    e.series.name, e.category, e.value));
                    // e.dataSeries.visible = false;
                },
            });
        };

        function isNumeric(n) {
            return !isNaN(parseFloat(n)) && isFinite(n);
        }

        function refreshCategoryStockLevel() {
            if ($(".btnCategoryDatagrid").attr("data-type") == "Grid")// data-grid toogle chart option in data-grid attribute in div
            {
                $(".btnCategoryDatagrid").attr("data-type", "Chart");
                //createCategoryStockLevel();
                LoadCategoryStockLevel($("#CategoryStockLevel").data("kendoChart"));
                return;
            }
            var chart = $("#CategoryStockLevel").data("kendoChart"),
                type = $("input[name=seriesType_CategoryType]:checked").val(),
                fieldType = $("input[name=fieldType_CategoryStockLevel]:checked").val(),
                stack = $("#salesCollectionInStack_CategoryStockLevel").prop("checked"),
                IsLebelShow = $("#showlables_CategoryStockLevel").prop("checked");
            for (var i = 0, length = chart.options.series.length; i < length; i++) {
                chart.options.series[i].type = type;
                chart.options.series[i].labels.visible = IsLebelShow;
                chart.options.series[i].stack = stack;
            };

            if (fieldType == "Quantity") {
                for (var i = 0, length = chart.options.series.length; i < length; i++) {
                    chart.options.series[i].field = "Quantity";
                    chart.options.series[i].name = "Quantity";
                };
            }
            else {
                for (var i = 0, length = chart.options.series.length; i < length; i++) {
                    chart.options.series[i].field = "Total";
                    chart.options.series[i].name = "Total";
                    // series[i].stack = stack;
                };
            }
            if (type == "column") {
                //chart.options.series[0].labels.position = "top";
                chart.options.series[0].labels.rotation = -90;
            }
            if (type == "bar") {
                //  chart.options.series[0].labels.position = "center";
                chart.options.series[0].labels.rotation = 0;
            }
            chart.refresh();
        }

        $('#CategoryStockLevel').closest('.portlet').find('.reload').click(function () {
            var urlData = "?customerCode=&itemCode=&categoryCode=&companyCode=&branchCode=" + branchCodes + "&partyTypeCode=&formCode=";
            $('.btnCategoryDatagrid').data("type", "Chart");
            $("#CategoryStockLevel").data("kendoChart").options.categoryAxis.title.text = "";
            createCategoryStockLevel(urlData);
            RefreshChartFilterControl('@actionPageId');
        });

        $('#CategoryStockLevel').closest('.portlet').find('.fullscreen').click(function () {
            if ($(this).hasClass("on")) {
                $("#CategoryStockLevel").data("kendoChart").options.chartArea.height = 350;
            }
            else {
                $("#CategoryStockLevel").data("kendoChart").options.chartArea.height = 550;
            }
            $("#CategoryStockLevel").data("kendoChart").dataSource.read();
            $("#CategoryStockLevel").data("kendoChart").refresh();
        });
        $('#CategoryStockLevel').closest('.portlet').find('.config').click(function () {
            $(this).closest('.portlet').css('zIndex', 10040);
        });
        $('#CategoryStockLevel').closest('.portlet').find('.icon-arrow-down').click(function () {
            $(this).closest('.portlet').css('zIndex', 10040);

    <script>
        //initialize variables
        var config_MonthlyProcurementPlanChart = {
            url: window.location.protocol + "//" + window.location.host + "/api/PlanChartReportApi/getMonthlyProcurementPlanChart",
            dateFormat: $("input[name=DateFormat_MonthlyProcurementPlanChart]:checked").val(),
            fieldValue: $("input[name=fieldType_MonthlyProcurementPlanChart]:checked").val(),
            series: [{
                field: "PER_DAY_AMOUNT",
                name: "GrossAmount"//"#= group.value #"
            }],
            isStack: false,
            showLabel: $("#showLabel_MonthlyProcurementPlanChart").prop("checked"),
            color: ["#8A2BE2", "#ADFF2F", "#5bc0de", "#5cb85c", "#f2b661"],
            seriesType: $("input[name=seriesType_MonthlyProcurementPlanChart]:checked").val(),
            categoryField: "MONTH",
            categoryTitle: '',
            group: { field: "COMPANY_CODE" },
            sortField: "MONTHINT",
            sortFields: [{
                field: "YEAR",
                dir: "asc"
            },{
                field: "MONTHINT",
                dir:"asc"
            }],
            _oldData: {
                dateFormat: $("input[name=DateFormat_MonthlyProcurementPlanChart]:checked").val(),
                fieldValue: $("input[name=fieldType_MonthlyProcurementPlanChart]:checked").val()
            },

        };
        var _oldConfig_MonthlyProcurementPlanChart = JSON.stringify(config_MonthlyProcurementPlanChart);



        function loadDataSource_MonthlyProcurementPlanChart() {

            reportFilter = reportFilter == undefined ? ReportFilter.filterAdditionalData() : reportFilter;
            var filter = $.extend(true, {}, reportFilter);
            config_MonthlyProcurementPlanChart.dateFormat = $("input[name=DateFormat_MonthlyProcurementPlanChart]:checked").val();
            config_MonthlyProcurementPlanChart.showLabel = $("#showLabel_MonthlyProcurementPlanChart").prop("checked");
            var dataSource = new kendo.data.DataSource({
                transport: {
                    read: {
                        url: Arg.url(config_MonthlyProcurementPlanChart.url, { DateFormat: config_MonthlyProcurementPlanChart.dateFormat }),
                        dataType: "json", // <-- The default was "jsonp".
                        type: "POST",
                        contentType: "application/json; charset=utf-8"
                    },
                    parameterMap: function (options, type) {
                        var paramMap = JSON.stringify($.extend(options, filter));
                        delete paramMap.$inlinecount; // <-- remove inlinecount parameter.
                        delete paramMap.$format; // <-- remove format parameter.
                        return paramMap;
                    }
                },
                requestStart: function () {
                    if (IsDataGrid != "Grid") {
                        kendo.ui.progress($("#MonthlyProcurementPlanChartChart"), true);
                    }
                },
                requestEnd: function () {
                    kendo.ui.progress($("#MonthlyProcurementPlanChartChart"), false);
                },
                schema: {
                    parse: function (items) {
                        var item,
                            result = [];
                        var showzerovalue = $("#showzerovalue_MonthlyProcurementPlanChart").prop("checked");

                        if (showzerovalue) {
                            for (var i = 0; i < items.length; i++) {
                                item = items[i];
                                result.push(item);
                            }
                        }
                        else {
                            for (var i = 0; i < items.length; i++) {
                                item = items[i];
                                if (item.Amount !== 0 && item.Quantity !== 0) {
                                    result.push(item);
                                }
                            }
                        }


                        return result;
                    }
                },
                group: config_MonthlyProcurementPlanChart.group,
                sort: config_MonthlyProcurementPlanChart.sortFields
                //{
                //    field: config_MonthlyProcurementPlanChart.sortField,
                //    dir: "asc"
                //}

            });

            $("#MonthlyProcurementPlanChart .DisplayFilterContent a").text("");
            var IsDataGrid = $('.btnGrid_MonthlyProcurementPlanChart').data("type");
            if (IsDataGrid == "Grid") {
                CreateGrid_MonthlyProcurementPlanChart(dataSource);
                return;
            }

            $('.btnGrid_MonthlyProcurementPlanChart').data("type", "Chart");
            CreateChart_MonthlyProcurementPlanChart(dataSource);
            //CreateGrid_MonthlyProcurementPlanChart(dataSource);
        }
        function CreateChart_MonthlyProcurementPlanChart(dataSource) {
            $('.btnGrid_MonthlyProcurementPlanChart').data("type", "Chart");
            $("#MonthlyProcurementPlanChartChart").html('');
            $("#MonthlyProcurementPlanChartChart").removeAttr("style");
            $("#MonthlyProcurementPlanChartChart").removeAttr("class");

            dataSource.group(config_MonthlyProcurementPlanChart.group);

            $("#MonthlyProcurementPlanChartChart").kendoChart({
                chartArea: {
                    height: ($("#MonthlyProcurementPlanChartChart").hasClass("portlet-fullscreen")) ? 550 : 350,
                },
                onDrag: function (e) {
                    var chart = e.sender;
                    var ds = chart.dataSource;
                    var options = chart.options;

                    var categoryRange = e.axisRanges.CategoryAxis;

                    if (categoryRange) {
                        var xMin = categoryRange.min;
                        var xMax = categoryRange.max;

                        options.categoryAxis.min = xMin;
                        options.categoryAxis.max = xMax;

                        ds.filter(viewModel.getFilter(xMin, xMax));
                    }
                },
                pannable: {
                    lock: "y"
                },
                zoomable: {
                    mousewheel: {
                        lock: "y"
                    },
                    selection: {
                        lock: "y"
                    }
                },
                dataSource: dataSource,
                legend: {
                    position: "bottom",
                    visible: false
                },

                seriesColors: config_MonthlyProcurementPlanChart.color,
                seriesDefaults: {
                    type: config_MonthlyProcurementPlanChart.seriesType,
                    labels: {
                        visible: config_MonthlyProcurementPlanChart.showLabel,
                        template: "#= FormatLabels(value)#",
                        rotation: '270',
                        padding: {
                            left: -5
                        },
                    },
                    style: "smooth",
                },
                series: config_MonthlyProcurementPlanChart.series,
                categoryAxis: {
                    field: config_MonthlyProcurementPlanChart.categoryField,
                    labels: {
                        rotation: -45,
                    },
                    title: { text: config_MonthlyProcurementPlanChart.categoryTitle }
                },
                valueAxis: {
                    line: {
                        visible: true
                    },
                    labels: {
                        rotation: 'auto',
                        template: "#= FormatLabels(value)#"
                    },
                    title: { text: amountFigureType }
                },
                tooltip: {
                    visible: true,
                    format: "{0}",
                    template: "#= category #: \n #= FormatLabels(value)#"
                },
                dataBound: function (e) {
                    var maxValue = getMaxValueFromDataSource(e);
                    var majorunit = Math.max(6, maxValue / 6);
                    e.sender.options.valueAxis.majorUnit = majorunit;
                    e.sender.options.valueAxis.max = maxValue + majorunit;
                    $("#MonthlyProcurementPlanChartChart").next(".overlay").toggle(maxValue <= 0);
                    e.sender.options.categoryAxis.categories = getCategoryFromDataSource(e);
                    //
                    //if (totalChartList.length > 0) {
                    //    var chart = totalChartList[0];
                    //    totalChartList = totalChartList.splice(1, totalChartList.length);
                    //    loadChartSync(chart);
                    //}

                },
                //seriesClick: function (e) {
                //    if (e.dataItem.Day == null) {
                //        var url = window.location.protocol + "//" + window.location.host + "/api/SalesDashboard/GetSalesDailyFiscalYearReport?month=" + e.dataItem.MonthInt + "&dbName=" + e.dataItem.DBName;
                //        config_MonthlyProcurementPlanChart.url = url;
                //        config_MonthlyProcurementPlanChart.categoryField = "Day";
                //        config_MonthlyProcurementPlanChart.categoryTitle = e.dataItem.DisplayMonth;
                //        loadDataSource_MonthlyProcurementPlanChart();
                //    }
                //},
            });
        }
        function CreateGrid_MonthlyProcurementPlanChart(dataSource) {

            $("#MonthlyProcurementPlanChartChart").html('');
            $("#MonthlyProcurementPlanChartChart").removeAttr("style");
            $("#MonthlyProcurementPlanChartChart").removeAttr("class");
            $('.btnGrid_MonthlyProcurementPlanChart').data("type", "Grid");
            var format = $("input[name=DateFormat_MonthlyProcurementPlanChart]:checked").val();
            var monthTitle = "Month";
            dataSource = dataSource == undefined ? $("#MonthlyProcurementPlanChartChart").data("kendoChart").dataSource : dataSource;
            if (dataSource.data().length > 0 && dataSource.data()[0].Day != null) {
                monthField = "Day";
                monthTitle = "Days [month : " + dataSource.data()[0].DisplayMonth + "]";
            }
            else {
                monthField = config_MonthlyProcurementPlanChart.categoryField;
                monthTitle = "Month"
            }
            dataSource.group([]);
            $("#MonthlyProcurementPlanChartChart").kendoGrid({
                dataSource: dataSource,
                height: $("#MonthlyProcurementPlanChartChart").hasClass("portlet-fullscreen") ? 550 : 350,
                groupable: false,
                sortable: true,
                //selectable: "multiple",
                toolbar: [{ template: kendo.template($("#toolbar-template").html()) }],
                excel: {
                    fileName: "Sales Plan Report",
                    allPages: true
                },
                columns: [{
                    field: monthField,
                    title: monthTitle,
                    width: 240
                },  {
                    field: "PER_DAY_AMOUNT",
                    title: "Amount",
                    format: "{0:n}",
                    attributes:
                    {
                        style: "text-align:right;"
                    },

                }],
                dataBound: function (e) {
                    var gird = e.sender;
                    gird.table.find(".k-grouping-row:not(:first-child)").each(function () {
                        gird.collapseGroup(this);
                    });
                }
            });
        }



        function refreshMonthlyProcurementPlanChart() {
            if ($(".btnGrid_MonthlyProcurementPlanChart").data("type") == "Grid")// data-grid toogle chart option in data-grid attribute in div
            {
                $(".btnGrid_MonthlyProcurementPlanChart").data("type", "Chart");
                loadDataSource_MonthlyProcurementPlanChart();
                return;
            }

            var chart = $("#MonthlyProcurementPlanChartChart").data("kendoChart"),
                type = $("input[name=seriesType_MonthlyProcurementPlanChart]:checked").val(),
                stack = $("#Stack_MonthlyProcurementPlanChart").prop("checked"),
                IsLebelShow = $("#showLabel_MonthlyProcurementPlanChart").prop("checked"),
                fieldValue = $("input[name=fieldType_MonthlyProcurementPlanChart]:checked").val();

            for (var i = 0, length = config_MonthlyProcurementPlanChart.series.length; i < length; i++) {
                config_MonthlyProcurementPlanChart.series[i].stack = stack;
                config_MonthlyProcurementPlanChart.series[i].type = type;
                if (fieldValue == "Amount")
                    config_MonthlyProcurementPlanChart.series[i].field = "PER_DAY_AMOUNT";


            };

            chart.setOptions({
                series: config_MonthlyProcurementPlanChart.series,
            });

            for (var i = 0; i < chart.options.series.length; i++) {
                chart.options.series[i].labels.visible = IsLebelShow;
                if (type == "column") {
                    chart.options.series[i].labels.rotation = -90;
                }
                if (type == "bar") {
                    chart.options.series[i].labels.rotation = 0;
                }
            }

            chart.refresh();
        }
        $('#apply_MonthlyProcurementPlanChart').click(function () {
            var checkedDateFormat = $("input[name=DateFormat_MonthlyProcurementPlanChart]:checked").val();
            var checkedFieldValue = $("input[name=fieldType_MonthlyProcurementPlanChart]:checked").val();
            var IsChanged = false;
            if (config_MonthlyProcurementPlanChart._oldData.dateFormat != checkedDateFormat) {
                IsChanged = true;
                config_MonthlyProcurementPlanChart = JSON.parse(_oldConfig_MonthlyProcurementPlanChart);
                config_MonthlyProcurementPlanChart._oldData.dateFormat = checkedDateFormat;

            }
            if (config_MonthlyProcurementPlanChart._oldData.fieldValue != checkedFieldValue) {
                refreshMonthlyProcurementPlanChart();
                config_MonthlyProcurementPlanChart._oldData.fieldValue = checkedFieldValue;
            }
            $('.btnGrid_MonthlyProcurementPlanChart').data("type", "Chart");
            ChartFilter('MonthlyProcurementPlanChart', "loadDataSource_MonthlyProcurementPlanChart", IsChanged);
        });
        $(document).ready(function () {
            loadDataSource_MonthlyProcurementPlanChart();

            //start Binding
            $(document).bind("kendo:skinChange", loadDataSource_MonthlyProcurementPlanChart);

            $('#MonthlyProcurementPlanChartChart').closest('.portlet').find('.reload').click(function () {
                RefreshChartFilterControl('MonthlyProcurementPlanChart');
                $('.btnGrid_MonthlyProcurementPlanChart').data("type", "Chart");
                config_MonthlyProcurementPlanChart = JSON.parse(_oldConfig_MonthlyProcurementPlanChart);
                loadDataSource_MonthlyProcurementPlanChart();
            });



            $(".btnGrid_MonthlyProcurementPlanChart").click(function () {
                var datasource = $("#MonthlyProcurementPlanChartChart").data("kendoChart").dataSource;
                $('.btnGrid_MonthlyProcurementPlanChart').data("type") == "Chart" ? CreateGrid_MonthlyProcurementPlanChart(datasource) : CreateChart_MonthlyProcurementPlanChart(datasource);
                $("i", this).toggleClass("icon-bar-chart");
            });
            $(".options_MonthlyProcurementPlanChart").bind("change", function () {  // data-grid toogle chart option in data-grid attribute in button
                if ($('.btnGrid_MonthlyProcurementPlanChart').data("type") == "Chart")
                    refreshMonthlyProcurementPlanChart();
                else
                    chart_grid_option_change("btnGrid_MonthlyProcurementPlanChart", "loadDataSource_MonthlyProcurementPlanChart");
            });
            $("#showLabel_MonthlyProcurementPlanChart").bind("change", function () {// data-grid toogle chart option in data-grid attribute in button
                var temp = $('.btnGrid_MonthlyProcurementPlanChart').data("type");
                $('.btnGrid_MonthlyProcurementPlanChart').data("type", "temp");
                refreshMonthlyProcurementPlanChart()
                $('.btnGrid_MonthlyProcurementPlanChart').data("type", temp);
            });
            $('#Stack_MonthlyProcurementPlanChart').on('click', function () {// data-grid toogle chart option in data-grid attribute in button
                var temp = $('.btnGrid_MonthlyProcurementPlanChart').data("type");
                $('.btnGrid_MonthlyProcurementPlanChart').data("type", "temp");
                refreshMonthlyProcurementPlanChart()
                $('.btnGrid_MonthlyProcurementPlanChart').data("type", temp);
            });

        });

    </script>
</div>

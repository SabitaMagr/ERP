        function refreshEmpwiseSalesPlanCompareByItemGroupChart() {
            if ($(".btnGrid_EmpwiseSalesPlanCompareByItemGroupChart").data("type") == "Grid")// data-grid toogle chart option in data-grid attribute in div
            {
                $(".btnGrid_EmpwiseSalesPlanCompareByItemGroupChart").data("type", "Chart");
                loadDataSource_EmpwiseSalesPlanCompareByItemGroupChart();
                return;
            }

            var chart = $("#EmpwiseSalesPlanCompareByItemGroupChartChart").data("kendoChart"),
                type = $("input[name=seriesType_EmpwiseSalesPlanCompareByItemGroupChart]:checked").val(),
                stack = $("#Stack_EmpwiseSalesPlanCompareByItemGroupChart").prop("checked"),
                IsLebelShow = $("#showLabel_EmpwiseSalesPlanCompareByItemGroupChart").prop("checked"),
                fieldValue = $("input[name=fieldType_EmpwiseSalesPlanCompareByItemGroupChart]:checked").val();

            for (var i = 0, length = config_EmpwiseSalesPlanCompareByItemGroupChart.series.length; i < length; i++) {
                config_EmpwiseSalesPlanCompareByItemGroupChart.series[i].stack = stack;
                config_EmpwiseSalesPlanCompareByItemGroupChart.series[i].type = type;
                if (fieldValue == "Amount")
                    config_EmpwiseSalesPlanCompareByItemGroupChart.series[i].field = "PER_DAY_AMOUNT";
                else
                    config_EmpwiseSalesPlanCompareByItemGroupChart.series[i].field = "PER_DAY_QUANTITY";

            };

            chart.setOptions({
                series: config_EmpwiseSalesPlanCompareByItemGroupChart.series,
            });

            for (var i = 0; i < chart.options.series.length; i++) {
                chart.options.series[i].labels.visible = IsLebelShow;
                if (type == "column") {
                    chart.options.series[i].labels.rotation = -90;
                }
                if (type == "bar") {
                    chart.options.series[i].labels.rotation = 0;
                }
            }

            chart.refresh();
        }

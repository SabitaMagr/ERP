                refreshEmpwiseSalesPlanCompareByItemGroupChart()
                $('.btnGrid_EmpwiseSalesPlanCompareByItemGroupChart').data("type", temp);
            });
            $('#Stack_EmpwiseSalesPlanCompareByItemGroupChart').on('click', function () {// data-grid toogle chart option in data-grid attribute in button

                config_EmpwiseSalesPlanCompareByItemGroupChart = JSON.parse(_oldConfig_EmpwiseSalesPlanCompareByItemGroupChart);
                config_EmpwiseSalesPlanCompareByItemGroupChart._oldData.dateFormat = checkedDateFormat;

            }
            if (config_EmpwiseSalesPlanCompareByItemGroupChart._oldData.fieldValue != checkedFieldValue) {
                refreshEmpwiseSalesPlanCompareByItemGroupChart();
                config_EmpwiseSalesPlanCompareByItemGroupChart._oldData.fieldValue = checkedFieldValue;
            }

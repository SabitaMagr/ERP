</div>

<div class="portlet portlet-sortable light bordered" id="@actionPageId">
    <div class="portlet-title">
        <div class="caption">
            <i class="icon-bar-chart font-green-haze"></i>
            <span class="caption-subject bold uppercase font-green-haze custom-modal">@chartTitle</span>
        </div>
        <div class="tools">
            <a href="javascript:;" class="collapse"></a>
            <a class="btnGrid btnGrid_@actionPageId" data-type="Chart" data-title="Grid" data-valuefor="month" data-month="0" data-selectedValue="0" data-category="0">
                <i class="fa fa-table"></i>
            </a>
            <div class="btn-group">
                <a class="btn dropdown-toggle download-btn" data-title="Download" data-toggle="dropdown" href="#">
                    <i class="icon-arrow-down Thirdcustom"></i>
                </a>
                <ul class="dropdown-menu custom">
                    <div class="btn-group-custom">
                        <button type="button" data-id="MonthlyBranchSalesChart" class="export-pdf btn default red-stripe"><i class="fa fa-file-pdf-o"></i>PDF</button>
                        <button type="button" data-id="MonthlyBranchSalesChart" class="export-img btn default blue-stripe"><i class="fa fa-image-o"></i>Image</button>
                        <button type="button" data-id="MonthlyBranchSalesChart" class="export-svg btn default green-stripe">SVG</button>
                    </div>
                </ul>
            </div>
            <a href="#Model_@actionPageId" data-toggle="modal" class="config"></a>
            <a href="javascript:;" class="reload"></a>
            <a href="javascript:;" class="fullscreen"></a>
            <a href="javascript:;" class="remove"></a>
        </div>
    </div>
    <div class="portlet-body">
        <script type="text/x-kendo-template" id="toolbar-template">
            <div class="k-header k-grid-toolbar pull-right">
                <a class="k-button k-button-icontext k-grid-excel" href="javascript:">
                    <i class="fa fa-file-excel-o"></i>
                </a>
        </script>
        <div class="k-content wide">
            <div id="MonthlyBranchSalesChart"></div>
            <div class="overlay"><div>No data available</div></div>
            <div class="AmountFigureType"></div>
            <div class="DisplayFilterContent"><a href="javascript:;" data-toggle="tooltip" title=""></a></div>
        </div>
    </div>

    <script>
        var pageId = '@actionPageId';
        var MonthlyBranchSales = (function () {
            //initialize variables

            var config = {
                url: window.location.protocol + "//" + window.location.host + "/api/SalesDashboard/GetSalesBranchMonthlyReport"
                    + "?DateFormat=" + $("input[name=DateFormat_MonthlyBranchSales]:checked").val()
                    + "&customerCode=&itemCode=&categoryCode=&companyCode=&branchCode=&partyTypeCode=&formCode="
                    + "&salesReturn=" + $("#showSalesReturn_MonthlyBranchSales").prop("checked")
                    + "&AmountType=" + $("input[name=fieldType_MonthlyBranchSales]:checked").val(),
                series: [{
                    field: $("input[name=fieldType_MonthlyBranchSales]:checked").val(),
                    name: "#= group.value #"
                }],
                color: ["#428bca", "#da3b36", "#e67d4a", "#5bc0de", "#5cb85c", "#f2b661"],
                categoryField: "Month",
                categoryTitle: $("input[name=fieldType_MonthlyBranchSales]:checked").val(),
                group: { field: "BranchName" },
                sortField: "NepaliMonthInt",

                isStack: false,
                fieldValue: $("input[name=fieldType_MonthlyBranchSales]:checked").val(),
                showLabel: $("#showLabel_MonthlyBranchSales").prop("checked"),
                seriesType: $("input[name=seriesType_MonthlyBranchSales]:checked").val(),

                _oldData: {
                    dateFormat: $("input[name=DateFormat_MonthlyBranchSales]:checked").val(),
                    fieldValue: $("input[name=fieldType_MonthlyBranchSales]:checked").val()
                },

            };
            var _oldConfig = JSON.stringify(config);

            function PreInit() {
                //var pageId = pageId_MonthlyBranchSales;
                $.ajax({
                    type: 'POST',
                    data: { 'ChartName': pageId },
                    async: false,
                    url: window.location.protocol + "//" + window.location.host + "/Main/GetUserWiseChartConfig",
                    success: function (data) {
                        if (data != "") {
                            //for series Type
                            $("input[name=seriesType_" + pageId + "]").filter('[value=' + data.ChartType + ']').prop('checked', true);
                            $("input[name=seriesType_" + pageId + "]").parent().removeClass("active");
                            $("input[name=seriesType_" + pageId + "]:checked").parent().addClass("active");
                            //for dateFormat
                            $("input[name=DateFormat_" + pageId + "]").filter('[value=' + data.DateFormat + ']').prop('checked', true);
                            //for fieldValue
                            $("input[name=fieldType_" + pageId + "]").filter('[value=' + data.FieldValue + ']').prop('checked', true);
                            $("input[name=fieldType_" + pageId + "]").parent().removeClass("active");
                            $("input[name=fieldType_" + pageId + "]:checked").parent().addClass("active");
                            //for showLabel
                            data.ShowLabel == "true" ? $("#showLabel_" + pageId).prop("checked", true) : $("#showLabel_" + pageId).prop("checked", false);
                            //for sales return
                            data.SalesReturn == "true" ? $("#showSalesReturn_MonthlyBranchSales").prop("checked", true) : $("#showSalesReturn_MonthlyBranchSales").prop("checked", false);
                            config.seriesType = data.ChartType;
                            config.dateFormat = data.DateFormat;
                            config.fieldValue = data.FieldValue;
                            config.isStack = data.IsStack;
                            config.showLabel = data.ShowLabel;
                        }
                    }
                });
                loadDataSource()
            }
            function loadDataSource() {
                
                reportFilter = reportFilter == undefined ? ReportFilter.filterAdditionalData() : reportFilter;
                var filter = $.extend(true, {}, reportFilter);
                config.dateFormat = $("input[name=DateFormat_MonthlyBranchSales]:checked").val();
                // config.url = window.location.protocol + "//" + window.location.host + "/api/SalesDashboard/GetSalesMonthlyFiscalYearReport?DateFormat=" + $("input[name=DateFormat_MonthlyBranchSalesChart]:checked").val();
                config.showLabel = $("#showLabel_MonthlyBranchSales").prop("checked");
                var dataSource = new kendo.data.DataSource({
                    transport: {
                        read: {
                            url: config.url, //,
                            dataType: "json", // <-- The default was "jsonp".
                            type: "POST",
                            contentType: "application/json; charset=utf-8"
                        },
                        parameterMap: function (options, type) {
                            
                            var paramMap = JSON.stringify($.extend(options, filter));
                            delete paramMap.$inlinecount; // <-- remove inlinecount parameter.
                            delete paramMap.$format; // <-- remove format parameter.
                            return paramMap;
                        }
                    },
                    requestStart: function () {
                        if (IsDataGrid != "Grid") {
                            kendo.ui.progress($("#MonthlyBranchSalesChart"), true);
                        }
                    },
                    requestEnd: function () {
                        kendo.ui.progress($("#MonthlyBranchSalesChart"), false);
                    },
                    group: config.group,
                    sort: {
                        field: config.sortField,
                        dir: "asc"
                    }

                });

                $("#MonthlyBranchSales .DisplayFilterContent a").text("");
                var IsDataGrid = $('.btnGrid_MonthlyBranchSales').data("type");
                //if (IsDataGrid == "Grid") {
                //    CreateGrid(dataSource);
                //    return;
                //}
                CreateChart(dataSource);
            }
            function CreateChart(dataSource) {
                $('.btnGrid_MonthlyBranchSales').data("type", "Chart");
                $("#MonthlyBranchSalesChart").html('');
                $("#MonthlyBranchSalesChart").removeAttr("style");
                $("#MonthlyBranchSalesChart").removeAttr("class");
                $("#MonthlyBranchSalesChart").kendoChart({
                    chartArea: {
                        height: ($("#MonthlyBranchSalesChart").hasClass("portlet-fullscreen")) ? 550 : 350,
                    },
                    onDrag: function (e) {
                        var chart = e.sender;
                        var ds = chart.dataSource;
                        var options = chart.options;

                        var categoryRange = e.axisRanges.CategoryAxis;

                        if (categoryRange) {
                            var xMin = categoryRange.min;
                            var xMax = categoryRange.max;

                            options.categoryAxis.min = xMin;
                            options.categoryAxis.max = xMax;

                            ds.filter(viewModel.getFilter(xMin, xMax));
                        }
                    },
                    pannable: {
                        lock: "y"
                    },
                    zoomable: {
                        mousewheel: {
                            lock: "y"
                        },
                        selection: {
                            lock: "y"
                        }
                    },
                    dataSource: dataSource,
                    legend: {
                        position: "bottom"
                    },
                    seriesColors: config.color,
                    seriesDefaults: {
                        type: config.seriesType,
                        labels: {
                            visible: config.showLabel,
                            template: "#= FormatSeriesLabels(value)#",
                            rotation: '270',
                            padding: {
                                left: -5
                            },
                        },
                        style: "smooth",
                    },
                    series: config.series,
                    categoryAxis: {
                        field: config.categoryField,
                        labels: {
                            rotation: -45,
                        },
                        //title: { text: config.categoryTitle }
                    },
                    valueAxis: {
                        line: {
                            visible: true
                        },
                        labels: {
                            rotation: 'auto',
                            template: "#= FormatSeriesLabels(value)#"
                        },
                        title: { text: amountFigureType }
                    },
                    tooltip: {
                        visible: true,
                        format: "{0}",
                        template: "#= category #: \n #= FormatSeriesLabels(value)#"
                    },
                    dataBound: function (e) {
                        var maxValue = getMaxValueFromDataSource(e);
                        var majorunit = Math.max(6, maxValue / 6);
                        e.sender.options.valueAxis.majorUnit = majorunit;
                        e.sender.options.valueAxis.max = maxValue + majorunit;
                        e.sender.options.valueAxis.axisCrossingValue = [0, -(maxValue + majorunit)];
                        $("#MonthlyBranchSalesChart").next(".overlay").toggle(maxValue <= 0);
                        e.sender.options.categoryAxis.categories = getCategoryFromDataSource(e);
                    },
                    seriesClick: function (e) {

                        if (e.dataItem.Branch_Code == null || typeof (e.dataItem.Branch_Code) == 'undefined')
                            return;
                        $("#hiddenBranch").val(e.dataItem.Branch_Code);
                        $("#hiddenMonthInt").val(e.dataItem.NepaliMonthInt);
                        $("#SeriesModel_" + pageId).modal("show");
                        $('#seriesApply_MonthlyBranchSales').unbind("click");
                        $('#seriesApply_MonthlyBranchSales').bind("click", seriesApplyEvent);
                    },
                });
            }
            function seriesApplyEvent(e) {

                var checkedValue = $("input[name=SeriesOption_MonthlyBranchSales]:checked").val();
                if (checkedValue == "Day") {
                    config.url = window.location.protocol + "//" + window.location.host + "/api/SalesDashboard/GetSalesBranchDailyReport"
                        + "?monthName=" + String($("#hiddenMonthInt").val())
                        + "&branchName=" + String($("#hiddenBranch").val())
                        + "&DateFormat=" + $("input[name=DateFormat_MonthlyBranchSales]:checked").val()
                        + "&salesReturn=" + $("#showSalesReturn_MonthlyBranchSales").prop("checked")
                        + "&AmountType=" + $("input[name=fieldType_MonthlyBranchSales]:checked").val();

                    config.categoryField = "day";
                    config.sortField = "day";
                    reportFilter = reportFilter == undefined ? ReportFilter.filterAdditionalData() : reportFilter;
                }
                else {
                    $("#NetAmountBtn_@actionPageId").hide();
                    $("#TotalAmountBtn_@actionPageId").hide();
                    ShowFilters();
                    config.url = window.location.protocol + "//" + window.location.host + "/api/SalesDashboard/GetSalesBranchItemWiseReport"
                        + "?monthCode=" + String($("#hiddenMonthInt").val())
                        + "&branchCode=" + String($("#hiddenBranch").val())
                        + "&companyCode=";

                    $("input[name=fieldType_" + pageId + "]").filter('[value=GrossAmount]').prop('checked', true);
                    $("input[name=fieldType_" + pageId + "]").parent().removeClass("active")
                    $("input[name=fieldType_" + pageId + "]:checked").parent().addClass("active");
                    config.categoryField = "Description";
                    config.sortField = "Code";
                    reportFilter = reportFilter == undefined ? ReportFilter.filterAdditionalData() : reportFilter;
                }
                loadDataSource();
            }
            function CreateGrid(dataSource) {
                $("#MonthlyBranchSalesChart").html('');
                $("#MonthlyBranchSalesChart").removeAttr("style");
                $("#MonthlyBranchSalesChart").removeAttr("class");
                $('.btnGrid_MonthlyBranchSales').data("type", "Grid");

                var Column = [],
                dataSource = dataSource == undefined ? $("#MonthlyBranchSalesChart").data("kendoChart").dataSource : dataSource;
                if (dataSource.data()[0].Branch_Code != null) {
                    Column = [{
                        field: "Month",
                        title: "Month",
                    }, {
                        field: "Quantity",
                        title: "Quantity",
                        format: "{0:n0}",
                        attributes: {
                            style: "text-align: right;"
                        },
                    }, {
                        field: "GrossAmount",
                        title: "Gross Amount",
                        format: "{0:n}",
                        attributes: {
                            style: "text-align: right;"
                        },
                    }, {
                        field: "NetAmount",
                        title: "Net Amount",
                        format: "{0:n}",
                        attributes: {
                            style: "text-align: right;"
                        },
                    }, {
                        field: "TotalAmount",
                        title: "Total Amount",
                        format: "{0:n}",
                        attributes: {
                            style: "text-align: right;"
                        },
                    }];
                }
                else if (dataSource.data()[0].day != null) {
                    Column = [{
                        field: "day",
                        title: "Day [" + dataSource.data()[0].Month + "]",
                    }, {
                        field: "Quantity",
                        title: "Quantity",
                        format: "{0:n0}",
                        attributes: {
                            style: "text-align: right;"
                        },
                    }, {
                        field: "GrossAmount",
                        title: "Gross Amount",
                        format: "{0:n}",
                        attributes: {
                            style: "text-align: right;"
                        },
                    }, {
                        field: "NetAmount",
                        title: "Net Amount",
                        format: "{0:n}",
                        attributes: {
                            style: "text-align: right;"
                        },
                    }, {
                        field: "TotalAmount",
                        title: "Total Amount",
                        format: "{0:n}",
                        attributes: {
                            style: "text-align: right;"
                        },
                    }];
                }
                else {
                    Column = [{
                        field: "Description",
                        title: "Item",
                        width: 240
                    }, {
                        field: "Quantity",
                        title: "Quantity",
                        format: "{0:n0}",
                        attributes: {
                            style: "text-align: right;"
                        },
                    }, {
                        field: "GrossAmount",
                        title: "Amount",
                        format: "{0:n}",
                        attributes: {
                            style: "text-align: right;"
                        },
                    }];
                }
                $("#MonthlyBranchSalesChart").kendoGrid({
                    dataSource: dataSource,
                    height: $("#MonthlyBranchSalesChart").hasClass("portlet-fullscreen") ? 550 : 350,
                    groupable: false,
                    sortable: true,
                    //selectable: "multiple",
                    toolbar: [{ template: kendo.template($("#toolbar-template").html()) }],
                    excel: {
                        fileName: "BranchWise Sales Report",
                        allPages: true
                    },
                    columns: Column,
                    dataBound: function (e) {

                        var gird = e.sender;
                        gird.table.find(".k-grouping-row:not(:first-child)").each(function () {
                            gird.collapseGroup(this);
                        });
                    }
                });
            }
            function refreshChart(flag) {
                //check if showlevel and stack changed
                if (flag != undefined && flag.data == false) {
                    if ($(".btnGrid_MonthlyBranchSales").data("type") == "Grid") {
                        $(".btnGrid_MonthlyBranchSales").data("type", "Chart");
                        loadDataSource();
                        return;
                    }
                }
                //check if series type changed
                if (flag != undefined && flag.data.options != undefined) {
                    if ($(".btnGrid_MonthlyBranchSales").data("type") == "Grid") {
                        chart_grid_option_change("btnGrid_MonthlyBranchSales", MonthlyBranchSales.init);
                        return;
                    }
                }
                var chart = $("#MonthlyBranchSalesChart").data("kendoChart"),
                    type = $("input[name=seriesType_MonthlyBranchSales]:checked").val(),
                    stack = $("#Stack_MonthlyBranchSales").prop("checked"),
                    IsLebelShow = $("#showLabel_MonthlyBranchSales").prop("checked"),
                    fieldType = $("input[name=fieldType_MonthlyBranchSales]:checked").val();

                for (var i = 0, length = chart.options.series.length; i < length; i++) {
                    chart.options.series[i].stack = stack;
                    chart.options.series[i].type = type;
                    chart.options.series[i].field = fieldType;
                    chart.options.series[i].labels.visible = IsLebelShow;
                }
                chart.refresh();
            }

            //event Bind
            function applyClickEvent() {

                var checkedFieldValue = $("input[name=fieldType_@actionPageId]:checked").val();
                var checkedDateFormat = $("input[name=DateFormat_@actionPageId]:checked").val();
                var idx = config.url.indexOf("DateFormat=") + 11;
                config.url = idx > 10 ? config.url.substr(0, idx) + checkedDateFormat + config.url.substr(idx + 2) : config.url;
                idx = config.url.indexOf("AmountType=") + 11;
                config.url = idx > 10 ? (config.url.substr(0, idx) + checkedFieldValue + config.url.substr(idx + config.url.length)) : config.url;
                //var IsChanged = false;
                //if (config._oldData.dateFormat != checkedDateFormat) {
                //    IsChanged = true;
                //    config.url = window.location.protocol + "//" + window.location.host + "/api/SalesDashboard/GetSalesBranchMonthlyReport";
                //    config._oldData.dateFormat = checkedDateFormat;

                //}
                //if (config._oldData.fieldValue != checkedFieldValue) {
                //    refreshChart();
                //    config._oldData.fieldValue = checkedFieldValue;
                //}
                //config.url = window.location.protocol + "//" + window.location.host + "/api/SalesDashboard/GetSalesBranchMonthlyReport"
                //        + "?DateFormat=" + $("input[name=DateFormat_MonthlyBranchSales]:checked").val()
                //        + "&customerCode=&itemCode=&categoryCode=&companyCode=&branchCode=&partyTypeCode=&formCode="
                //        + "&salesReturn=" + $("#showSalesReturn_MonthlyBranchSales").prop("checked");
                config.series = [{
                    field: checkedFieldValue,
                    name: "#= group.value #"
                }];
                ChartFilter('MonthlyBranchSales', MonthlyBranchSales.init, true);
            }
            function reloadClickEvent() {
                RefreshChartFilterControl('MonthlyBranchSales');
                PreInit();
                config = JSON.parse(_oldConfig);


                reportFilter.ReportFilters.BranchFilter = [];

                $("#NetAmountBtn_@actionPageId").show();
                $("#TotalAmountBtn_@actionPageId").show();
                ShowFilters();

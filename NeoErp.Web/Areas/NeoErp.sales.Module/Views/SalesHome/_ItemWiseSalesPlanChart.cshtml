        function refreshItemWiseSalesPlan() {
            if ($(".btnGrid_ItemWiseSalesPlan").data("type") == "Grid")// data-grid toogle chart option in data-grid attribute in div
            {
                $(".btnGrid_ItemWiseSalesPlan").data("type", "Chart");
                loadDataSource_ItemWiseSalesPlan();
                return;
            }

            var chart = $("#ItemWiseSalesPlanChart").data("kendoChart"),
                type = $("input[name=seriesType_ItemWiseSalesPlan]:checked").val(),
                stack = $("#Stack_ItemWiseSalesPlan").prop("checked"),
                IsLebelShow = $("#showLabel_ItemWiseSalesPlan").prop("checked"),
                fieldValue = $("input[name=fieldType_ItemWiseSalesPlan]:checked").val();

            for (var i = 0, length = config_ItemWiseSalesPlan.series.length; i < length; i++) {
                config_ItemWiseSalesPlan.series[i].stack = stack;
                config_ItemWiseSalesPlan.series[i].type = type;
                if (fieldValue == "Amount")
                    config_ItemWiseSalesPlan.series[i].field = "PER_DAY_AMOUNT";
                else
                    config_ItemWiseSalesPlan.series[i].field = "PER_DAY_QUANTITY";

            };

            chart.setOptions({
                series: config_ItemWiseSalesPlan.series,
            });

            for (var i = 0; i < chart.options.series.length; i++) {
                chart.options.series[i].labels.visible = IsLebelShow;
                if (type == "column") {
                    chart.options.series[i].labels.rotation = -90;
                }
                if (type == "bar") {
                    chart.options.series[i].labels.rotation = 0;
                }
            }

            chart.refresh();
        }

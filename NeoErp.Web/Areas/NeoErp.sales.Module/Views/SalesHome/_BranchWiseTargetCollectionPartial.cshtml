    <div class="portlet-body">
        <script type="text/x-kendo-template" id="toolbar-template">
            <div class="k-header k-grid-toolbar pull-right">

                <a class="k-button k-button-icontext k-grid-excel" href="javascript:">
                    <i class="fa fa-file-excel-o"></i>
                </a>
        </script>
        <div class="k-content wide">
            <div id="TargetCollectionChart_branchwise">Branchwise Target Vs Collection</div>
            <div class="AmountFigureType"></div>
            <div class="DisplayFilterContent"><a href="javascript:;" data-toggle="tooltip" title=""></a></div>
        </div>
    </div>
    <script>

        var toggleFlag_BranchWiseTargetCollectionPartial = true;
        var dataProvider = [];
        var series_BranchWiseTargetCollectionPartial = [{
            field: "Target",
            name: "Target"
        }, {
            field: "Collection",
            name: "Collection"
        }];
        var IsStack = false;
        var colors = ["#428bca", "#da3b36", "#e67d4a", "#5bc0de", "#5cb85c", "#f2b661"];

        $('#TargetCollectionChart_branchwise').closest('.portlet').find('.reload').click(function () {
            // var urlData = "?customerCode=&itemCode=&categoryCode=&companyCode=&branchCode=" + branchCodes + "&partyTypeCode=&formCode=";
            createbranchwiseTargetCollectionChart();
            RefreshChartFilterControl('@actionPageId');
        });

        $('#TargetCollectionChart_branchwise').closest('.portlet').find('.fullscreen').click(function () {
            if ($(this).hasClass("on")) {
                $("#TargetCollectionChart_branchwise").data("kendoChart").options.chartArea.height = 350;
            }
            else {
                $("#TargetCollectionChart_branchwise").data("kendoChart").options.chartArea.height = 550;
            }
            $("#TargetCollectionChart_branchwise").data("kendoChart").dataSource.read();
            $("#TargetCollectionChart_branchwise").data("kendoChart").refresh();
        });
        $('#TargetCollectionChart_branchwise').closest('.portlet').find('.config').click(function () {
            $(this).closest('.portlet').css('zIndex', 10040);
        });
        $('#TargetCollectionChart_branchwise').closest('.portlet').find('.icon-arrow-down').click(function () {
            $(this).closest('.portlet').css('zIndex', 10040);
        });
        function shortLabels(value) {
            return kendo.toString((value / 100000000), "\\ #") + "k";
        }



        function createbranchwiseTargetCollectionChart(urlData) {
            urlData = (urlData == undefined) ? "?customerCode=&itemCode=&categoryCode=&companyCode=&branchCode=" + branchCodes + "&partyTypeCode=&formCode=" : urlData;
            var mainUrl = window.location.protocol + "//" + window.location.host + "/api/SalesDashboard/GetTargetCollectionBranchWiseReport";
            var IsDataGrid = $('.btnDatagrid_BranchWiseTargetCollectionPartial').data("type");
             reportFilter = reportFilter == undefined ? ReportFilter.filterAdditionalData() : reportFilter;
            var dataSource = new kendo.data.DataSource({
                transport: {
                    read: {
                        url: mainUrl, // <-- Get data from here.
                        dataType: "json", // <-- The default was "jsonp".
                        type: "POST",
                        contentType: "application/json; charset=utf-8"
                    },
                    parameterMap: function (options, type) {
                        var paramMap = JSON.stringify($.extend(options, reportFilter));
                        delete paramMap.$inlinecount; // <-- remove inlinecount parameter.
                        delete paramMap.$format; // <-- remove format parameter.
                        return paramMap;
                    }
                },
                requestStart: function () {
                    if (IsDataGrid != "Grid") {
                        kendo.ui.progress($("#TargetCollectionChart_branchwise"), true);
                    }
                },
                requestEnd: function () {
                    kendo.ui.progress($("#TargetCollectionChart_branchwise"), false);
                },
                sort: {
                    field: "BranchName",
                    dir: "asc"
                },
                serverSorting: false,
                serverPaging: false,
                serverFiltering: false,
                pageSize: 20,
            });
            dataProvider = dataSource;

            //var IsDataGrid = $("input[name=salesCollectionIn_DataGrid]").prop("checked");
            // data-grid set option on ceate funciton
            $("#BranchWiseTargetCollectionPartial .DisplayFilterContent a").text("");
           
            if (IsDataGrid == "Grid") {
                LoadDataGrid_BranchWiseTargetCollectionPartial(dataSource);
                return;
            }

            $("#TargetCollectionChart_branchwise").kendoChart({
                chartArea: {
                    height: $("#BranchWiseTargetCollectionPartial").hasClass("portlet-fullscreen") ? 550 : 350,
                },
                onDrag: function (e) {
                    var chart = e.sender;
                    var ds = chart.dataSource;
                    var options = chart.options;

                    var categoryRange = e.axisRanges.CategoryAxis;

                    if (categoryRange) {
                        var xMin = categoryRange.min;
                        var xMax = categoryRange.max;

                        options.categoryAxis.min = xMin;
                        options.categoryAxis.max = xMax;

                        ds.filter(viewModel.getFilter(xMin, xMax));
                    }
                },
                legend: {
                    position: "bottom"
                },
                seriesDefaults: {
                    //type: "column",
                    type: $("input[name=seriesType_TargetCollection_branchwise]:checked").val(),
                    style: "smooth",
                    stack: $("#salesCollectionInStack_branchwise").prop("checked"),
                    labels: {
                        visible: $("#showlables_BranchWiseTargetCollection").prop("checked"),
                        template: "#= FormatLabels(value)#",
                        rotation: '270',
                        padding: {
                            left: -5
                        },
                    },
                },
                dataSource: dataSource,

                pannable: {
                    lock: "y"
                },
                zoomable: {
                    mousewheel: {
                        lock: "y"
                    },
                    selection: {
                        lock: "y"
                    }
                },
                series: series_BranchWiseTargetCollectionPartial,
                valueAxis: {
                    line: {
                        visible: true,
                    },
                    labels: {
                        rotation: 'auto',
                        template: "#= FormatLabels(value)#"
                    },
                    title: { text: amountFigureType }
                },
                seriesColors: colors,
                categoryAxis: {
                    field: "BranchName",
                    labels: {
                        rotation: -45,
                    },
                },
                tooltip: {
                    visible: true,
                    format: "{0}",
                    template: "#= category #: \n #= FormatLabels(value)#"
                },
                dataBound: function (e) {
                    var data = e.sender.dataSource.view();
                    var fieldtype = e.sender.options.series[0].field
                    var max = 0;
                    if (fieldtype == "BranchName") {

                        jQuery.map(data, function (obj) {
                            if (obj.Target > max)
                                max = obj.Target;
                        });
                        var majorunit = Math.max(10, max / 10);
                        e.sender.options.valueAxis.majorUnit = majorunit;
                        e.sender.options.valueAxis.max = max + majorunit;
                    } else {

                        jQuery.map(data, function (obj) {
                            if (obj.Collection > max)
                                max = obj.Collection;
                        });
                        var majorunit = Math.max(10, max / 10);
                        e.sender.options.valueAxis.majorUnit = majorunit;
                        e.sender.options.valueAxis.max = max + majorunit;
                    }
                },
            });
        }


        $(document).ready(function () {
            $('[title="Download"]').tooltip({
                trigger: 'hover'
            });
            $('.icon-arrow-down.Thirdcustom').click(function () {
                $('.dropdown-menu.custom.Thirdslidetoggle').slideToggle(200);
            });
            $("checkbox").not("#salesCollectionInStack_branchwise").uniform();
            createbranchwiseTargetCollectionChart();
            $(document).bind("kendo:skinChange", createbranchwiseTargetCollectionChart);
            $(".sales-collection-options_branchwise").bind("change", function () {  // data-grid toogle chart option in data-grid attribute in button
                if ($('.btnDatagrid_BranchWiseTargetCollectionPartial').data("type") == "Chart")
                    refreshBranchWiseTargetCollectionChart();
                else
                    chart_grid_option_change("btnDatagrid_BranchWiseTargetCollectionPartial", "createbranchwiseTargetCollectionChart");
            });
            $("#showlables_BranchWiseTargetCollection").bind("change", function () {// data-grid toogle chart option in data-grid attribute in button
                var temp = $('.btnDatagrid_BranchWiseTargetCollectionPartial').data("type");
                $('.btnDatagrid_BranchWiseTargetCollectionPartial').data("type", "temp");
                refreshBranchWiseTargetCollectionChart()
                $('.btnDatagrid_BranchWiseTargetCollectionPartial').data("type", temp);
            });
            $('#salesCollectionInStack_branchwise').on('click', function () {// data-grid toogle chart option in data-grid attribute in button
                var temp = $('.btnDatagrid_BranchWiseTargetCollectionPartial').data("type");
                $('.btnDatagrid_BranchWiseTargetCollectionPartial').data("type", "temp");
                refreshBranchWiseTargetCollectionChart()
                $('.btnDatagrid_BranchWiseTargetCollectionPartial').data("type", temp);
            });

        });

        function refreshBranchWiseTargetCollectionChart() {
            if ($(".btnDatagrid_BranchWiseTargetCollectionPartial").data("type") == "Grid")// data-grid toogle chart option in data-grid attribute in div
            {
                $(".btnDatagrid_BranchWiseTargetCollectionPartial").data("type", "Chart");
                createbranchwiseTargetCollectionChart();
                return;
            }
            var chart = $("#TargetCollectionChart_branchwise").data("kendoChart"),
                type = $("input[name=seriesType_TargetCollection_branchwise]:checked").val(),
                stack = $("#salesCollectionInStack_branchwise").prop("checked"),
                IsLebelShow = $("#showlables_BranchWiseTargetCollection").prop("checked");

            for (var i = 0, length = series_BranchWiseTargetCollectionPartial.length; i < length; i++) {
                series_BranchWiseTargetCollectionPartial[i].stack = stack;
                series_BranchWiseTargetCollectionPartial[i].type = type;
            };

            chart.setOptions({
                series: series_BranchWiseTargetCollectionPartial,
            });
            chart.options.series[0].labels.visible = IsLebelShow;
            chart.options.series[1].labels.visible = IsLebelShow;
            if (type == "column") {
                chart.options.series[0].labels.rotation = -90;
                chart.options.series[1].labels.rotation = -90;
            }
            if (type == "bar") {
                chart.options.series[0].labels.rotation = 0;
                chart.options.series[1].labels.rotation = 0;
            }
            chart.refresh();
        }
        $('#apply_@actionPageId').click(function () {
            ChartFilter('@actionPageId', "createbranchwiseTargetCollectionChart");
        });



        //LoadDataGrid function for data-grid
        function LoadDataGrid_BranchWiseTargetCollectionPartial(dataSource, monthField) {
            $('.btnDatagrid_BranchWiseTargetCollectionPartial').data("type", "Grid");
            $("#TargetCollectionChart_branchwise").html('');
            $("#TargetCollectionChart_branchwise").kendoGrid({
                dataSource: dataSource == undefined ? $("#TargetCollectionChart_branchwise").data("kendoChart").dataSource : dataSource,
                height: $("#BranchWiseTargetCollectionPartial").hasClass("portlet-fullscreen") ? 550 : 350,
                groupable: false,
                sortable: true,
                toolbar: [{ template: kendo.template($("#toolbar-template").html()) }],
                excel: {
                    fileName: "BranchWise Target VS Collection Report",
                    allPages: true
                },
                columns: [{
                    field: "BranchName",
                    title: "BranchName",
                    width: 240
                }, {
                    field: "Target",
                    title: "Target",
                    format: "{0:n}",
                    attributes: {
                        style: "text-align: right;"
                    },
                }, {
                    field: "Collection",
                    title: "Collection",
                    format: "{0:n}",
                    attributes: {
                        style: "text-align: right;"
                    },
                }]
            });
        }

        function ChartData_BranchWiseTargetCollectionPartial() {
            var urlData = "?customerCode=&itemCode=&categoryCode=&companyCode=&branchCode=" + branchCodes + "&partyTypeCode=&formCode=";
            $('.btnDatagrid_BranchWiseTargetCollectionPartial').data("type", "Chart");
            createbranchwiseTargetCollectionChart(urlData);
            RefreshChartFilterControl('@actionPageId');
        };


        $(".btnDatagrid_BranchWiseTargetCollectionPartial").click(function () {
            $('.btnDatagrid_BranchWiseTargetCollectionPartial').data("type") == "Chart" ? LoadDataGrid_BranchWiseTargetCollectionPartial() : ChartData_BranchWiseTargetCollectionPartial();
            $("i", this).toggleClass("icon-bar-chart");
        });
        //Export 
        $(".export-pdf").click(function () {
            var chartid = $(this).data("id");
            var chart = $("#" + chartid).getKendoChart();
            var filename = $(this).closest(".portlet-title").find(".custom-modal").html();
            chart.exportPDF({ paperSize: "auto", margin: { left: "1cm", top: "1cm", right: "1cm", bottom: "1cm" } }).done(function (data) {
                kendo.saveAs({

                    dataURI: data,
                    fileName: filename + ".pdf",
                    proxyURL: "//demos.telerik.com/kendo-ui/service/export"
                });
            });
        });

        $(".export-img").click(function () {
            var chartid = $(this).data("id");
            var chart = $("#" + chartid).getKendoChart();
            var filename = $(this).closest(".portlet-title").find(".custom-modal").html();
            chart.exportImage().done(function (data) {
                kendo.saveAs({
                    dataURI: data,
                    fileName: filename + ".png",
                    proxyURL: "//demos.telerik.com/kendo-ui/service/export",

                });
            });
        });

        $(".export-svg").click(function () {
            var chartid = $(this).data("id");
            var chart = $("#" + chartid).getKendoChart();
            var filename = $(this).closest(".portlet-title").find(".custom-modal").html();
            chart.exportSVG().done(function (data) {
                kendo.saveAs({
                    dataURI: data,
                    fileName: filename + ".svg",
                    proxyURL: "//demos.telerik.com/kendo-ui/service/export"
                });
            });
        });
    </script>
</div>

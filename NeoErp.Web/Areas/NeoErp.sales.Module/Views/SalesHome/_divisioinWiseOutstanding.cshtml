    <div class="portlet-body">
        <script type="text/x-kendo-template" id="toolbar-template">
            <div class="k-header k-grid-toolbar pull-right">

                <a class="k-button k-button-icontext k-grid-excel" href="javascript:">
                    <i class="fa fa-file-excel-o"></i>
                </a>
        </script>
        <div class="k-content wide">
            <div id="DivisioinWiseOutstandingChart"></div>
            <div class="overlay"><div>No data available</div></div>
            <div class="AmountFigureType"></div>
            <div class="DisplayFilterContent"><a href="javascript:;" data-toggle="tooltip" title=""></a></div>
        </div>
    </div>

    <script>
        //initialize variables
        var config_DivisioinWiseOutstanding = {
            url: window.location.protocol + "//" + window.location.host + "/api/SalesDashboard/GetDivisionOutStanding",
            dateFormat: $("input[name=DateFormat_DivisioinWiseOutstanding]:checked").val(),
            fieldValue: $("input[name=fieldType_DivisioinWiseOutstanding]:checked").val(),
            series: [{
                field: "Amount",
                name: "Amount"
            }],
            isStack: false,
            showLabel: $("#showLabel_DivisioinWiseOutstanding").prop("checked"),
            color: ["#8A2BE2", "#ADFF2F", "#5bc0de", "#5cb85c", "#f2b661"],
            seriesType: $("input[name=seriesType_DivisioinWiseOutstanding]:checked").val(),
            categoryField: "DivisionName",
            categoryTitle: '',
            sortField: "DivisionName",

            _oldData: {
                dateFormat: $("input[name=DateFormat_DivisioinWiseOutstanding]:checked").val(),
                fieldValue: $("input[name=fieldType_DivisioinWiseOutstanding]:checked").val()
            },

        };
        var _oldConfig_DivisioinWiseOutstanding = JSON.stringify(config_DivisioinWiseOutstanding);



        function loadDataSource_DivisioinWiseOutstanding() {

            reportFilter = reportFilter == undefined ? ReportFilter.filterAdditionalData() : reportFilter;
            var dateformat = $("input[name=DateFormat_DivisioinWiseOutstanding]:checked").val();

            var dataSource = new kendo.data.DataSource({
                transport: {
                    read: {
                        url: config_DivisioinWiseOutstanding.url,
                        dataType: "json", // <-- The default was "jsonp".
                        type: "POST",
                        contentType: "application/json; charset=utf-8"
                    },
                    parameterMap: function (options, type) {
                        var paramMap = JSON.stringify($.extend(options, reportFilter));
                        delete paramMap.$inlinecount; // <-- remove inlinecount parameter.
                        delete paramMap.$format; // <-- remove format parameter.
                        return paramMap;
                    }
                },
                requestStart: function () {
                    if (IsDataGrid != "Grid") {
                        kendo.ui.progress($("#DivisioinWiseOutstandingChart"), true);
                    }
                },
                requestEnd: function () {
                    kendo.ui.progress($("#DivisioinWiseOutstandingChart"), false);
                },
                schema: {
                    parse: function (items) {
                        var item,
                            result = [];
                        var showzerovalue = $("#showzerovalue_DivisioinWiseOutstanding").prop("checked");

                        if (showzerovalue) {
                            for (var i = 0; i < items.length; i++) {
                                item = items[i];
                                result.push(item);
                            }
                        }
                        else {
                            for (var i = 0; i < items.length; i++) {
                                item = items[i];
                                if (item.Amount !== 0 && item.Quantity !== 0) {
                                    result.push(item);
                                }
                            }
                        }


                        return result;
                    }
                },
                group: config_DivisioinWiseOutstanding.group,
                sort: {
                    field: config_DivisioinWiseOutstanding.sortField,
                    dir: "asc"
                }

            });

            $("#DivisioinWiseOutstanding .DisplayFilterContent a").text("");
            var IsDataGrid = $('.btnGrid_DivisioinWiseOutstanding').data("type");
            if (IsDataGrid == "Grid") {
                CreateGrid_DivisioinWiseOutstanding(dataSource);
                return;
            }

            $('.btnGrid_DivisioinWiseOutstanding').data("type", "Chart");
            CreateChart_DivisioinWiseOutstanding(dataSource);
            //CreateGrid_DivisioinWiseOutstanding(dataSource);
        }
        function CreateChart_DivisioinWiseOutstanding(dataSource) {
            
            $('.btnGrid_DivisioinWiseOutstanding').data("type", "Chart");
            $("#DivisioinWiseOutstandingChart").html('');
            $("#DivisioinWiseOutstandingChart").removeAttr("style");
            $("#DivisioinWiseOutstandingChart").removeAttr("class");
            $("#DivisioinWiseOutstandingChart").kendoChart({
                chartArea: {
                    height: ($("#DivisioinWiseOutstandingChart").hasClass("portlet-fullscreen")) ? 550 : 350,
                },
                onDrag: function (e) {
                    var chart = e.sender;
                    var ds = chart.dataSource;
                    var options = chart.options;

                    var categoryRange = e.axisRanges.CategoryAxis;

                    if (categoryRange) {
                        var xMin = categoryRange.min;
                        var xMax = categoryRange.max;

                        options.categoryAxis.min = xMin;
                        options.categoryAxis.max = xMax;

                        ds.filter(viewModel.getFilter(xMin, xMax));
                    }
                },
                pannable: {
                    lock: "y"
                },
                zoomable: {
                    mousewheel: {
                        lock: "y"
                    },
                    selection: {
                        lock: "y"
                    }
                },
                dataSource: dataSource,
                legend: {
                    position: "bottom"
                },
                seriesColors: config_DivisioinWiseOutstanding.color,
                seriesDefaults: {
                    type: config_DivisioinWiseOutstanding.seriesType,
                    labels: {
                        visible: config_DivisioinWiseOutstanding.showLabel,
                        template: "#= FormatLabels(value)#",
                        rotation: '270',
                        padding: {
                            left: -5
                        },
                    },
                    style: "smooth",
                },
                series: config_DivisioinWiseOutstanding.series,
                categoryAxis: [
                    {
                       visible:false
                    }, {
                    field: config_DivisioinWiseOutstanding.categoryField,
                    labels: {
                        rotation: -45,
                    },
                    title: { text: config_DivisioinWiseOutstanding.categoryTitle }
                }],
                valueAxis: {
                    line: {
                        visible: true
                    },
                    labels: {
                        rotation: 'auto',
                        template: "#= FormatLabels(value)#"
                    },
                    title: { text: amountFigureType }
                },
                tooltip: {
                    visible: true,
                    format: "{0}",
                    template: "#= FormatLabels(value)#"
                },
                dataBound: function (e) {
                    var maxValue = getMaxValueFromDataSource(e);
                    var majorunit = Math.max(6, maxValue / 6);
                    e.sender.options.valueAxis.majorUnit = majorunit;
                    e.sender.options.valueAxis.max = maxValue + majorunit;
                    e.sender.options.valueAxis.axisCrossingValue = [0, -(maxValue + majorunit)];
                    $("#DivisioinWiseOutstandingChart").next(".overlay").toggle(maxValue <= 0);
                },
               
            });
        }
        function CreateGrid_DivisioinWiseOutstanding(dataSource) {
            
            $("#DivisioinWiseOutstandingChart").html('');
            $("#DivisioinWiseOutstandingChart").removeAttr("style");
            $("#DivisioinWiseOutstandingChart").removeAttr("class");
            $('.btnGrid_DivisioinWiseOutstanding').data("type", "Grid");
            var format = $("input[name=DateFormat_DivisioinWiseOutstanding]:checked").val();
            var monthTitle = "Month";
            dataSource = dataSource == undefined ? $("#DivisioinWiseOutstandingChart").data("kendoChart").dataSource : dataSource;
            if (dataSource.data().length > 0 && dataSource.data()[0].Day != null) {
                monthField = "Day";
                monthTitle = "Days [month : " + dataSource.data()[0].DisplayMonth + "]";
            }
            else {
                monthField = config_DivisioinWiseOutstanding.categoryField;
                monthTitle = "Month"
            }
            $("#DivisioinWiseOutstandingChart").kendoGrid({
                dataSource: dataSource,
                height: $("#DivisioinWiseOutstandingChart").hasClass("portlet-fullscreen") ? 550 : 350,
                groupable: false,
                sortable: true,
                //selectable: "multiple",
                toolbar: [{ template: kendo.template($("#toolbar-template").html()) }],
                excel: {
                    fileName: "Division Wise OutStanding Report",
                    allPages: true
                },
                columns: [{
                    field: monthField,
                    title: monthTitle,
                    width: 240
                }, {
                    field: "Quantity",
                    title: "Quantity",
                    format: "{0:n0}",
                    attributes: {
                        style: "text-align: right;"
                    },
                }, {
                    field: "Amount",
                    title: "Amount",
                    format: "{0:n}",
                    attributes: {
                        style: "text-align: right;"
                    },
                }],
                dataBound: function (e) {
                    var gird = e.sender;
                    gird.table.find(".k-grouping-row:not(:first-child)").each(function () {
                        gird.collapseGroup(this);
                    });
                }
            });
        }



        function refreshDivisioinWiseOutstanding() {
            if ($(".btnGrid_DivisioinWiseOutstanding").data("type") == "Grid")// data-grid toogle chart option in data-grid attribute in div
            {
                $(".btnGrid_DivisioinWiseOutstanding").data("type", "Chart");
                loadDataSource_DivisioinWiseOutstanding();
                return;
            }
            
            var chart = $("#DivisioinWiseOutstandingChart").data("kendoChart"),
                type = $("input[name=seriesType_DivisioinWiseOutstanding]:checked").val(),
                stack = $("#Stack_DivisioinWiseOutstanding").prop("checked"),
                IsLebelShow = $("#showLabel_DivisioinWiseOutstanding").prop("checked"),
                fieldValue = $("input[name=fieldType_DivisioinWiseOutstanding]:checked").val();

            for (var i = 0, length = config_DivisioinWiseOutstanding.series.length; i < length; i++) {
                config_DivisioinWiseOutstanding.series[i].stack = stack;
                config_DivisioinWiseOutstanding.series[i].type = type;
                if (fieldValue == "Amount")
                    config_DivisioinWiseOutstanding.series[i].field = "Amount";
                else
                    config_DivisioinWiseOutstanding.series[i].field = "Quantity";

            };

            chart.setOptions({
                series: config_DivisioinWiseOutstanding.series,
            });

            for (var i = 0; i < chart.options.series.length; i++) {
                chart.options.series[i].labels.visible = IsLebelShow;
                if (type == "column") {
                    chart.options.series[i].labels.rotation = -90;
                }
                if (type == "bar") {
                    chart.options.series[i].labels.rotation = 0;
                }
            }

            chart.refresh();
        }
        $('#apply_DivisioinWiseOutstanding').click(function () {
            var checkedDateFormat = $("input[name=DateFormat_DivisioinWiseOutstanding]:checked").val();
            var checkedFieldValue = $("input[name=fieldType_DivisioinWiseOutstanding]:checked").val();
            var IsChanged = false;
            if (config_DivisioinWiseOutstanding._oldData.dateFormat != checkedDateFormat) {
                IsChanged = true;
                config_DivisioinWiseOutstanding = JSON.parse(_oldConfig_DivisioinWiseOutstanding);
                config_DivisioinWiseOutstanding.url = window.location.protocol + "//" + window.location.host + "/api/SalesDashboard/GetDivisionOutStanding?DateFormat=" + $("input[name=DateFormat_DivisioinWiseOutstanding]:checked").val();
                config_DivisioinWiseOutstanding._oldData.dateFormat = checkedDateFormat;

            }
            if (config_DivisioinWiseOutstanding._oldData.fieldValue != checkedFieldValue) {
                refreshDivisioinWiseOutstanding();
                config_DivisioinWiseOutstanding._oldData.fieldValue = checkedFieldValue;
            }
            $('.btnGrid_DivisioinWiseOutstanding').data("type", "Chart");
            ChartFilter('DivisioinWiseOutstanding', "loadDataSource_DivisioinWiseOutstanding", IsChanged);
        });
        $(document).ready(function () {
            loadDataSource_DivisioinWiseOutstanding();

            //start Binding
            $(document).bind("kendo:skinChange", loadDataSource_DivisioinWiseOutstanding);

            $('#DivisioinWiseOutstandingChart').closest('.portlet').find('.reload').click(function () {
                RefreshChartFilterControl('DivisioinWiseOutstanding');
                $('.btnGrid_DivisioinWiseOutstanding').data("type", "Chart");
                config_DivisioinWiseOutstanding = JSON.parse(_oldConfig_DivisioinWiseOutstanding);
                config_DivisioinWiseOutstanding.url = window.location.protocol + "//" + window.location.host + "/api/SalesDashboard/GetDivisionOutStanding?DateFormat=" + $("input[name=DateFormat_DivisioinWiseOutstanding]:checked").val(),
                loadDataSource_DivisioinWiseOutstanding();
            });



            $(".btnGrid_DivisioinWiseOutstanding").click(function () {
                var datasource = $("#DivisioinWiseOutstandingChart").data("kendoChart").dataSource;
                $('.btnGrid_DivisioinWiseOutstanding').data("type") == "Chart" ? CreateGrid_DivisioinWiseOutstanding(datasource) : CreateChart_DivisioinWiseOutstanding(datasource);
                $("i", this).toggleClass("icon-bar-chart");
            });
            $(".options_DivisioinWiseOutstanding").bind("change", function () {  // data-grid toogle chart option in data-grid attribute in button
                if ($('.btnGrid_DivisioinWiseOutstanding').data("type") == "Chart")
                    refreshDivisioinWiseOutstanding();
                else
                    chart_grid_option_change("btnGrid_DivisioinWiseOutstanding", "loadDataSource_DivisioinWiseOutstanding");
            });
            $("#showLabel_DivisioinWiseOutstanding").bind("change", function () {// data-grid toogle chart option in data-grid attribute in button
                var temp = $('.btnGrid_DivisioinWiseOutstanding').data("type");
                $('.btnGrid_DivisioinWiseOutstanding').data("type", "temp");
                refreshDivisioinWiseOutstanding()
                $('.btnGrid_DivisioinWiseOutstanding').data("type", temp);
            });
            $('#Stack_DivisioinWiseOutstanding').on('click', function () {// data-grid toogle chart option in data-grid attribute in button
                var temp = $('.btnGrid_DivisioinWiseOutstanding').data("type");
                $('.btnGrid_DivisioinWiseOutstanding').data("type", "temp");
                refreshDivisioinWiseOutstanding()
                $('.btnGrid_DivisioinWiseOutstanding').data("type", temp);
            });

        });

    </script>
</div>

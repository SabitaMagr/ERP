    <script>
        //initialize variables
        var config_MonthlySalesPlanChart = {
            url: window.location.protocol + "//" + window.location.host + "/api/PlanChartReportApi/GetSalesPlanMonthlyReport",
            childurl: window.location.protocol + "//" + window.location.host + "/api/PlanChartReportApi/GetSalesProductPlanMonthlyReport",
            dateFormat: $("input[name=DateFormat_EmployeeWiseSalesPlan]:checked").val(),
            dateFormat: $("input[name=DateFormat_MonthlySalesPlanChart]:checked").val(),
            fieldValue: $("input[name=fieldType_MonthlySalesPlanChart]:checked").val(),
            series: [{
                field: "PER_DAY_AMOUNT",
                name: "GrossAmount"//"#= group.value #"
            }],
            isStack: false,
            showLabel: $("#showLabel_MonthlySalesPlanChart").prop("checked"),
            color: ["#8A2BE2", "#ADFF2F", "#5bc0de", "#5cb85c", "#f2b661"],
            seriesType: $("input[name=seriesType_MonthlySalesPlanChart]:checked").val(),
            categoryField: "MONTH",
            categoryTitle: '',
            group: { field: "COMPANY_CODE" },
            sortField: "MONTHINT",
            sortFields: [{
                field: "YEAR",
                dir: "asc"
            }, {
                field: "MONTHINT",
                dir: "asc"
            }],
            _oldData: {
                dateFormat: $("input[name=DateFormat_MonthlySalesPlanChart]:checked").val(),
                fieldValue: $("input[name=fieldType_MonthlySalesPlanChart]:checked").val()
            },

        };
        var _oldConfig_MonthlySalesPlanChart = JSON.stringify(config_MonthlySalesPlanChart);



        function loadDataSource_MonthlySalesPlanChart() {
            var url1;
            var param = {};
            if (isChild == undefined) {
                url1 = config_MonthlySalesPlanChart.url;
                param = {
                    DateFormat: config_MonthlySalesPlanChart.dateFormat
                };
            }
            else {
                url1 = config_MonthlySalesPlanChart.childurl;
                param = { DateFormat: config_MonthlySalesPlanChart.dateFormat, month: MonthCode };

            }

            reportFilter = reportFilter == undefined ? ReportFilter.filterAdditionalData() : reportFilter;
            var filter = $.extend(true, {}, reportFilter);
            config_MonthlySalesPlanChart.dateFormat = $("input[name=DateFormat_MonthlySalesPlanChart]:checked").val();
            config_MonthlySalesPlanChart.showLabel = $("#showLabel_MonthlySalesPlanChart").prop("checked");
            var dataSource = new kendo.data.DataSource({
                transport: {
                    read: {
                        url: Arg.url(url1, param), // url:Arg.url(config_MonthlySalesPlanChart.url, { DateFormat: config_MonthlySalesPlanChart.dateFormat }),
                        dataType: "json", // <-- The default was "jsonp".
                        type: "POST",
                        contentType: "application/json; charset=utf-8"
                    },
                    parameterMap: function (options, type) {
                        var paramMap = JSON.stringify($.extend(options, filter));
                        delete paramMap.$inlinecount; // <-- remove inlinecount parameter.
                        delete paramMap.$format; // <-- remove format parameter.
                        return paramMap;
                    }
                },
                requestStart: function () {
                    if (IsDataGrid != "Grid") {
                        kendo.ui.progress($("#MonthlySalesPlanChartChart"), true);
                    }
                },
                requestEnd: function () {
                    kendo.ui.progress($("#MonthlySalesPlanChartChart"), false);
                },
                schema: {
                    parse: function (items) {
                        var item,
                            result = [];
                        var showzerovalue = $("#showzerovalue_MonthlySalesPlanChart").prop("checked");

                        if (showzerovalue) {
                            for (var i = 0; i < items.length; i++) {
                                item = items[i];
                                result.push(item);
                            }
                        }
                        else {
                            for (var i = 0; i < items.length; i++) {
                                item = items[i];
                                if (item.Amount !== 0 && item.Quantity !== 0) {
                                    result.push(item);
                                }
                            }
                        }


                        return result;
                    }
                },
                group: config_MonthlySalesPlanChart.group,
                sort: config_MonthlySalesPlanChart.sortFields
                //{
                //    field: config_MonthlySalesPlanChart.sortField,
                //    dir: "asc"
                //}

            });

            $("#MonthlySalesPlanChart .DisplayFilterContent a").text("");
            var IsDataGrid = $('.btnGrid_MonthlySalesPlanChart').data("type");
            if (IsDataGrid == "Grid") {
                CreateGrid_MonthlySalesPlanChart(dataSource);
                return;
            }

            $('.btnGrid_MonthlySalesPlanChart').data("type", "Chart");
            CreateChart_MonthlySalesPlanChart(dataSource);
            //CreateGrid_MonthlySalesPlanChart(dataSource);
        }
        function CreateChart_MonthlySalesPlanChart(dataSource) {

            $('.btnGrid_MonthlySalesPlanChart').data("type", "Chart");
            $("#MonthlySalesPlanChartChart").html('');
            $("#MonthlySalesPlanChartChart").removeAttr("style");
            $("#MonthlySalesPlanChartChart").removeAttr("class");
            dataSource.group(config_MonthlySalesPlanChart.group);

            $("#MonthlySalesPlanChartChart").kendoChart({
                chartArea: {
                    height: ($("#MonthlySalesPlanChartChart").hasClass("portlet-fullscreen")) ? 550 : 350,
                },
                onDrag: function (e) {
                    var chart = e.sender;
                    var ds = chart.dataSource;
                    var options = chart.options;

                    var categoryRange = e.axisRanges.CategoryAxis;

                    if (categoryRange) {
                        var xMin = categoryRange.min;
                        var xMax = categoryRange.max;

                        options.categoryAxis.min = xMin;
                        options.categoryAxis.max = xMax;

                        ds.filter(viewModel.getFilter(xMin, xMax));
                    }
                },
                pannable: {
                    lock: "y"
                },
                zoomable: {
                    mousewheel: {
                        lock: "y"
                    },
                    selection: {
                        lock: "y"
                    }
                },
                dataSource: dataSource,
                legend: {
                    position: "bottom",
                    visible: false
                },

                seriesColors: config_MonthlySalesPlanChart.color,
                seriesDefaults: {
                    type: config_MonthlySalesPlanChart.seriesType,
                    labels: {
                        visible: config_MonthlySalesPlanChart.showLabel,
                        template: "#= FormatLabels(value)#",
                        rotation: '270',
                        padding: {
                            left: -5
                        },
                    },
                    style: "smooth",
                },
                series: config_MonthlySalesPlanChart.series,
                categoryAxis: {
                    field: config_MonthlySalesPlanChart.categoryField,
                    labels: {
                        rotation: -45,
                    },
                    title: { text: config_MonthlySalesPlanChart.categoryTitle }
                },
                valueAxis: {
                    line: {
                        visible: true
                    },
                    labels: {
                        rotation: 'auto',
                      //  template: "#= FormatLabels(value)#"
                        template: "#= GetFormatlongNumber(value) #"
                    },
                    title: { text: amountFigureType }
                },
                tooltip: {
                    visible: true,
                    format: "{0}",
                    template: "#= category #: \n #= FormatLabels(value)# \n #=drillDownToolTipMessage(category)#"
                },
                dataBound: function (e) {
                    var maxValue = getMaxValueFromDataSource(e);
                    var majorunit = Math.max(6, maxValue / 6);
                    e.sender.options.valueAxis.majorUnit = majorunit;
                    e.sender.options.valueAxis.max = maxValue + majorunit;
                    $("#MonthlySalesPlanChartChart").next(".overlay").toggle(maxValue <= 0);
                    e.sender.options.categoryAxis.categories = getCategoryFromDataSource(e);
                    //
                    //if (totalChartList.length > 0) {
                    //    var chart = totalChartList[0];
                    //    totalChartList = totalChartList.splice(1, totalChartList.length);
                    //    loadChartSync(chart);
                    //}

                },
                //added by chandra for series click
                seriesClick: function (e) {
                    //var value = e.dataItem
                    var value = e.dataItem.MONTHINT;
                    if (value == null) {
                        kendo.ui.progress($("#MonthlySalesPlanChartChart"), false);
                        return false;
                    }
                    if (value == "NaN" || "") {
                        kendo.ui.progress($("#MonthlySalesPlanChartChart"), false);
                        return;
                    }
                    if (isNaN(value)) {
                        kendo.ui.progress($("#MonthlySalesPlanChartChart"), false);
                        return;
                    }
                    isChild = true;
                    MonthCode = value;
                    $('#btnBackMonthlyProductSalesPlan').show();
                    kendo.ui.progress($("#MonthlySalesPlanChartChart"), true);
                    //loadDataSource_EmployeeWiseSalesPlan();
                    loadDataSource_MonthlySalesPlanChart();
                    var chart = $("#MonthlySalesPlanChartChart").data("kendoChart");
                    chart.setOptions({
                        categoryAxis: {
                            title: { text: e.category }
                        },
                    });
                    kendo.ui.progress($("#MonthlySalesPlanChartChart"), false);
                },
                //end added by chandra
            });
        }
        function drillDownToolTipMessage(text) {
            if (isChild == undefined || isChild == 'undefined') {
                return '<br/><h6>click to show Item wise sales plan of month: '+text+'</h6>';
            }
            return "";
        }
        function CreateGrid_MonthlySalesPlanChart(dataSource) {

            $("#MonthlySalesPlanChartChart").html('');
            $("#MonthlySalesPlanChartChart").removeAttr("style");
            $("#MonthlySalesPlanChartChart").removeAttr("class");
            $('.btnGrid_MonthlySalesPlanChart').data("type", "Grid");
            var format = $("input[name=DateFormat_MonthlySalesPlanChart]:checked").val();
            var monthTitle = "Month";
            dataSource = dataSource == undefined ? $("#MonthlySalesPlanChartChart").data("kendoChart").dataSource : dataSource;
            if (dataSource.data().length > 0 && dataSource.data()[0].Day != null) {
                monthField = "Day";
                monthTitle = "Days [month : " + dataSource.data()[0].DisplayMonth + "]";
            }
            else {
                monthField = config_MonthlySalesPlanChart.categoryField;
                monthTitle = "Month"
            }
            dataSource.group([]);
            $("#MonthlySalesPlanChartChart").kendoGrid({
                dataSource: dataSource,
                height: $("#MonthlySalesPlanChartChart").hasClass("portlet-fullscreen") ? 550 : 350,
                groupable: false,
                sortable: true,
                //selectable: "multiple",
                toolbar: [{ template: kendo.template($("#toolbar-template").html()) }],
                excel: {
                    fileName: "Sales Plan Report",
                    allPages: true
                },
                columns: [{
                    field: monthField,
                    title: isChild == undefined ? "Month" : "Item",
                    //title: monthTitle,
                    width: 240
                }, {
                    field: "PER_DAY_QUANTITY",
                    title: "Quantity",
                    format: "{0:n0}",
                    attributes:
                    {
                        style: "text-align:right;"
                    },

                }, {
                    field: "PER_DAY_AMOUNT",
                    title: "Amount",
                    format: "{0:n}",
                    attributes:
                    {
                        style: "text-align:right;"
                    },

                    }, {
                        field: "MONTHINT",
                        title: "Month",
                        //width:  240,
                        hidden: isChild ? false : true
                    }

                ],
                dataBound: function (e) {
                    var gird = e.sender;
                    gird.table.find(".k-grouping-row:not(:first-child)").each(function () {
                        gird.collapseGroup(this);
                    });
                }
            });
        }



        function refreshMonthlySalesPlanChart() {
            if ($(".btnGrid_MonthlySalesPlanChart").data("type") == "Grid")// data-grid toogle chart option in data-grid attribute in div
            {
                $(".btnGrid_MonthlySalesPlanChart").data("type", "Chart");
                loadDataSource_MonthlySalesPlanChart();
                return;
            }

            var chart = $("#MonthlySalesPlanChartChart").data("kendoChart"),
                type = $("input[name=seriesType_MonthlySalesPlanChart]:checked").val(),
                stack = $("#Stack_MonthlySalesPlanChart").prop("checked"),
                IsLebelShow = $("#showLabel_MonthlySalesPlanChart").prop("checked"),
                fieldValue = $("input[name=fieldType_MonthlySalesPlanChart]:checked").val();

            for (var i = 0, length = config_MonthlySalesPlanChart.series.length; i < length; i++) {
                config_MonthlySalesPlanChart.series[i].stack = stack;
                config_MonthlySalesPlanChart.series[i].type = type;
                if (fieldValue == "Amount")
                    config_MonthlySalesPlanChart.series[i].field = "PER_DAY_AMOUNT";
                else
                    config_MonthlySalesPlanChart.series[i].field = "PER_DAY_QUANTITY";

            };

            chart.setOptions({
                series: config_MonthlySalesPlanChart.series,
            });

            for (var i = 0; i < chart.options.series.length; i++) {
                chart.options.series[i].labels.visible = IsLebelShow;
                if (type == "column") {
                    chart.options.series[i].labels.rotation = -90;
                }
                if (type == "bar") {
                    chart.options.series[i].labels.rotation = 0;
                }
            }

            chart.refresh();
        }
        $('#apply_MonthlySalesPlanChart').click(function () {
            var checkedDateFormat = $("input[name=DateFormat_MonthlySalesPlanChart]:checked").val();
            var checkedFieldValue = $("input[name=fieldType_MonthlySalesPlanChart]:checked").val();
            var IsChanged = false;
            if (config_MonthlySalesPlanChart._oldData.dateFormat != checkedDateFormat) {
                IsChanged = true;
                config_MonthlySalesPlanChart = JSON.parse(_oldConfig_MonthlySalesPlanChart);
                config_MonthlySalesPlanChart._oldData.dateFormat = checkedDateFormat;

            }
            if (config_MonthlySalesPlanChart._oldData.fieldValue != checkedFieldValue) {
                refreshMonthlySalesPlanChart();
                config_MonthlySalesPlanChart._oldData.fieldValue = checkedFieldValue;
            }
            $('.btnGrid_MonthlySalesPlanChart').data("type", "Chart");
            ChartFilter('MonthlySalesPlanChart', "loadDataSource_MonthlySalesPlanChart", IsChanged);
        });
        var isChild = undefined;
        var MonthCode = 0;
        $(document).ready(function () {
            loadDataSource_MonthlySalesPlanChart();

            //start Binding
            $(document).bind("kendo:skinChange", loadDataSource_MonthlySalesPlanChart);

            $('#MonthlySalesPlanChartChart').closest('.portlet').find('.reload').click(function () {
                RefreshChartFilterControl('MonthlySalesPlanChart');
                $('.btnGrid_MonthlySalesPlanChart').data("type", "Chart");
                config_MonthlySalesPlanChart = JSON.parse(_oldConfig_MonthlySalesPlanChart);
                loadDataSource_MonthlySalesPlanChart();
            });



            $(".btnGrid_MonthlySalesPlanChart").click(function () {
                var datasource = $("#MonthlySalesPlanChartChart").data("kendoChart").dataSource;
                $('.btnGrid_MonthlySalesPlanChart').data("type") == "Chart" ? CreateGrid_MonthlySalesPlanChart(datasource) : CreateChart_MonthlySalesPlanChart(datasource);
                $("i", this).toggleClass("icon-bar-chart");
            });
            $(".options_MonthlySalesPlanChart").bind("change", function () {  // data-grid toogle chart option in data-grid attribute in button
                if ($('.btnGrid_MonthlySalesPlanChart').data("type") == "Chart")
                    refreshMonthlySalesPlanChart();
                else
                    chart_grid_option_change("btnGrid_MonthlySalesPlanChart", "loadDataSource_MonthlySalesPlanChart");
            });
            $("#showLabel_MonthlySalesPlanChart").bind("change", function () {// data-grid toogle chart option in data-grid attribute in button
                var temp = $('.btnGrid_MonthlySalesPlanChart').data("type");
                $('.btnGrid_MonthlySalesPlanChart').data("type", "temp");
                refreshMonthlySalesPlanChart()
                $('.btnGrid_MonthlySalesPlanChart').data("type", temp);
            });
            $('#Stack_MonthlySalesPlanChart').on('click', function () {// data-grid toogle chart option in data-grid attribute in button
                var temp = $('.btnGrid_MonthlySalesPlanChart').data("type");
                $('.btnGrid_MonthlySalesPlanChart').data("type", "temp");
                refreshMonthlySalesPlanChart()
                $('.btnGrid_MonthlySalesPlanChart').data("type", temp);
            });

        });
        $('#btnBackMonthlyProductSalesPlan').click(function () {
            isChild = undefined;
            $('#btnBackMonthlyProductSalesPlan').hide();
            var chart = $("#MonthlySalesPlanChartChart").data("kendoChart");
            chart.setOptions({
                categoryAxis: {
                    title: { text: "" }
                },
            });
            $(".btnGrid_MonthlySalesPlanChart").data("type", "Chart");
            $('.btnGrid_MonthlySalesPlanChart').children().removeClass().addClass('fa fa-table');
            loadDataSource_MonthlySalesPlanChart();

            // $('.btnGrid_EmployeeWiseSalesPlan').data('type') == 'Grid' ? refreshEmployeeWiseSalesPlan() : loadDataSource_EmployeeWiseSalesPlan();
        })


    </script>
</div>

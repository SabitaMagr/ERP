        function CreateEmployeeWiseSalesChart(urlData) {
            urlData = (urlData == undefined) ? '' : urlData;
            var mainUrl = window.location.protocol + "//" + window.location.host + "/api/SalesDashboard/GetEmployeeWiseReport";
            var IsDataGrid = $('.btnEmployeeDatagrid').data("type");
             reportFilter = reportFilter == undefined ? ReportFilter.filterAdditionalData() : reportFilter;
            var dataSource = new kendo.data.DataSource({
                transport: {
                    read: {
                        url: mainUrl + urlData, // <-- Get data from here.
                        dataType: "json", // <-- The default was "jsonp".
                        type: "POST",
                        contentType: "application/json; charset=utf-8"
                    },
                    parameterMap: function (options, type) {
                        var paramMap = JSON.stringify($.extend(options, reportFilter));
                        delete paramMap.$inlinecount; // <-- remove inlinecount parameter.
                        delete paramMap.$format; // <-- remove format parameter.
                        return paramMap;
                    }
                },
                 requestStart: function () {
                    if (IsDataGrid != "Grid") {
                        kendo.ui.progress($("#EmployeeWiseSalesChart"), true);
                    }
                },
                requestEnd: function () {
                    kendo.ui.progress($("#EmployeeWiseSalesChart"), false);
                },
                sort: {
                    field: "EmployeeCode",
                    dir: "asc"
                },
                serverSorting: false,
                serverPaging: true,
                serverFiltering: false,
                pageSize: 20,
            });
            dataProvider = dataSource;
            $("#EmployeeWiseSalesChartPartial .DisplayFilterContent a").text("");
            // data-grid set option on ceate funciton
          
            if (IsDataGrid == "Grid") {
                LoadDataGrid_EmployeeWise(dataSource);
                return;
            }

            LoadEmployeeWiseChart(dataSource,urlData);
            
        }
        function LoadEmployeeWiseChart(dataSource, urlData) {
            $("#EmployeeWiseSalesChart").kendoChart({
                chartArea: {
                    height: ($("#EmployeeWiseSalesChartPartial").hasClass("portlet-fullscreen")) ? 550 : 350,
                },
                onDrag: function (e) {
                    var chart = e.sender;
                    var ds = chart.dataSource;
                    var options = chart.options;

                    var categoryRange = e.axisRanges.CategoryAxis;

                    if (categoryRange) {
                        var xMin = categoryRange.min;
                        var xMax = categoryRange.max;

                        options.categoryAxis.min = xMin;
                        options.categoryAxis.max = xMax;

                        ds.filter(viewModel.getFilter(xMin, xMax));
                    }
                },

                pannable: {
                    lock: "y"
                },
                zoomable: {
                    mousewheel: {
                        lock: "y"
                    },
                    selection: {
                        lock: "y"
                    }
                },
                dataSource: dataSource,
                title: {
                    //text: "Monthly Sales Report"
                },
                legend: {
                    position: "bottom"
                },
                seriesColors: ["#428bca", "#da3b36", "#e67d4a", "#5bc0de", "#5cb85c", "#f2b661"],
                seriesDefaults: {
                    //type: "column",
                    type: $("input[name=seriesType_employeeSales]:checked").val(), // data-grid change chart type on changing chart <-> grid
                    labels: {
                        visible: $("#showlables_employeeSales").prop("checked"),
                        template: "#= FormatLabels(value)#",
                        rotation: '270',
                        padding: {
                            left: -5
                        },
                    }
                },
                valueAxis: {
                    line: {
                        visible: true,
                    },
                    labels: {
                        rotation: 'auto',
                        template: "#= FormatLabels(value)#"
                    },
                    title: { text: amountFigureType }
                },
                series:
                [{
                    field: "Amount",
                    name: "Amount"
                }],
                categoryAxis: {
                    field: "EmployeeName",
                    labels: {
                        rotation: -45,
                    }
                },
                tooltip: {
                    visible: true,
                    format: "{0}",
                    template: "#= FormatLabels(value)#"
                },
                dataBound: function (e) {
                    var data = e.sender.dataSource.view();
                    var fieldtype = e.sender.options.series[0].field
                    var max = 0;
                    if (fieldtype == "Amount") {

                        jQuery.map(data, function (obj) {
                            if (obj.Amount > max)
                                max = obj.Amount;
                        });
                        var majorunit = Math.max(6, max / 6);
                        e.sender.options.valueAxis.majorUnit = majorunit;

                        e.sender.options.valueAxis.max = max + majorunit;
                    } else {

                        jQuery.map(data, function (obj) {
                            if (obj.Quantity > max)
                                max = obj.Quantity;
                        });
                        var majorunit = Math.max(6, max / 6);
                        e.sender.options.valueAxis.majorUnit = majorunit;

                        e.sender.options.valueAxis.max = max + majorunit;
                    }


                    //   e.sender.options.valueAxis.max = max;
                    // $("#EmployeeWiseSalesChartPartial .AmountFigureType").html("<span >" + amountFigureType + "</span>");
                },
                seriesClick: function (e) {

                },
            });
        }
        function RefreshEmployeeWiseSalesChart() {
            if ($(".btnEmployeeDatagrid").data("type") == "Grid")// data-grid toogle chart option in data-grid attribute in div
            {
                $(".btnEmployeeDatagrid").data("type", "Chart");
                CreateEmployeeWiseSalesChart();
                return;
            }
            var chart = $("#EmployeeWiseSalesChart").data("kendoChart"),
            type = $("input[name=seriesType_employeeSales]:checked").val(),
            fieldtype = $("input[name=fieldType_employeeSales]:checked").val(),
            labels = $("#showlables_employeeSales").prop("checked");

            for (var i = 0, length = chart.options.series.length; i < length; i++) {

                series_employeeSales[i].type = type;
            };
            chart.setOptions({
                series: series_employeeSales,
            });
            chart.options.series[0].labels.visible = labels;

            if (type == "pie") {
                chart.options.series[0].categoryField = "Month";
                if (chart.options.categoryAxis.field == "day") {
                    chart.options.series[0].categoryField = "day";
                }
            }

            if (fieldtype == "Quantity") {
                chart.options.series[0].field = "Quantity";
                chart.options.series[0].name = "Quantity";
            }
            else {
                chart.options.series[0].field = "Amount";
                chart.options.series[0].name = "Amount";
            }

            if (type == "column") {
                //chart.options.series[0].labels.position = "top";
                chart.options.series[0].labels.rotation = -90;
            }
            if (type == "bar") {
                //  chart.options.series[0].labels.position = "center";
                chart.options.series[0].labels.rotation = 0;
            }
            chart.refresh();
        }

        //LoadDataGrid_EmployeeWise function for data-grid
        function LoadDataGrid_EmployeeWise(datasource) {
            $("#EmployeeWiseSalesChart").html('');
            $(".btnEmployeeDatagrid").attr("data-type", "Grid");
            $("#EmployeeWiseSalesChart").kendoGrid({
                dataSource: datasource,
                //height: ($("#EmployeeWiseSalesChartPartial").hasClass("portlet-fullscreen")) ? 550 : 350,
                groupable: false,
                sortable: true,
                toolbar: [{ template: kendo.template($("#toolbar-template").html()) }],
                excel: {
                    fileName: "MR wise Sales Report",
                    allPages: true
                },
                columns: [{
                    field: "EmployeeName",
                    title: "Employee Name",
                    width: 240
                }, {
                    field: "Amount",
                    title: "Amount",
                    format: "{0:n}",
                    attributes: {
                        style: "text-align: right;"
                    },
                }]
            });
        }

        function GenerateDataGrid_EmployeeWise() { // data-grid function onClick event of button DataGrid
            $('.btnEmployeeDatagrid').data("type", "Grid");
            var chart = $("#EmployeeWiseSalesChart").data("kendoChart");
            LoadDataGrid_EmployeeWise(chart.dataSource);
        }

        $('#apply_@actionPageId').click(function () {

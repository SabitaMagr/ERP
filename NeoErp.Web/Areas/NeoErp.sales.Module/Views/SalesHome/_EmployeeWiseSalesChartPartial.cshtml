        function MRChartData() {
            var urlData = "?customerCode=&itemCode=&categoryCode=&companyCode=&branchCode=" + branchCodes + "&partyTypeCode=&formCode=";
            $('.btnEmployeeDatagrid').data("type", "Chart");
            CreateEmployeeWiseSalesChart(urlData);
            RefreshChartFilterControl('@actionPageId');

        }



        $(".btnEmployeeDatagrid").click(function () {
            var datasource = $("#EmployeeWiseSalesChart").data("kendoChart").dataSource;
            var type = $('.btnEmployeeDatagrid').data("type");
            if(type=="Chart"){
                GenerateDataGrid_EmployeeWise(datasource);
                $('.btnEmployeeDatagrid').data("type", "Grid");
            }
            else {
                LoadEmployeeWiseChart(datasource);
                $('.btnEmployeeDatagrid').data("type", "Chart");
            }
            //$('.btnEmployeeDatagrid').data("type") == "Chart" ? GenerateDataGrid_EmployeeWise() : MRChartData();
            $("i", this).toggleClass("icon-bar-chart");
        });


        $(document).ready(function () {           
            CreateEmployeeWiseSalesChart();
            $(document).bind("kendo:skinChange", CreateEmployeeWiseSalesChart);
            $(".employeeSales_options").bind("change", function () {// data-grid toogle chart option in data-grid attribute in button
                if ($('.btnEmployeeDatagrid').data("type") == "Chart")
                    RefreshEmployeeWiseSalesChart();
                else
                chart_grid_option_change("btnEmployeeDatagrid", "CreateEmployeeWiseSalesChart");
            });
            $("#showlables_employeeSales").bind("change", function () {               
                var temp = $('.btnEmployeeDatagrid').data("type");
                $('.btnEmployeeDatagrid').data("type", "temp");
                RefreshEmployeeWiseSalesChart();
                $('.btnEmployeeDatagrid').data("type", temp);
            });
        });
        //Export 
        $(".export-pdf").click(function () {
            var chartid = $(this).data("id");
            var chart = $("#" + chartid).getKendoChart();
            var filename = $(this).closest(".portlet-title").find(".custom-modal").html();
            chart.exportPDF({ paperSize: "auto", margin: { left: "1cm", top: "1cm", right: "1cm", bottom: "1cm" } }).done(function (data) {
                kendo.saveAs({

                    dataURI: data,
                    fileName: filename + ".pdf",
                    proxyURL: "//demos.telerik.com/kendo-ui/service/export"
                });
            });
        });

        $(".export-img").click(function () {
            var chartid = $(this).data("id");
            var chart = $("#" + chartid).getKendoChart();
            var filename = $(this).closest(".portlet-title").find(".custom-modal").html();
            chart.exportImage().done(function (data) {
                kendo.saveAs({
                    dataURI: data,
                    fileName: filename + ".png",
                    proxyURL: "//demos.telerik.com/kendo-ui/service/export",

                });
            });
        });

        $(".export-svg").click(function () {
            var chartid = $(this).data("id");
            var chart = $("#" + chartid).getKendoChart();
            var filename = $(this).closest(".portlet-title").find(".custom-modal").html();

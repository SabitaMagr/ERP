                else
                    chart_grid_option_change("CompanyProductionChart", "CreateMonthlyCompanyProductionChart");
            });
            $("#showlablesCompanyProduction").bind("change", function () {
                var temp = $('.monthlyCompanyProductionDatagrid').data("type");
                $('.monthlyCompanyProductionDatagrid').data("type", "temp");
                refreshCompanyProduction();
                $('.monthlyCompanyProductionDatagrid').data("type", temp);
            });


        });


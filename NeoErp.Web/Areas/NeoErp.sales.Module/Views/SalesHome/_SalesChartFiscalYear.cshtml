        <script type="text/x-kendo-template" id="toolbar-template">
            <div class="k-header k-grid-toolbar pull-right">

                <a class="k-button k-button-icontext k-grid-excel" href="javascript:">
                    <i class="fa fa-file-excel-o"></i>
                </a>
        </script>
        <div class="k-content wide">
            <div id="SalesChartFiscalYearChart"></div>
            <div class="overlay"><div>No data available</div></div>
            <div class="AmountFigureType"></div>
            <div class="DisplayFilterContent"><a href="javascript:;" data-toggle="tooltip" title=""></a></div>
        </div>
    </div>

    <script>
        //initialize variables
        var config_SalesChartFiscalYear = {
            url: window.location.protocol + "//" + window.location.host + "/api/SalesDashboard/GetSalesMonthlyFiscalYearReport",
            dateFormat: $("input[name=DateFormat_SalesChartFiscalYear]:checked").val(),
            fieldValue: $("input[name=fieldType_SalesChartFiscalYear]:checked").val(),
            series: [{
                field: "Amount",
                name: "#= group.value #"
            }],
            isStack: false,
            showLabel: $("#showLabel_SalesChartFiscalYear").prop("checked"),
            color: ["#8A2BE2", "#ADFF2F", "#5bc0de", "#5cb85c", "#f2b661"],
            seriesType: $("input[name=seriesType_SalesChartFiscalYear]:checked").val(),
            categoryField: "DisplayMonth",
            categoryTitle: '',
            group: { field: "FiscalYear" },
            sortField: "MonthInt",

            _oldData: {
                dateFormat: $("input[name=DateFormat_SalesChartFiscalYear]:checked").val(),
                fieldValue: $("input[name=fieldType_SalesChartFiscalYear]:checked").val()
            },

        };
        var _oldConfig_SalesChartFiscalYear = JSON.stringify(config_SalesChartFiscalYear);



        function loadDataSource_SalesChartFiscalYear() {
            debugger;
            reportFilter = reportFilter == undefined ? ReportFilter.filterAdditionalData() : reportFilter;
             var filter = $.extend(true, {}, reportFilter);
            config_SalesChartFiscalYear.dateFormat = $("input[name=DateFormat_SalesChartFiscalYear]:checked").val();
             config_SalesChartFiscalYear.showLabel = $("#showLabel_SalesChartFiscalYear").prop("checked");
            var dataSource = new kendo.data.DataSource({
                transport: {
                    read: {
                        url: Arg.url(config_SalesChartFiscalYear.url, {DateFormat:config_SalesChartFiscalYear.dateFormat}),
                        dataType: "json", // <-- The default was "jsonp".
                        type: "POST",
                        contentType: "application/json; charset=utf-8"
                    },
                    parameterMap: function (options, type) {
                        var paramMap = JSON.stringify($.extend(options, filter));
                        delete paramMap.$inlinecount; // <-- remove inlinecount parameter.
                        delete paramMap.$format; // <-- remove format parameter.
                        return paramMap;
                    }
                },
                requestStart: function () {
                    if (IsDataGrid != "Grid") {
                        kendo.ui.progress($("#SalesChartFiscalYearChart"), true);
                    }
                },
                requestEnd: function () {
                    kendo.ui.progress($("#SalesChartFiscalYearChart"), false);
                },
                schema: {
                    parse: function (items) {
                        var item,
                            result = [];
                        var showzerovalue = $("#showzerovalue_SalesChartFiscalYear").prop("checked");

                        if (showzerovalue) {
                            for (var i = 0; i < items.length; i++) {
                                item = items[i];
                                result.push(item);
                            }
                        }
                        else {
                            for (var i = 0; i < items.length; i++) {
                                item = items[i];
                                if (item.Amount !== 0 && item.Quantity !== 0) {
                                    result.push(item);
                                }
                            }
                        }


                        return result;
                    }
                },
                group: config_SalesChartFiscalYear.group,
                sort: {
                    field: config_SalesChartFiscalYear.sortField,
                    dir: "asc"
                }

            });

            $("#SalesChartFiscalYear .DisplayFilterContent a").text("");
            var IsDataGrid = $('.btnGrid_SalesChartFiscalYear').data("type");
            if (IsDataGrid == "Grid") {
                CreateGrid_SalesChartFiscalYear(dataSource);
                return;
            }

            $('.btnGrid_SalesChartFiscalYear').data("type", "Chart");
            CreateChart_SalesChartFiscalYear(dataSource);
            //CreateGrid_SalesChartFiscalYear(dataSource);
        }
        function CreateChart_SalesChartFiscalYear(dataSource) {

            $('.btnGrid_SalesChartFiscalYear').data("type", "Chart");
            $("#SalesChartFiscalYearChart").html('');
            $("#SalesChartFiscalYearChart").removeAttr("style");
            $("#SalesChartFiscalYearChart").removeAttr("class");
            $("#SalesChartFiscalYearChart").kendoChart({
                chartArea: {
                    height: ($("#SalesChartFiscalYearChart").hasClass("portlet-fullscreen")) ? 550 : 350,
                },
                onDrag: function (e) {
                    var chart = e.sender;
                    var ds = chart.dataSource;
                    var options = chart.options;

                    var categoryRange = e.axisRanges.CategoryAxis;

                    if (categoryRange) {
                        var xMin = categoryRange.min;
                        var xMax = categoryRange.max;

                        options.categoryAxis.min = xMin;
                        options.categoryAxis.max = xMax;

                        ds.filter(viewModel.getFilter(xMin, xMax));
                    }
                },
                pannable: {
                    lock: "y"
                },
                zoomable: {
                    mousewheel: {
                        lock: "y"
                    },
                    selection: {
                        lock: "y"
                    }
                },
                dataSource: dataSource,
                legend: {
                    position: "bottom"
                },
                seriesColors: config_SalesChartFiscalYear.color,
                seriesDefaults: {
                    type: config_SalesChartFiscalYear.seriesType,
                    labels: {
                        visible: config_SalesChartFiscalYear.showLabel,
                        template: "#= FormatLabels(value)#",
                        rotation: '270',
                        padding: {
                            left: -5
                        },
                    },
                    style: "smooth",
                },
                series: config_SalesChartFiscalYear.series,
                categoryAxis: {
                    field: config_SalesChartFiscalYear.categoryField,
                    labels: {
                        rotation: -45,
                    },
                    title: { text: config_SalesChartFiscalYear.categoryTitle }
                },
                valueAxis: {
                    line: {
                        visible: true
                    },
                    labels: {
                        rotation: 'auto',
                        template: "#= FormatLabels(value)#"
                    },
                    title: { text: amountFigureType }
                },
                tooltip: {
                    visible: true,
                    format: "{0}",
                    template: "#= category #: \n #= FormatLabels(value)#"
                },
                dataBound: function (e) {
                    var maxValue = getMaxValueFromDataSource(e);
                    var majorunit = Math.max(6, maxValue / 6);
                    e.sender.options.valueAxis.majorUnit = majorunit;
                    e.sender.options.valueAxis.max = maxValue + majorunit;
                    $("#SalesChartFiscalYearChart").next(".overlay").toggle(maxValue <= 0);
                    e.sender.options.categoryAxis.categories = getCategoryFromDataSource(e);
                    //
                    //if (totalChartList.length > 0) {
                    //    var chart = totalChartList[0];
                    //    totalChartList = totalChartList.splice(1, totalChartList.length);
                    //    loadChartSync(chart);
                    //}
                },
                seriesClick: function (e) {
                    if (e.dataItem.Day == null) {
                        var url = window.location.protocol + "//" + window.location.host + "/api/SalesDashboard/GetSalesDailyFiscalYearReport?month=" + e.dataItem.MonthInt + "&dbName=" + e.dataItem.DBName;
                        config_SalesChartFiscalYear.url = url;
                        config_SalesChartFiscalYear.categoryField = "Day";
                        config_SalesChartFiscalYear.categoryTitle = e.dataItem.DisplayMonth;
                        loadDataSource_SalesChartFiscalYear();
                    }
                },
            });
        }
        function CreateGrid_SalesChartFiscalYear(dataSource) {

            $("#SalesChartFiscalYearChart").html('');
            $("#SalesChartFiscalYearChart").removeAttr("style");
            $("#SalesChartFiscalYearChart").removeAttr("class");
            $('.btnGrid_SalesChartFiscalYear').data("type", "Grid");
            var format = $("input[name=DateFormat_SalesChartFiscalYear]:checked").val();
            var monthTitle = "Month";
            dataSource = dataSource == undefined ? $("#SalesChartFiscalYearChart").data("kendoChart").dataSource : dataSource;
            if (dataSource.data().length > 0 && dataSource.data()[0].Day != null) {
                monthField = "Day";
                monthTitle = "Days [month : " + dataSource.data()[0].DisplayMonth + "]";
            }
            else {
                monthField = config_SalesChartFiscalYear.categoryField;
                monthTitle = "Month"
            }
            $("#SalesChartFiscalYearChart").kendoGrid({
                dataSource: dataSource,
                height: $("#SalesChartFiscalYearChart").hasClass("portlet-fullscreen") ? 550 : 350,
                groupable: false,
                sortable: true,
                //selectable: "multiple",
                toolbar: [{ template: kendo.template($("#toolbar-template").html()) }],
                excel: {
                    fileName: "Sales Year Wise Report",
                    allPages: true
                },
                columns: [{
                    field: monthField,
                    title: monthTitle,
                    width: 240
                }, {
                    field: "Quantity",
                    title: "Quantity",
                    format: "{0:n0}",
                    attributes:
                    {
                        style: "text-align:right;"
                    },

                }, {
                    field: "Amount",
                    title: "Amount",
                    format: "{0:n}",
                    attributes:
                    {
                        style: "text-align:right;"
                    },

                }],
                dataBound: function (e) {
                    var gird = e.sender;
                    gird.table.find(".k-grouping-row:not(:first-child)").each(function () {
                        gird.collapseGroup(this);
                    });
                }
            });
        }



        function refreshSalesChartFiscalYear() {
            if ($(".btnGrid_SalesChartFiscalYear").data("type") == "Grid")// data-grid toogle chart option in data-grid attribute in div
            {
                $(".btnGrid_SalesChartFiscalYear").data("type", "Chart");
                loadDataSource_SalesChartFiscalYear();
                return;
            }

            var chart = $("#SalesChartFiscalYearChart").data("kendoChart"),
                type = $("input[name=seriesType_SalesChartFiscalYear]:checked").val(),
                stack = $("#Stack_SalesChartFiscalYear").prop("checked"),
                IsLebelShow = $("#showLabel_SalesChartFiscalYear").prop("checked"),
                fieldValue = $("input[name=fieldType_SalesChartFiscalYear]:checked").val();

            for (var i = 0, length = config_SalesChartFiscalYear.series.length; i < length; i++) {
                config_SalesChartFiscalYear.series[i].stack = stack;
                config_SalesChartFiscalYear.series[i].type = type;
                if (fieldValue == "Amount")
                    config_SalesChartFiscalYear.series[i].field = "Amount";
                else
                    config_SalesChartFiscalYear.series[i].field = "Quantity";

            };

            chart.setOptions({
                series: config_SalesChartFiscalYear.series,
            });

            for (var i = 0; i < chart.options.series.length; i++) {
                chart.options.series[i].labels.visible = IsLebelShow;
                if (type == "column") {
                    chart.options.series[i].labels.rotation = -90;
                }
                if (type == "bar") {
                    chart.options.series[i].labels.rotation = 0;
                }
            }

            chart.refresh();
        }
        $('#apply_SalesChartFiscalYear').click(function () {
            var checkedDateFormat = $("input[name=DateFormat_SalesChartFiscalYear]:checked").val();
            var checkedFieldValue = $("input[name=fieldType_SalesChartFiscalYear]:checked").val();
            var IsChanged = false;
            if (config_SalesChartFiscalYear._oldData.dateFormat != checkedDateFormat) {
                IsChanged = true;
                config_SalesChartFiscalYear = JSON.parse(_oldConfig_SalesChartFiscalYear);
                config_SalesChartFiscalYear._oldData.dateFormat = checkedDateFormat;

            }
            if (config_SalesChartFiscalYear._oldData.fieldValue != checkedFieldValue) {
                refreshSalesChartFiscalYear();
                config_SalesChartFiscalYear._oldData.fieldValue = checkedFieldValue;
            }
            $('.btnGrid_SalesChartFiscalYear').data("type", "Chart");
            ChartFilter('SalesChartFiscalYear', "loadDataSource_SalesChartFiscalYear", IsChanged);
        });
        $(document).ready(function () {
            debugger;
            //loadDataSource_SalesChartFiscalYear();

            //start Binding
            $(document).bind("kendo:skinChange", loadDataSource_SalesChartFiscalYear);

            $('#SalesChartFiscalYearChart').closest('.portlet').find('.reload').click(function () {
                RefreshChartFilterControl('SalesChartFiscalYear');
                $('.btnGrid_SalesChartFiscalYear').data("type", "Chart");
                config_SalesChartFiscalYear = JSON.parse(_oldConfig_SalesChartFiscalYear);
                loadDataSource_SalesChartFiscalYear();
            });



            $(".btnGrid_SalesChartFiscalYear").click(function () {
                var datasource = $("#SalesChartFiscalYearChart").data("kendoChart").dataSource;
                $('.btnGrid_SalesChartFiscalYear').data("type") == "Chart" ? CreateGrid_SalesChartFiscalYear(datasource) : CreateChart_SalesChartFiscalYear(datasource);
                $("i", this).toggleClass("icon-bar-chart");
            });
            $(".options_SalesChartFiscalYear").bind("change", function () {  // data-grid toogle chart option in data-grid attribute in button
                if ($('.btnGrid_SalesChartFiscalYear').data("type") == "Chart")
                    refreshSalesChartFiscalYear();
                else
                    chart_grid_option_change("btnGrid_SalesChartFiscalYear", "loadDataSource_SalesChartFiscalYear");
            });
            $("#showLabel_SalesChartFiscalYear").bind("change", function () {// data-grid toogle chart option in data-grid attribute in button
                var temp = $('.btnGrid_SalesChartFiscalYear').data("type");
                $('.btnGrid_SalesChartFiscalYear').data("type", "temp");
                refreshSalesChartFiscalYear()
                $('.btnGrid_SalesChartFiscalYear').data("type", temp);
            });
            $('#Stack_SalesChartFiscalYear').on('click', function () {// data-grid toogle chart option in data-grid attribute in button
                var temp = $('.btnGrid_SalesChartFiscalYear').data("type");
                $('.btnGrid_SalesChartFiscalYear').data("type", "temp");
                refreshSalesChartFiscalYear()
                $('.btnGrid_SalesChartFiscalYear').data("type", temp);
            });

        });

    </script>
</div>

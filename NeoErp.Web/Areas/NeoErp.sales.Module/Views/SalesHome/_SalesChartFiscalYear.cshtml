            @*<a class="btnDatagrid" href="javascript:;" onclick="CreateGrid_SalesChartFiscalYear();" data-grid="Chart" title="Data grid">*@
            <a class="btnGrid btnGrid_SalesChartFiscalYear" data-type="Chart" data-title="Grid">

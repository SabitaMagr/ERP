                        //        $(vl).trigger('change');
                        //    })
                        //    $('.autoFillNum_' + v.COLNAME.split('_')[1]).trigger('change');
                        //}
                    });
                    $('#salesReferenceOptionModal').modal('toggle');
                    $btn.button('reset');
                }).fail(function (failEx) {

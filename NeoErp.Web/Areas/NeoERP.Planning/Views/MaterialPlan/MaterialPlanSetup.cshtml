                $.ajax({
                    url: window.location.protocol + "//" + window.location.host + "/api/PlanSetupApi/GetPlanDetailValueByPlanCode",
                    data: { plancode: p_code }
                }).success(function (result) {
                    
                    retrievedSalesPlanDetail = result.salesPlanDetail; // old retrieved from database.
                    retrievedItem.selectedItemsList = _.uniq(retrievedItem.selectedItemsList, 'ITEM_CODE');
                    renderView();
                });

            }
            else {
                
                //retrievedItem = angular.element(document.getElementById('selectedItemsList_temp')).scope().param;
                retrievedItem.selectedItemsList = _.uniq(retrievedItem.selectedItemsList, 'ITEM_CODE');
                renderView();
            }

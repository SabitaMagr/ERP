                    startDate: StartDate,
                    endDate: EndDate,
                    branchCode:"01.01",
                    dateFormat: retrievedItem.dateFormat,
                    frequency: retrievedItem.TIME_FRAME_EDESC,
                }
                var $btn = $(this);
                $btn.button('loading');
                $.ajax({
                    url: window.location.protocol + "//" + window.location.host + "/api/MaterialPlanApi/getProductionItemDataForReference",
                    data: param
                }).success(function (result) {
                    
                    var result_length = result.DATA.length;
                    if (result_length < 1) {
                        displayPopupNotification("Reference Data not found.", "info");
                    }
                    //if (result.DATA.length > 0)
                    $('input[type=number]').val('');
                    _.each(result.DATA, function (v, i) {
                        var calValue = 0;
                        //if (condition === "increment") {
                        //    if (planFor === "QUANTITY") {
                        //        calValue = parseFloat(v.QTY) + (parseFloat(v.QTY) * parseFloat(incrementVal) / 100);
                        //    }
                        //    else {
                        //        calValue = parseFloat(v.AMOUNT) + (parseFloat(v.AMOUNT) * parseFloat(incrementVal) / 100);
                        //    }
                        //}
                        //else {
                        //    if (planFor === "QUANTITY") {
                        //        calValue = parseFloat(v.QTY) - (parseFloat(v.QTY) * parseFloat(incrementVal) / 100);
                        //    }
                        //    else {
                        //        calValue = parseFloat(v.AMOUNT) - (parseFloat(v.AMOUNT) * parseFloat(incrementVal) / 100);
                        //    }
                        //}
                        if (planFor === "QUANTITY") {
                            calValue = parseFloat(v.QTY) + (parseFloat(v.QTY) * parseFloat(incrementVal) / 100);
                        }
                        else {
                            calValue = parseFloat(v.AMOUNT) + (parseFloat(v.AMOUNT) * parseFloat(incrementVal) / 100);
                        }

                        if (calValue == "0") {
                            $('input[type=number]').val('');
                        }
                        $("." + v.COLNAME).val(calValue);
                        if (calValue != "0") {
                            $("." + v.COLNAME).trigger('change');

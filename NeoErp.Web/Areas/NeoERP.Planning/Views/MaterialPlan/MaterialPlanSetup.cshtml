    (function () {
        setTimeout(function () {

            retrievedItem = angular.element(document.getElementById('selectedItemsList_temp')).scope().param;
            if (p_code != null && p_code != '' && retrievedItem == null) {
                $.ajax({
                    url: window.location.protocol + "//" + window.location.host + "/api/PlanSetupApi/GetPlanDetailValueByPlanCode",

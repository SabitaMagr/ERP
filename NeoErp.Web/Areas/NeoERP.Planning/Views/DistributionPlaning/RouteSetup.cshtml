@{
    ViewBag.Title = "RouteSetup";
}
<style>
    div.dataTables_length select {
        width: 45px;
    }

    div.dataTables_filter input {
        width: 15em;
        height: 1.5em;
    }

    .size {
        padding: 20px;
    }
</style>

<div class="col-md-12">
    <div class="form-actions right top-gap" style="float:right;">
        <button type="button" class="btn default btn-sm" ng-click="cancel()">Cancel</button>
        <button ng-click="addRoute(routeform.$valid)" type="button" class="btn blue btn-sm">
            <i class="fa fa-check"></i> Save
        </button>
    </div>
    <div class="portlet light bordered mingap">
        <div class="portlet-title c-porlettitle">
            <div class="caption">
                <i class="icon-equalizer font-red-sunglo"></i>
                <span class="caption-subject font-red-sunglo bold uppercase">{{pageName}}</span>

            </div>

        </div>
        <div class="portlet-body form pform-box">
            <!-- BEGIN FORM-->
            <form action="#" class="horizontal-form" name="routeform" novalidate>
                <div class="form-body">
                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                <label for="areacode" class="control-label">Area Code</label>
                                <input type="text" id="AREA_CODE" ng-model="AREA_CODE" name="AREA_CODE" class="form-control" required />
                                <span style="color:red" ng-show="routeform.AREA_CODE.$touched">
                                    <span ng-show="routeform.AREA_CODE.$error.required">Area code is required</span>
                                </span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label for="routename" class="control-label">Route Area Name</label>
                                <input type="text" id="routename" name="AREA_NAME" ng-model="AREA_NAME" class="form-control" required>
                                <span style="color:red" ng-show="routeform.AREA_NAME.$touched">
                                    <span ng-show="routeform.AREA_NAME.$error.required">This field is required.</span>
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
            <!-- END FORM-->

            <div class="row">
                <div class="col-md-12">
                    <!-- BEGIN EXAMPLE TABLE PORTLET-->
                    <div class="portlet light no-gapbottom">
                        <div class="tblresponsive">
                            <div class="portlet-body">
                                <table class="table table-striped table-bordered table-hover common-tbl-cl" datatable="ng" id="routeTable">
                                    <thead>
                                        <tr>
                                            <th style="width:15px">S.N.</th>
                                            <th>Area Code</th>
                                            <th>Area Name</th>
                                            <th style="width:25px">Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr ng-repeat="items in routes">
                                            <td>{{$index +1}}</td>
                                            <td>{{items.AREA_CODE}}</td>
                                            <td>{{items.AREA_NAME}}</td>
                                            <td>
                                                <a ng-click="getRouteByCode(items);"><i class="fa fa-edit text-warning"></i></a>
                                                <a ng-click="deleteRouteByCode(items.AREA_CODE)"><i class="fa fa-trash danger"></i> </a>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


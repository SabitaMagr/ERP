                },
                {
                    field: "BRANCH_EDESC",
                    title: "Branch"
                },
                {
                    field: "PLAN_CODE", title: "Action", sortable: false, filterable: false, width: "90px",
                    template: "#= setAction(PLAN_CODE) #",
                    groupable: false

    function copyCOAPlanModal(el) {
        var id = $(el).data('id');
        $.ajax({
            url: '/Planning/BudgetPlan/CopyPlan',
            data: { planCode: id },
        }).done(function (result) {
            $('.copyContentBody').html('');
            $('.copyContentBody').html(result);
            $('#copyDetail').modal('toggle');
        }).error(function (err) {

        })


    })

    function onSearch($this) {
        var q = $("#txtSearchString").val();
        var grid = $("#grid").data("kendoGrid");
        grid.dataSource.query({
            page: 1,
            pageSize: 50,
            filter: {
                logic: "or",
                filters: [
                    { field: "PLAN_EDESC", operator: "contains", value: q },
                    { field: "START_DATE", operator: "contains", value: q },
                    { field: "END_DATE", operator: "contains", value: q },
                    { field: "SALES_AMOUNT", operator: "contains", value: q },
                    { field: "BRANCH_EDESC", operator: "contains", value: q },
                    { field: "DIVISION_EDESC", operator: "contains", value: q }
                ]
            }
        });
    }
    var data = function (options, type) {
        var paramMap = JSON.stringify($.extend(options, ReportFilter.filterAdditionalData()));
        delete paramMap.$inlinecount; // <-- remove inlinecount parameter.
        delete paramMap.$format; // <-- remove format parameter.
        return paramMap;
    }
    function BindPlanList(pUrl) {
        $("#grid").kendoGrid({
            dataSource: {
                type: "json",
                transport: {
                    read: {
                        url: pUrl, // <-- Get data from here.
                        dataType: "json", // <-- The default was "jsonp".
                        type: "POST",
                        contentType: "application/json; charset=utf-8"
                    },
                    parameterMap: function (options, type) {
                        var paramMap = JSON.stringify($.extend(options, ReportFilter.filterAdditionalData()));
                        delete paramMap.$inlinecount; // <-- remove inlinecount parameter.
                        delete paramMap.$format; // <-- remove format parameter.
                        return paramMap;
                    }
                },
                schema: {
                    model: {
                        fields: {
                            PLAN_EDESC: { type: "string" },
                            START_DATE: { type: "date" },
                            END_DATE: { type: "date" },
                            SALES_AMOUNT: { type: "number" },
                        }
                    }
                },
                pageSize: 20,
            },
            height: window.innerHeight - 200,
            sortable: true,
            reorderable: true,
            groupable: true,
            toolbar: kendo.template($("#toolbar-template").html()),
            resizable: true,
            filterable: {
                extra: false,
                operators: {
                    number: {
                        eq: "Is equal to",
                        neq: "Is not equal to",
                        gte: "is greater than or equal to	",
                        gt: "is greater than",
                        lte: "is less than or equal",
                        lt: "is less than",
                    },
                    string: {
                        eq: "Is equal to",
                        neq: "Is not equal to",
                        startswith: "Starts with	",
                        contains: "Contains",
                        doesnotcontain: "Does not contain",
                        endswith: "Ends with",
                    },
                    date: {
                        eq: "Is equal to",
                        neq: "Is not equal to",
                        gte: "Is after or equal to",
                        gt: "Is after",
                        lte: "Is before or equal to",
                        lt: "Is before",
                    }
                }
            },
            columnMenu: true,
            columnMenuInit: function (e) {
                checkboxItem = $(e.container).find('input[type="checkbox"]');
            },
            pageable: {
                refresh: true,
                buttonCount: 5
            },
            scrollable: {
                virtual: true
            },
            dataBinding: function () {
                record = (this.dataSource.page() - 1) * this.dataSource.pageSize();
            },
            dataBound: function () {
                
                $('div').removeClass('.k-header k-grid-toolbar');
            },
            columns: [
                { title: "SN", template: "#= ++record #", width: "28px" },
                {
                    field: "PLAN_EDESC",
                    title: "Plan",
                    filterable: true,
                    template: "#= SetPlanLink(PLAN_EDESC,PLAN_CODE) #"
                }, {
                    field: "START_DATE",
                    title: "Start Date",
                    format: "{0:yyyy/MM/dd}",
                    attributes: { style: "text-align:right;" },
                }, {
                    field: "END_DATE",
                    title: "End Date",
                    format: "{0:yyyy/MM/dd}",
                    attributes: { style: "text-align:right;" },
                },
                {
                    field: "SALES_AMOUNT",

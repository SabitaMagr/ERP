
@{
    ViewBag.Title = "ReportMailSender";
}

<link href="~/Content/multi-select-master/css/multi-select.css" rel="stylesheet" />
<div class="col-md-12">
    <div class="page-title">
        <i class="icon-bubbles font-dark hide"></i>
        <span class="caption-subject font-dark bold uppercase"></span>
    </div>
</div>
<div class="col-md-6 col-sm-6">
    <div class="portlet light bordered">
        <div class="portlet-title tabbable-line">
            <div class="caption">
                <i class="icon-bubbles font-dark hide"></i>
                <span class="caption-subject font-dark bold uppercase"></span>
            </div>
        </div>
        <div class="portlet-body">
            @Html.Partial("~/Views/Shared/Controls/ComposeMailForm.cshtml")
        </div>
    </div>
</div>

<div class="col-md-6 col-sm-6">
    <div class="portlet light bordered">
        <div class="portlet-title tabbable-line">
            <div class="caption">
                <i class="icon-bubbles font-dark hide"></i>
                <span class="caption-subject font-dark bold uppercase">Chart preview</span><span class="font-sm"> (In case chart loading failure, Please press 'reload' button)</span>
                <span id="ajaxBusy" style="display:none">
                    <i class="fa fa-spinner fa-spin" style="font-size:24px"></i>
                </span>
            </div>
        </div>
        <div class="portlet-body" id="ChartPreview">

        </div>
    </div>
</div>

@section Scripts{
    <script>
        var fileMailSender = new ManualEmailSender({
            gridName: "grid",
            gridRefreshTriggerName: "RunQuery",
            reportName: "VatRegistration"
        });
        $(document).ready(function () {
            fileMailSender.init();
        });
    </script>    
}

<div ng-app="erpApp">
    <div  id="AddUserSetupCtrl" ng-controller="AddUserSetupCtrl" class="content">
        <div class="page-bar">
            <ul class="page-breadcrumb"></ul>
            <div class="actions pull-right actionbutton">
                <div class="btn-group">
                    <a class="btn btn-circle btn-icon-only btn-default " ng-click="AddButtonClickEvent()">
                        <i class="fa fa-plus"></i>
                    </a>
                </div>

            </div>
            <div class="actions pull-left actionbutton">
                <div class="btn-group">
                    <a href="@Url.Action("Index","AccessManager",new {Area=""})" class="btn btn-success">
                        Goto Access Manager
                    </a>
                    @*<a class="btn btn-circle btn-icon-only btn-default ">
                        <i class="fa fa-plus">Goto Access Manager</i>
                    </a>*@
                </div>
            </div>
        </div>
        <div class="portlet light bordered main createPanel" ng-show="createPanel">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-list-alt font-green-haze"></i>
                    <span class="caption-subject font-green-haze bold uppercase">
                        User Setup
                    </span>
                </div>
                <span class="actions pull-right">
                    <button type="button" id="cancelTarget" name="cancelTarget" class="btn btn-default btn-sm" ng-click="Cancel();">Cancel</button>

                    <button type="submit" id="SaveEmployee" name="SaveEmployee" ng-click="SaveUser(UserForm.$valid)" class="btn btn-green btn-sm">{{saveupdatebtn}}</button>
                </span>
            </div><!-- /portlet-title-->
            <div class="portlet-body">
                <div class="row">
                    <form id="UserForm" name="UserForm" novalidate>
                        <div class="col-sm-4 col-md-4">
                            <div class="form-group ">
                                <label class="control-label">
                                    User Name <span style="color:red" ng-show="UserForm.userName.$invalid">
                                        <span ng-show="UserForm.userName.$error.required">*</span>
                                    </span>
                                </label>
                                <input id="userName" ng-model="UserSetup.LOGIN_CODE" name="userName" class="form-control input-sm" required />
                            </div>
                        </div>
                        <div class="col-sm-4 col-md-4">
                            <div class="form-group ">
                                <label class="control-label">
                                    Password <span style="color:red" ng-show="UserForm.password.$invalid">
                                        <span ng-show="UserForm.password.$error.required">*</span>
                                    </span>
                                </label>
                                <input type="password" id="password" ng-model="UserSetup.PASSWORD" name="password" class="form-control input-sm" required />
                            </div>
                        </div>
                        <div class="col-md-4 col-sm-4">
                            <div class="form-group">
                                <label class="control-label">
                                    Company<span style="color:red" ng-show="UserForm.distCompanySelect.$invalid">
                                            <span ng-show="UserForm.distCompanySelect.$error.required">*</span>
                                        </span>
                                </label>
                                <select id="distCompanySelect" name="distCompanySelect" kendo-drop-down-list k-options="distCompanySelectOptions" slim-scroll ng-model="UserSetup.COMPANY_CODE" style="width:100%;" required></select>
                            </div>
                        </div>
                        <div class="col-sm-4 col-md-4">
                            <div class="form-group ">
                                <label class="control-label">
                                    Employee
                                </label>
                                <select id="distEmployeeSelect" name="distEmployeeSelect" kendo-drop-down-list k-options="distEmployeeSelectOptions" slim-scroll ng-model="UserSetup.EMPLOYEE_CODE" style="width:100%;"></select>
                            </div>
                        </div>
                        <div class="col-sm-4 col-md-4">
                            <div class="form-group" style="margin-top: 35px;">

                                <div class="mt-checkbox-list checkboxlist  radio_select">


                                    <span>
                                        <input id="userlock" type="checkbox" ng-model="UserSetup.USER_LOCK_FLAG" ng-true-value="'Y'" ng-false-value="'N'"> User Lock
                                    </span>
                                    <span>
                                        <input id="superlockflag" type="checkbox" ng-model="UserSetup.SUPER_USER_FLAG" ng-true-value="'Y'" ng-false-value="'N'"> Super User
                                    </span>

                                   
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="row collapse in" id="demo">
            <div class="col-md-12">

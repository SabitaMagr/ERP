@{   
    string Under = string.Empty;
    string PageRoot = string.Empty;

    if (ViewBag.PageRoot == null)
    {
        string Area = Html.Area();
        string Controller = Html.Controller();
        string Action = Html.Action();
        PageRoot = (Area != string.Empty ? "/" + Area : "") + "/" + Controller;
    }
    else
    {
        PageRoot = ViewBag.PageRoot;
    }

    Under = AppSecurity.Permissions._get(PageRoot).ParentMenu;
}

@Html.Raw(IntegrationHelpers.GetProfileMenu(0, Under))

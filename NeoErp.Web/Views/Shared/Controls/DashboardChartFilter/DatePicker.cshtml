@using NeoErp.Core.Models.CustomModels

@model DatePickerModel
@{    
    string pageid = Model.ActionPageId;
    ViewData["ActionPageId"] = pageid;
}

<style>
    .selectbox {
        cursor: pointer;
        color: #337ab7;
    }

    div#ndp-nepali-box {
        z-index: 10076 !important;
    }

    .ui-datepicker {
        z-index: 10076 !important;
    }
</style>



<div class="form-group">
    <div class="input-large">
        <select class="dateFilterSelect form-control" id="ddlDatePickerFilter_@pageid" name="DateStep"></select>
    </div>
</div>
<div class="form-group">
    <div class="input-group input-large date-picker input-daterange" data-date="10/11/2012" data-date-format="mm/dd/yyyy">
        <input type="text" id="datePickerBs_@pageid" class="frmDataInput form-control" />

        <span class="input-group-addon">
            BS
        </span>
        <input type="text" class="frmDataInput form-control" id="datePickerAd_@pageid" placeholder="To Date">
        <span class="input-group-addon">
            AD
        </span>
    </div>
    <!-- /input-group -->

</div>



<script src="@Scripts.Url("~/JS/DashboardChartFilter/DateFilter.js")" type="text/javascript"></script>
<script>

    $(document).ready(function () {
         
        @if(Model != null && Model.AppendText && !string.IsNullOrEmpty(Model.TextToAppend))
                {
                    <text>
        DatePicker.init('@Model.AppendText', '@Model.TextToAppend');
        </text>
                }

    });

</script>

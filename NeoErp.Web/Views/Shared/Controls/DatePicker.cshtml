@using NeoErp.Core.Models.CustomModels

@model DatePickerModel

<style>
    .selectbox {
        cursor: pointer;
        color: #337ab7;
    }

    div#ndp-nepali-box {
        z-index: 10076 !important;
    }

    .ui-datepicker {
        z-index: 10076 !important;
    }
</style>




@if (!Model.IsPopUp)
{
    <div class="dateFilter" style="margin-bottom:15px;">
        <div class="input-large">
            <select class="dateFilterSelect form-control" id="ddlDatePickerFilter" name="DateStep"></select>
        </div>
    </div>
    <div class="dateFilter">
        <div class="input-group input-large date-picker input-daterange" data-date="10/11/2012" data-date-format="mm/dd/yyyy">
            <input type="text" id="datePickerBs" class="frmDataInput form-control" />

            <span class="input-group-addon">
                BS
            </span>
            <input type="text" class="frmDataInput form-control" id="datePickerAd" placeholder="To Date">
            <span class="input-group-addon">
                AD
            </span>
        </div>
        <!-- /input-group -->

    </div>
}
else
{
    <span id="spandate" class="thin uppercase hidden-xs color-view bg-default bg-font-default bold uppercase sr-only" style="display:none"></span>
    <a data-toggle="modal" data-target="#form_modal3">
        <div class="pull-right tooltips-date btn btn-circle btn-icon-only btn-default datepicker-gap date-tooltip" data-placement="left" data-html="true" data-container="body" data-toggle="tooltip">
            <i class="icon-calendar"></i>
        </div>
    </a>
    <div id="form_modal3" class="modal fade" role="dialog" aria-hidden="true">
        <div class="modal-dialog modal-custom">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                    <h4 class="modal-title"><span class="fa fa-calendar-check-o"></span>
Filter Date & Time</h4>
                </div>

                <div class="modal-body">
                    <div class="form-horizontal1">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <div class="input-large">
                                        <select class="dateFilterSelect form-control" id="ddlDatePickerFilter" name="DateStep"></select>
                                    </div>
                                </div>
                                <div class="form-group">

                                    <div class="input-group input-large date-picker input-daterange" data-date="10/11/2012" data-date-format="mm/dd/yyyy">
                                        <input type="text" id="datePickerBs" class="frmDataInput form-control" />

                                        <span class="input-group-addon">
                                            BS
                                        </span>
                                        <input type="text" class="frmDataInput form-control" id="datePickerAd" placeholder="To Date">
                                        <span class="input-group-addon">
                                            AD
                                        </span>
                                    </div>
                                    <!-- /input-group -->
                                </div>
                            

                            </div>

                        </div>
                    </div>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn dark btn-outline" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-green applydp" data-dismiss="modal" id="applydp">Apply</button>
                </div>
            </div>
        </div>
    </div>
}




<script src="@Scripts.Url("~/JS/DateFilter.js?v115")" type="text/javascript"></script>
<script>

    $(document).ready(function () {
        
        @if(Model != null && Model.AppendText && !string.IsNullOrEmpty(Model.TextToAppend))
                {
                    <text>
        DatePicker.init('@Model.AppendText', '@Model.TextToAppend');
        </text>
                }

        $('[data-toggle="tooltip"]').tooltip();

    });

</script>

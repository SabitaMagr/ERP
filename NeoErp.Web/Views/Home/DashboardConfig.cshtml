@using NeoErp.Core.Models.CustomModels
@model FileMailAttachment
@{
    Layout = "~/Views/Shared/_LayoutNew.cshtml";
}
<style>
    input#startDate {
        padding: 6px !important;
    }

    .note-editable {
        max-height: 500px !important;
    }

    hr.style-three {
        border: 0;
        border-bottom: 1px dashed #ccc;
        background: #999;
    }

    #gauge-container {
        width: 404px;
        height: 404px;
        text-align: center;
        margin: 0 auto 30px auto;
    }

    #gauge {
        display: inline-block;
        width: 230px;
        height: 130px;
        margin: 0 auto;
    }
</style>

<style>
    .form-wizard .steps {
        padding: 0 0 !important;
        margin-bottom: 0 !important;
        background-color: #fff;
        background-image: none;
        filter: none;
        border: 0px;
        box-shadow: none;
    }

    .minicolors-theme-default .minicolors-input {
        height: 20px;
        width: 100% !important;
        display: inline-block;
        padding-left: 26px;
    }

    .form-control {
        /* border-radius: 4px !important; */
        height: 100% !important;
    }

    .minicolors-theme-default .minicolors-input {
        height: 31px;
    }

    .minicolors-theme-default.minicolors {
        width: auto;
        display: block;
    }
    .query_form .k-widget.k-dropdown.k-header, .query_form .k-widget.k-dropdown.k-header, .query_form .k-widget.k-combobox.k-header.k-combobox-clearable {
        width: 100% !important;
    }
    .query_form input.form-control,.query_form textarea.form-control {
        border: solid #ddd 1px;
    }
      .k-list.k-reset
    {
        max-height:250px !important;
        overflow:auto !important;
    }
</style>

<div class="col-md-6 col-lg-6">
    <div class="portlet portlet-sortable light bordered">
        <div class="portlet-title">
            <div class="caption">
                <i class="icon-bar-chart font-green-haze"></i>
                <span class="caption-subject bold uppercase font-green-haze custom-modal">Matric Configuration</span>
            </div>
            <div class="tools">
                <a href="javascript:;" class="collapse"></a>

            </div>
        </div>
        <div class="portlet-body">
            <div class="margin-0">
                <div class="form-body query_form">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label class="control-label">Widgets Name</label>

                                <div class="">
                                    <input id="Widgetsname" class="form-control" data-bind="value: widgetsName" />
                                </div>
                            </div>
                        </div>
                        </div>
                    <div class="row">
                        <div class="col-xs-12 col-sm-6 col-md-3">
                            <div class="form-group">
                                <label class="control-label">Select Customer</label>
                                   <select id="CustomerSelect"></select>
                               
                            </div>
                        </div>
                        <div class="col-xs-12 col-sm-6 col-md-3">
                            <div class="form-group">
                                <label class="control-label">Select Item</label>

                                
                                    <select id="ItemsSelect"></select>
                               
                            </div>
                        </div>

                        <div class="col-xs-12 col-sm-6 col-md-3">
                            <div class="form-group">
                                <label class="control-label">Select Supplier</label>

                                    <select id="supplierSelect"></select>
                                
                            </div>
                        </div>
                        <div class="col-xs-12 col-sm-6 col-md-3">
                            <div class="form-group">
                                <label class="control-label">Select Division</label>

                                
                                    <select id="DivisionSelect"></select>
                             
                            </div>
                        </div>
                        </div>
                    <div class="row">
                        <div class="col-xs-12 col-sm-6 col-md-3">
                            <div class="form-group">
                                <label class="control-label">Select Ledger</label>

                             
                                    <select id="LedgerSelect"></select>
                           
                            </div>
                        </div>
                        </div>
                    <div class="row">
                        <div class="col-xs-12 col-sm-12 col-md-12">
                            <div class="form-group">
                                <label class="control-label">Sql Query</label>
                                <textarea class="wysihtml5 form-control" cols="20" data-bind="value: sqlquery" id="sqlquery" name="sqlquery" rows="10"></textarea>
                                <div id="editor_error">#customercode# #itemcode# #suppliercode# #divisioncode# #ledgercode#</div>
                            </div>
                        </div>
                        </div>
                    </div>


                    @*<div class="form-group">
                            <label class="control-label">Template(sqlQuery="#sqlquery#")</label>
                            <textarea class="wysihtml5 form-control" cols="20" data-bind="value: Template" data-error-container="#editor_error" id="MessageTemplate" name="MessageTemplate" rows="20"></textarea>

                            <div id="editor_error"></div>
                        </div>*@


                </div>
            </div>

            <div class="btn-group btn-group-devided" data-toggle="buttons">
                <button data-bind="click: saveData" type="button" class="btn btn-green" id="sendMail" data-loading-text="<i class='fa fa-circle-o-notch fa-spin'></i> ">Create</button>
            </div>
        </div>


    </div>











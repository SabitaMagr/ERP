
@{
    ViewBag.Title = "BulkControlIndex";
    Layout = "~/Views/Shared/_LayoutNew.cshtml";
}

<style>
    .dropdown-header {
        border-width: 0 0 1px 0;
        text-transform: uppercase;
    }

        .dropdown-header > span {
            display: inline-block;
            padding: 10px;
        }

            .dropdown-header > span:first-child {
                width: 50px;
            }

    .selected-value {
        display: inline-block;
        vertical-align: middle;
        width: 24px;
        height: 24px;
        background-size: 100%;
        margin-right: 5px;
        border-radius: 50%;
    }

    #customers-list .k-item {
        line-height: 1em;
        min-width: 300px;
    }

    /* Material Theme padding adjustment*/

    .k-material #customers-list .k-item,
    .k-material #customers-list .k-item.k-state-hover,
    .k-materialblack #customers-list .k-item,
    .k-materialblack #customers-list .k-item.k-state-hover {
        padding-left: 5px;
        border-left: 0;
    }

    #customers-list .k-item > span {
        -webkit-box-sizing: border-box;
        -moz-box-sizing: border-box;
        box-sizing: border-box;
        display: inline-block;
        vertical-align: top;
        margin: 20px 10px 10px 5px;
    }

        #customers-list .k-item > span:first-child {
            -moz-box-shadow: inset 0 0 30px rgba(0,0,0,.3);
            -webkit-box-shadow: inset 0 0 30px rgba(0,0,0,.3);
            box-shadow: inset 0 0 30px rgba(0,0,0,.3);
            margin: 10px;
            width: 50px;
            height: 50px;
            border-radius: 50%;
            background-size: 100%;
            background-repeat: no-repeat;
        }

    #customers-list h3 {
        font-size: 1.2em;
        font-weight: normal;
        margin: 0 0 1px 0;
        padding: 0;
    }

    #customers-list p {
        margin: 0;
        padding: 0;
        font-size: .8em;
    }
    
   .hideShow .btn {
    padding: 5px 16px;
}
   .page-bar {
    padding: 0px;
    background-color:rgba(51, 48, 48, 0.06);
    margin-bottom: 25px;
    -webkit-border-radius: 4px;
    border-radius: 4px;
    margin-top:25px;
    margin-left:10px;
}
   .control-table th b
   {
       font-weight:600 !important;

   }
   .grey-cascade
   {
       background-color:#fff !important;
   }
   .divList .portlet-body {
       padding-left:0px !important;
       padding-right:0px !important;
   }
    .control-table th {
        border-bottom: none !important;
    }
       .control-table td
           {
           vertical-align:middle !important;
           }

       #Add h3
       {
font-size: 15px !important;
    margin: 0 !important;
    padding: 15px !important;
       }
       #divConfirm h4{
           font-size:13px !important;
       }
    
</style>

<div class="page-bar">
    <ul class="page-breadcrumb">

        <li>
            <i class="fa fa-cog"></i>
            <a href="~/MenuSetting/Index">Menu Settings</a>
            <i class="fa fa-angle-right"></i>
        </li>
        <li>
            <i class="fa fa-pencil-square-o"></i>
            <a href="~/MenuControl/Index">Menu Control</a>
            <i class="fa fa-angle-right"></i>
        </li>
        <li>
            <i class="icon-basket"></i>
            <a href="~/MenuControl/BulkControlIndex">Bulk Control</a>
        </li>
    </ul>
</div>

<div class="divList" ng-app="bulkApp">
    <div class="" ng-controller="bulkCtrl">
        <div class="col-md-12">
            <!-- BEGIN EXAMPLE TABLE PORTLET-->
            <div class="portlet box grey-cascade">
                <div class="portlet-title">
                    <div class="caption">
                        <i class="fa fa-pencil-square-o"></i>Menu Control
                    </div>
                    <div class="tools">
                        <a href="javascript:;" class="collapse">
                        </a>
                        <a href="#portlet-config" data-toggle="modal" class="config">
                        </a>
                        <a href="javascript:;" class="reload" ng-click="ReloadGrid()">
                        </a>
                        <a href="javascript:;" class="remove">
                        </a>
                    </div>
                </div>
                <div class="portlet-body">
                    <div class="tblresponsive">
                        <table class="table table-hover datatable control-table">
                            <thead>
                                <tr>
                                    <th style="width: 418px;"><b>User Name</b></th>
                                    <th><b>Menu Name</b></th>
                                </tr>
                            </thead>
                            <tbody>
                                @{

                                var count = 1;
                                }
                                <tr ng-repeat="(i, menuPermission) in permissionList track by $index   ">

                                    <td>
                                        {{menuPermission.label}}
                                    </td>
                                    <td style="width:430px">
                                        @*@Html.Partial("~/Views/Shared/Controls/CustomerFilter.cshtml")*@
                                        @{

                                        @Html.Partial("~/Views/Shared/_BulkMenuPermission.cshtml", count)
                                        }

                                    </td>
                                    @{
                                    count = count+1;
                                    }
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    @*<input type="button" class="btn btn-default" value="Save" ng-click="SaveBulkData()" />
                    <input type="button" class="btn btn-danger" value="Cancel" ng-click="Cancel()" />*@
                    </div>
                     
            </div>
        </div>
    </div>
</div>
